#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  # Check if database exists and has tables
  if ./bin/rails runner "ActiveRecord::Base.connection.tables.any?" 2>/dev/null; then
    echo "Database exists, running migrations..."
    ./bin/rails db:migrate
  else
    echo "Fresh database detected, running migrations..."
    # In production, we use migrations instead of schema:load to avoid the protection error
    DISABLE_DATABASE_ENVIRONMENT_CHECK=1 ./bin/rails db:migrate db:seed
  fi
fi

exec "${@}"
