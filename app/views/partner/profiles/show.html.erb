<% content_for :title, "Ma fiche annuaire - Partenaire - Idéal Reprise" %>

<div class="max-w-4xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900">Ma fiche annuaire</h1>
    <div class="flex items-center gap-3">
      <%= link_to partners_path, class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50" do %>
        Voir ma fiche publique
      <% end %>
      <%= link_to edit_partner_profile_path, class: "px-4 py-2 bg-partner-600 text-white rounded-lg hover:bg-partner-700" do %>
        Modifier
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-start justify-between mb-6">
      <div>
        <h2 class="text-xl font-bold text-gray-900">
          <%= current_user.company_name || current_user.full_name %>
        </h2>
        <p class="text-gray-600">
          <%= @profile.partner_type.present? ? @profile.partner_type.humanize : 'Partenaire' %>
        </p>
        <% if @profile.validation_status == 'approved' %>
          <span class="inline-flex items-center gap-1 px-3 py-1 mt-2 bg-green-100 text-green-800 text-sm font-medium rounded-full">
            ✓ Profil validé
          </span>
        <% elsif @profile.validation_status == 'pending' %>
          <span class="inline-flex items-center gap-1 px-3 py-1 mt-2 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">
            ⏳ En attente de validation
          </span>
        <% end %>
      </div>
    </div>

    <!-- Informations -->
    <div class="space-y-4">
      <% if @profile.description.present? %>
        <div>
          <div class="text-sm font-medium text-gray-700 mb-1">Description</div>
          <p class="text-gray-900"><%= @profile.description %></p>
        </div>
      <% end %>

      <% if @profile.services_offered.present? %>
        <div>
          <div class="text-sm font-medium text-gray-700 mb-1">Services proposés</div>
          <p class="text-gray-900"><%= @profile.services_offered %></p>
        </div>
      <% end %>

      <% if @profile.coverage_area.present? %>
        <div>
          <div class="text-sm font-medium text-gray-700 mb-1">Secteur couvert</div>
          <p class="text-gray-900">
            <%= @profile.coverage_area.humanize %>
            <% if @profile.coverage_details.present? %>
              • <%= @profile.coverage_details %>
            <% end %>
          </p>
        </div>
      <% end %>

      <% if @profile.intervention_stages.present? && @profile.intervention_stages.any? %>
        <div>
          <div class="text-sm font-medium text-gray-700 mb-1">Stades d'intervention (CRM)</div>
          <div class="flex flex-wrap gap-2">
            <% @profile.intervention_stages.each do |stage| %>
              <span class="px-3 py-1 bg-partner-100 text-partner-700 rounded-full text-sm"><%= stage %></span>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @profile.industry_specializations.present? && @profile.industry_specializations.any? %>
        <div>
          <div class="text-sm font-medium text-gray-700 mb-1">Secteurs d'activité visés</div>
          <div class="flex flex-wrap gap-2">
            <% @profile.industry_specializations.each do |sector| %>
              <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm"><%= sector %></span>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @profile.website.present? %>
        <div>
          <div class="text-sm font-medium text-gray-700 mb-1">Site web</div>
          <%= link_to @profile.website, @profile.website, target: '_blank', class: 'text-partner-600 hover:text-partner-800' %>
        </div>
      <% end %>

      <% if @profile.calendar_link.present? %>
        <div>
          <div class="text-sm font-medium text-gray-700 mb-1">Prendre rendez-vous</div>
          <%= link_to 'Réserver un créneau', @profile.calendar_link, target: '_blank', class: 'text-partner-600 hover:text-partner-800' %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Statistiques</h3>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <div class="text-sm text-gray-600">Vues profil (30j)</div>
        <div class="text-2xl font-bold text-gray-900"><%= @profile.views_count %></div>
      </div>
      <div>
        <div class="text-sm text-gray-600">Contacts (30j)</div>
        <div class="text-2xl font-bold text-gray-900"><%= @profile.contacts_count %></div>
      </div>
    </div>
  </div>

  <!-- Subscription -->
  <% if @profile.directory_subscription_expires_at.present? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Abonnement annuaire</h3>
      <div class="flex items-center justify-between">
        <div>
          <% if @profile.subscription_active? %>
            <div class="text-green-600 font-medium">Actif</div>
            <div class="text-sm text-gray-600 mt-1">
              Expire le <%= l(@profile.directory_subscription_expires_at, format: :long) %>
            </div>
          <% else %>
            <div class="text-red-600 font-medium">Expiré</div>
            <div class="text-sm text-gray-600 mt-1">
              Expiré le <%= l(@profile.directory_subscription_expires_at, format: :long) %>
            </div>
          <% end %>
        </div>
        <%= link_to 'Gérer mon abonnement', partner_subscription_path, class: 'text-partner-600 hover:text-partner-800 text-sm font-medium' %>
      </div>
    </div>
  <% else %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-5 h-5 text-yellow-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <div class="flex-1">
          <div class="font-medium text-yellow-900">Abonnement annuaire requis</div>
          <div class="text-sm text-yellow-700 mt-1">
            Pour apparaître dans l'annuaire des partenaires, vous devez souscrire à un abonnement annuel.
          </div>
          <%= link_to 'Souscrire maintenant', partner_subscription_path, class: 'inline-flex items-center gap-1 mt-2 text-sm font-medium text-yellow-700 hover:text-yellow-900' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
