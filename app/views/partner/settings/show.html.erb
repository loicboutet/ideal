<% content_for :title, "Paramètres - Partenaire - Idéal Reprise" %>
<% content_for :page_title, "Paramètres" %>

<div class="max-w-4xl mx-auto space-y-6">
  <h1 class="text-2xl font-bold text-gray-900">Paramètres du compte</h1>

  <%= form_with(model: @user, url: partner_settings_path, method: :patch, local: true, class: "space-y-6") do |f| %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Informations personnelles</h3>
      <div class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, "Prénom", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :first_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500" %>
          </div>
          <div>
            <%= f.label :last_name, "Nom", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :last_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500" %>
          </div>
        </div>
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500" %>
        </div>
        <div>
          <%= f.label :phone, "Téléphone", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.telephone_field :phone, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500", placeholder: "01 23 45 67 89" %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Notifications</h3>
      <div class="space-y-3">
        <label class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
          <%= f.check_box :notify_contact_requests, class: "rounded border-gray-300 text-teal-600 focus:ring-teal-500" %>
          <div>
            <div class="text-sm font-medium text-gray-900">Nouvelles demandes de contact</div>
            <div class="text-xs text-gray-600">Email quand un utilisateur demande vos coordonnées</div>
          </div>
        </label>
        <label class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
          <%= f.check_box :notify_subscription_renewal, class: "rounded border-gray-300 text-teal-600 focus:ring-teal-500" %>
          <div>
            <div class="text-sm font-medium text-gray-900">Rappel renouvellement</div>
            <div class="text-xs text-gray-600">30 jours avant expiration abonnement</div>
          </div>
        </label>
      </div>
    </div>

    <%= f.submit "Mettre à jour le profil", class: "px-6 py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition font-medium cursor-pointer" %>
  <% end %>
</div>
