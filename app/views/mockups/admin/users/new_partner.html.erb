<% content_for :title, "Créer un profil partenaire - Administration - Idéal Reprise" %>

<div class="max-w-3xl mx-auto space-y-6">
  <div>
    <a href="<%= new_mockups_admin_user_path %>" class="text-admin-600 hover:text-admin-700 flex items-center gap-2 mb-4">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour
    </a>
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Créer un profil partenaire</h1>
    <p class="text-gray-600 mt-1">Formulaire complet pour créer un profil partenaire</p>
  </div>

  <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
    <p class="text-sm text-purple-800">
      <strong>Note:</strong> Ce profil sera immédiatement visible dans l'annuaire des partenaires après validation.
    </p>
  </div>

  <form class="space-y-6">
    <!-- Informations de compte -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Informations de contact</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Prénom *</label>
          <input type="text" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom *</label>
          <input type="text" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
          <input type="email" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone *</label>
          <input type="tel" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
      </div>
    </div>

    <!-- Profil professionnel -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Profil professionnel</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type de partenaire *</label>
          <select required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
            <option value="">Sélectionnez...</option>
            <option value="lawyer">Avocat</option>
            <option value="accountant">Expert-comptable</option>
            <option value="consultant">Consultant</option>
            <option value="banker">Banquier</option>
            <option value="broker">Courtier</option>
            <option value="notary">Notaire</option>
            <option value="other">Autre</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom du cabinet / Entreprise *</label>
          <input type="text" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Zone de couverture *</label>
          <select required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
            <option value="">Sélectionnez...</option>
            <option value="city">Ville</option>
            <option value="department">Département(s)</option>
            <option value="region">Région(s)</option>
            <option value="national">France entière</option>
            <option value="international">International</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Étapes d'intervention (CRM) - Non publiques</label>
          <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded-lg p-3">
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Favoris / Recherche</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Prise de contact</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Échange d'informations</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Analyse</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Alignement projet</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Négociation</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">LOI</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Audits</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Financement</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 text-purple-600 rounded">
              <span class="text-sm">Signature</span>
            </label>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Secteurs cibles (optionnel)</label>
          <select multiple class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" size="4">
            <option>Industrie</option>
            <option>Construction</option>
            <option>Commerce & Distribution</option>
            <option>Transport & Logistique</option>
            <option>Hôtellerie / Restauration</option>
            <option>Services</option>
          </select>
          <p class="text-xs text-gray-500 mt-1">Laissez vide si non spécialisé</p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Lien calendrier (prise de RDV)</label>
          <input type="url" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" placeholder="https://cal.com/...">
        </div>
      </div>
    </div>

    <!-- Abonnement -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Abonnement annuaire</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Formule</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
            <option value="basic">Basique - Profil annuaire</option>
            <option value="premium">Premium - Profil + mise en avant</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Statut</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
            <option value="active">Actif - Visible immédiatement</option>
            <option value="pending">En attente de validation</option>
          </select>
        </div>
        <div>
          <label class="flex items-center gap-2">
            <input type="checkbox" checked class="w-4 h-4 text-purple-600 rounded">
            <span class="text-sm text-gray-700">Envoyer un email de bienvenue</span>
          </label>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-end gap-3 pt-4">
      <a href="<%= new_mockups_admin_user_path %>" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
        Annuler
      </a>
      <button type="submit" class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
        Créer le profil partenaire
      </button>
    </div>
  </form>
</div>
