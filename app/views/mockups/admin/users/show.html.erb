<% content_for :title, "Détail utilisateur - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li><%= link_to "Utilisateurs", mockups_admin_users_path, class: "text-gray-500 hover:text-gray-700" %></li>
      <li><svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg></li>
      <li><span class="text-gray-900 font-medium">Jean Dupont</span></li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="bg-white rounded-xl shadow-sm p-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-2xl">
          JD
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Jean Dupont</h1>
          <p class="text-gray-600">jean.dupont@email.fr</p>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <%= link_to edit_mockups_admin_user_path(@user_id), class: "inline-flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Modifier
        <% end %>
        <%= link_to suspend_mockups_admin_user_path(@user_id), class: "inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
          </svg>
          Suspendre
        <% end %>
      </div>
    </div>
  </div>

  <!-- Info Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Info -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Details Card -->
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Informations personnelles</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <div class="text-sm text-gray-500 mb-1">Nom complet</div>
            <div class="font-medium text-gray-900">Jean Dupont</div>
          </div>
          <div>
            <div class="text-sm text-gray-500 mb-1">Email</div>
            <div class="font-medium text-gray-900">jean.dupont@email.fr</div>
          </div>
          <div>
            <div class="text-sm text-gray-500 mb-1">Téléphone</div>
            <div class="font-medium text-gray-900">+33 6 12 34 56 78</div>
          </div>
          <div>
            <div class="text-sm text-gray-500 mb-1">Ville</div>
            <div class="font-medium text-gray-900">Paris</div>
          </div>
          <div>
            <div class="text-sm text-gray-500 mb-1">Rôle</div>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              Vendeur (Cédant)
            </span>
          </div>
          <div>
            <div class="text-sm text-gray-500 mb-1">Date d'inscription</div>
            <div class="font-medium text-gray-900">15/06/2025</div>
          </div>
        </div>
      </div>

      <!-- Activity -->
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Activité récente</h2>
        <div class="space-y-4">
          <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div class="flex-1">
              <div class="text-sm font-medium text-gray-900">Annonce publiée</div>
              <div class="text-sm text-gray-500">Boutique prêt-à-porter - Il y a 2 jours</div>
            </div>
          </div>
          <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div class="flex-1">
              <div class="text-sm font-medium text-gray-900">Profil mis à jour</div>
              <div class="text-sm text-gray-500">Il y a 1 semaine</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Stats -->
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Statistiques</h3>
        <div class="space-y-4">
          <div>
            <div class="text-sm text-gray-500 mb-1">Annonces</div>
            <div class="text-2xl font-bold text-gray-900">3</div>
          </div>
          <div>
            <div class="text-sm text-gray-500 mb-1">Messages</div>
            <div class="text-2xl font-bold text-gray-900">24</div>
          </div>
          <div>
            <div class="text-sm text-gray-500 mb-1">Dernière connexion</div>
            <div class="text-sm font-medium text-gray-900">Aujourd'hui à 14:32</div>
          </div>
        </div>
      </div>

      <!-- Status -->
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Statut du compte</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Email vérifié</span>
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">NDA signé</span>
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Profil complété</span>
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
