<% content_for :title, "Créer un profil repreneur - Administration - Idéal Reprise" %>

<div class="max-w-3xl mx-auto space-y-6">
  <div>
    <a href="<%= new_mockups_admin_user_path %>" class="text-admin-600 hover:text-admin-700 flex items-center gap-2 mb-4">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour
    </a>
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Créer un profil repreneur</h1>
    <p class="text-gray-600 mt-1">Formulaire complet pour créer un compte repreneur</p>
  </div>

  <div class="bg-green-50 border border-green-200 rounded-lg p-4">
    <p class="text-sm text-green-800">
      <strong>Note:</strong> Ce profil sera directement actif avec un profil public créé. Le repreneur pourra immédiatement rechercher et réserver des annonces.
    </p>
  </div>

  <form class="space-y-6">
    <!-- Informations de compte -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Informations de compte</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Prénom *</label>
          <input type="text" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom *</label>
          <input type="text" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
          <input type="email" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone *</label>
          <input type="tel" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
        </div>
      </div>
    </div>

    <!-- Profil repreneur -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Profil de recherche</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type de repreneur</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
            <option value="individual">Personne physique</option>
            <option value="holding">Holding / Société</option>
            <option value="fund">Fonds d'investissement</option>
            <option value="investor">Investisseur</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Secteurs recherchés</label>
          <select multiple class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" size="4">
            <option>Industrie</option>
            <option>Construction</option>
            <option>Commerce & Distribution</option>
            <option>Transport & Logistique</option>
            <option>Hôtellerie / Restauration</option>
            <option>Services</option>
          </select>
          <p class="text-xs text-gray-500 mt-1">Maintenez Ctrl/Cmd pour sélectionner plusieurs secteurs</p>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">CA min recherché (€)</label>
            <input type="number" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" placeholder="100000">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">CA max recherché (€)</label>
            <input type="number" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" placeholder="2000000">
          </div>
        </div>
      </div>
    </div>

    <!-- Abonnement initial -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Abonnement et crédits</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Offre initiale</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
            <option value="free">Gratuit (1 réservation)</option>
            <option value="starter">Starter - 89€/mois</option>
            <option value="premium">Premium - 249€/mois</option>
            <option value="club">Club - 1200€/an</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Crédits initiaux</label>
          <input type="number" value="0" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
        </div>
        <div>
          <label class="flex items-center gap-2">
            <input type="checkbox" checked class="w-4 h-4 text-green-600 rounded">
            <span class="text-sm text-gray-700">Envoyer un email de bienvenue</span>
          </label>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-end gap-3 pt-4">
      <a href="<%= new_mockups_admin_user_path %>" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
        Annuler
      </a>
      <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
        Créer le profil repreneur
      </button>
    </div>
  </form>
</div>
