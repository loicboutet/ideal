<% content_for :title, "Créer un profil cédant - Administration - Idéal Reprise" %>

<div class="max-w-3xl mx-auto space-y-6">
  <div>
    <a href="<%= new_mockups_admin_user_path %>" class="text-admin-600 hover:text-admin-700 flex items-center gap-2 mb-4">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour
    </a>
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Créer un profil cédant</h1>
    <p class="text-gray-600 mt-1">Formulaire complet pour créer un compte cédant</p>
  </div>

  <div class="bg-admin-50 border border-admin-200 rounded-lg p-4">
    <p class="text-sm text-admin-800">
      <strong>Note:</strong> Ce profil sera directement actif. Le cédant recevra un email avec ses identifiants et pourra immédiatement créer des annonces.
    </p>
  </div>

  <form class="space-y-6">
    <!-- Informations de compte -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Informations de compte</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Prénom *</label>
          <input type="text" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom *</label>
          <input type="text" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
          <input type="email" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone *</label>
          <input type="tel" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-500">
        </div>
      </div>
    </div>

    <!-- Type de cédant -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Type de profil</h2>
      <div class="space-y-3">
        <label class="flex items-center gap-3 p-3 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-admin-500 transition">
          <input type="radio" name="seller_type" value="owner" checked class="w-4 h-4 text-admin-600">
          <div>
            <div class="font-medium text-gray-900">Propriétaire (Cédant standard)</div>
            <div class="text-sm text-gray-600">Vend sa propre entreprise</div>
          </div>
        </label>
        <label class="flex items-center gap-3 p-3 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-admin-500 transition">
          <input type="radio" name="seller_type" value="broker" class="w-4 h-4 text-admin-600">
          <div>
            <div class="font-medium text-gray-900">Intermédiaire / Broker (Professionnel)</div>
            <div class="text-sm text-gray-600">Accès Premium : annonces illimitées + commission</div>
          </div>
        </label>
      </div>
    </div>

    <!-- Informations complémentaires -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Informations complémentaires</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Entreprise / Cabinet</label>
          <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" placeholder="Optionnel pour les cédants standards">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Statut du compte</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
            <option value="active">Actif - Compte immédiatement utilisable</option>
            <option value="pending">En attente - Nécessite validation email</option>
            <option value="suspended">Suspendu</option>
          </select>
        </div>
        <div>
          <label class="flex items-center gap-2">
            <input type="checkbox" class="w-4 h-4 text-admin-600 rounded">
            <span class="text-sm text-gray-700">Envoyer un email de bienvenue avec les identifiants</span>
          </label>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-end gap-3 pt-4">
      <a href="<%= new_mockups_admin_user_path %>" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
        Annuler
      </a>
      <button type="submit" class="px-6 py-2 bg-admin-600 text-white rounded-lg hover:bg-admin-700 transition">
        Créer le profil cédant
      </button>
    </div>
  </form>
</div>
