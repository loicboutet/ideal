<% content_for :title, "Nouvel utilisateur - Administration - Idéal Reprise" %>

<div class="max-w-3xl space-y-6">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Nouvel utilisateur</h1>
    <p class="text-gray-600 mt-1">Créer un nouveau compte utilisateur</p>
  </div>

  <form class="bg-white rounded-xl shadow-sm p-6 space-y-6">
    <!-- Personal Info -->
    <div>
      <h2 class="text-lg font-bold text-gray-900 mb-4">Informations personnelles</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Prénom</label>
          <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom</label>
          <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
          <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
          <input type="tel" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
      </div>
    </div>

    <!-- Role Selection -->
    <div>
      <h2 class="text-lg font-bold text-gray-900 mb-4">Rôle</h2>
      <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        <option value="">Sélectionner un rôle...</option>
        <option>Vendeur (Cédant)</option>
        <option>Repreneur (Repreneur)</option>
        <option>Partenaire</option>
        <option>Admin</option>
      </select>
    </div>

    <!-- Password -->
    <div>
      <h2 class="text-lg font-bold text-gray-900 mb-4">Mot de passe</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Mot de passe</label>
          <input type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Confirmer</label>
          <input type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>
      </div>
    </div>

    <!-- Options -->
    <div>
      <h2 class="text-lg font-bold text-gray-900 mb-4">Options</h2>
      <div class="space-y-3">
        <label class="flex items-center gap-2">
          <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
          <span class="text-sm text-gray-700">Envoyer email de bienvenue</span>
        </label>
        <label class="flex items-center gap-2">
          <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
          <span class="text-sm text-gray-700">Email vérifié</span>
        </label>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
      <%= link_to mockups_admin_users_path, class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
        Annuler
      <% end %>
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
        Créer l'utilisateur
      </button>
    </div>
  </form>
</div>
