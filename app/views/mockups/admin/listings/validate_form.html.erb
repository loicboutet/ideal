<% content_for :title, "Valider l'annonce - Administration - Idéal Reprise" %>

<div class="max-w-3xl mx-auto space-y-6 py-12">
  <div class="bg-white rounded-xl shadow-sm p-8">
    <!-- Icon -->
    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>

    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Valider l'annonce</h1>
      <p class="text-gray-600">
        <strong>Restaurant gastronomique</strong> - Marie Martin
      </p>
    </div>

    <form class="space-y-6">
      <!-- Summary -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <div class="text-sm text-gray-700">
          <p class="font-medium mb-2">Cette annonce sera :</p>
          <ul class="list-disc list-inside space-y-1">
            <li>Publiée immédiatement sur la plateforme</li>
            <li>Visible par tous les acheteurs potentiels</li>
            <li>Le vendeur sera notifié par email</li>
          </ul>
        </div>
      </div>

      <!-- Publication Options -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Options de publication</label>
        <div class="space-y-3">
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" checked class="rounded border-gray-300 text-green-600 focus:ring-green-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Mettre en avant (3 jours)</div>
              <div class="text-xs text-gray-600">L'annonce apparaîtra en haut des résultats</div>
            </div>
          </label>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" checked class="rounded border-gray-300 text-green-600 focus:ring-green-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Envoyer notification aux acheteurs</div>
              <div class="text-xs text-gray-600">Notifier les acheteurs intéressés par ce secteur</div>
            </div>
          </label>
        </div>
      </div>

      <!-- Internal Notes -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Notes internes (optionnel)</label>
        <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ajoutez des notes pour l'équipe..."></textarea>
      </div>

      <!-- Validation Summary -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="text-sm text-blue-800">
            <p class="font-medium mb-1">Points vérifiés :</p>
            <ul class="list-disc list-inside space-y-0.5">
              <li>Informations complètes ✓</li>
              <li>Documents fournis ✓</li>
              <li>Identité vendeur vérifiée ✓</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
        <%= link_to mockups_admin_listing_path(@listing_id), class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
          Annuler
        <% end %>
        <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium">
          Valider et publier
        </button>
      </div>
    </form>
  </div>
</div>
