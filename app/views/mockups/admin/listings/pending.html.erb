<% content_for :title, "Annonces en attente - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-3 mb-2">
        <%= link_to mockups_admin_listings_path, class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold text-gray-900">File d'attente de validation</h1>
      </div>
      <p class="text-gray-600">Annonces en attente de validation</p>
    </div>
    <div class="flex items-center gap-2 px-4 py-2 bg-orange-100 text-orange-800 rounded-lg">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="font-bold">12 annonces</span>
    </div>
  </div>

  <!-- Priority Queue -->
  <div class="space-y-4">
    <% [
      { id: 2, title: "Restaurant gastronomique", sector: "Restauration", seller: "Marie Martin", seller_initials: "MM", price: "680 000 €", location: "Lyon", date: "Il y a 2 heures", urgent: true },
      { id: 4, title: "Atelier métallurgie", sector: "Industrie", seller: "Sophie Bernard", seller_initials: "SB", price: "890 000 €", location: "Marseille", date: "Il y a 5 heures", urgent: false },
      { id: 7, title: "Café-restaurant", sector: "Restauration", seller: "Thomas Dubois", seller_initials: "TD", price: "220 000 €", location: "Bordeaux", date: "Il y a 8 heures", urgent: false },
      { id: 8, title: "Garage automobile", sector: "Services", seller: "Claire Lambert", seller_initials: "CL", price: "560 000 €", location: "Toulouse", date: "Il y a 12 heures", urgent: false },
      { id: 9, title: "Boutique décoration", sector: "Commerce", seller: "Nicolas Renard", seller_initials: "NR", price: "340 000 €", location: "Nantes", date: "Il y a 1 jour", urgent: false },
    ].each do |listing| %>
      <div class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition <%= 'border-2 border-orange-500' if listing[:urgent] %>">
        <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
          <!-- Listing Info -->
          <div class="flex-1">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold flex-shrink-0">
                <%= listing[:seller_initials] %>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="text-lg font-bold text-gray-900"><%= listing[:title] %></h3>
                  <% if listing[:urgent] %>
                    <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-red-100 text-red-800 text-xs font-medium rounded-full">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                      </svg>
                      Urgent
                    </span>
                  <% end %>
                </div>
                <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600">
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <%= listing[:seller] %>
                  </span>
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                    </svg>
                    <%= listing[:sector] %>
                  </span>
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <%= listing[:location] %>
                  </span>
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= listing[:date] %>
                  </span>
                </div>
                <div class="mt-2">
                  <span class="text-xl font-bold text-gray-900"><%= listing[:price] %></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex items-center gap-3">
            <%= link_to mockups_admin_listing_path(listing[:id]), class: "inline-flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              Examiner
            <% end %>
            <%= link_to validate_mockups_admin_listing_path(listing[:id]), class: "inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Valider
            <% end %>
            <%= link_to reject_mockups_admin_listing_path(listing[:id]), class: "inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Rejeter
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
