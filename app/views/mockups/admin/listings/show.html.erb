<% content_for :title, "Détail de l'annonce - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <%= link_to mockups_admin_listings_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour aux annonces
  <% end %>

  <!-- Header -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-start justify-between mb-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Boulangerie artisanale - Paris 11e</h1>
        <p class="text-gray-600">Commerce & Distribution • CA: 450k€</p>
      </div>
      <div class="flex gap-2">
        <span class="px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">Validée</span>
        <span class="px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">Deal Direct</span>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Vues</div>
      <div class="text-2xl font-bold text-gray-900">342</div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Favoris</div>
      <div class="text-2xl font-bold text-gray-900">12</div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Réservations</div>
      <div class="text-2xl font-bold text-gray-900">3</div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Abandons</div>
      <div class="text-2xl font-bold text-red-600">1</div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Complétude</div>
      <div class="text-2xl font-bold text-green-600">90%</div>
    </div>
  </div>

  <!-- Historique annonce (cliquable) -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-bold text-gray-900">Historique de l'annonce</h2>
      <p class="text-sm text-gray-600">Cliquez sur chaque événement pour voir la timeline détaillée</p>
    </div>
    <div class="divide-y divide-gray-200">
      <!-- Vues -->
      <a href="#timeline-vues" class="block p-4 hover:bg-gray-50 transition">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            <div>
              <div class="font-medium text-gray-900">Vues</div>
              <div class="text-sm text-gray-600">342 vues totales</div>
            </div>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      </a>

      <!-- Favoris -->
      <a href="#timeline-favoris" class="block p-4 hover:bg-gray-50 transition">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
            </svg>
            <div>
              <div class="font-medium text-gray-900">Favoris</div>
              <div class="text-sm text-gray-600">12 repreneurs intéressés</div>
            </div>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      </a>

      <!-- Réservations -->
      <a href="#timeline-reservations" class="block p-4 hover:bg-gray-50 transition">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <div>
              <div class="font-medium text-gray-900">Réservations</div>
              <div class="text-sm text-gray-600">3 réservations totales</div>
            </div>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      </a>

      <!-- Abandons par statut CRM -->
      <a href="#timeline-abandons" class="block p-4 hover:bg-gray-50 transition">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <div class="font-medium text-gray-900">Abandons par statut CRM</div>
              <div class="text-sm text-gray-600">1 abandon total</div>
            </div>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      </a>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex gap-3">
    <%= link_to validate_mockups_admin_listing_path(1), class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition" do %>
      Valider l'annonce
    <% end %>
    <%= link_to reject_mockups_admin_listing_path(1), class: "px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition" do %>
      Rejeter
    <% end %>
  </div>
</div>
