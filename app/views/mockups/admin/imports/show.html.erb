<% content_for :title, "Détails de l'import - Administration - Idéal Reprise" %>

<div class="max-w-7xl mx-auto space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <%= link_to mockups_admin_imports_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Retour aux imports
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">Import #<%= @import_id %></h1>
      <p class="text-gray-600 mt-1">annonces_juin_2025.xlsx - Importé le 15/06/2025 à 14:30</p>
    </div>
    <div class="flex gap-3">
      <button class="inline-flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Télécharger le rapport
      </button>
    </div>
  </div>

  <!-- Status Banner -->
  <div class="bg-green-50 border border-green-200 rounded-lg p-4">
    <div class="flex items-start gap-3">
      <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <div class="flex-1">
        <div class="text-lg font-bold text-green-900">Import réussi</div>
        <p class="text-sm text-green-700 mt-1">L'import s'est terminé avec succès. Toutes les lignes ont été traitées correctement.</p>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-600">Total de lignes</div>
        <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
      <div class="text-3xl font-bold text-gray-900">127</div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-600">Importées avec succès</div>
        <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <div class="text-3xl font-bold text-green-600">127</div>
      <div class="text-xs text-green-600 mt-1">100%</div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-600">Avec erreurs</div>
        <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
      </div>
      <div class="text-3xl font-bold text-gray-900">0</div>
      <div class="text-xs text-gray-600 mt-1">0%</div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-600">Durée</div>
        <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <div class="text-3xl font-bold text-gray-900">2.3s</div>
    </div>
  </div>

  <!-- Import Details -->
  <div class="bg-white rounded-xl shadow-sm p-6">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Détails de l'import</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600">Type d'import</span>
          <span class="font-medium text-gray-900">Annonces</span>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600">Fichier source</span>
          <span class="font-medium text-gray-900">annonces_juin_2025.xlsx</span>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600">Taille du fichier</span>
          <span class="font-medium text-gray-900">2.4 Mo</span>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600">Importé par</span>
          <span class="font-medium text-gray-900">Admin (admin@idealreprise.fr)</span>
        </div>
      </div>
      <div class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600">Date de début</span>
          <span class="font-medium text-gray-900">15/06/2025 14:30:12</span>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600">Date de fin</span>
          <span class="font-medium text-gray-900">15/06/2025 14:30:14</span>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600">Statut</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Réussi
          </span>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600">Options</span>
          <span class="font-medium text-gray-900">Ignorer doublons, Validation stricte</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Import Results Table -->
  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-bold text-gray-900">Résultats détaillés</h2>
        <div class="flex gap-2">
          <select class="px-3 py-1.5 border border-gray-300 rounded-lg text-sm">
            <option>Toutes les lignes</option>
            <option>Lignes réussies</option>
            <option>Lignes avec erreurs</option>
          </select>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ligne</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Entreprise</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SIRET</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ville</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CA</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% [
            { line: 2, company: 'Boulangerie Martin', siret: '12345678901234', city: 'Paris', ca: '150 000 €', status: 'success' },
            { line: 3, company: 'Café du Commerce', siret: '23456789012345', city: 'Lyon', ca: '85 000 €', status: 'success' },
            { line: 4, company: 'Restaurant La Belle Vue', siret: '34567890123456', city: 'Marseille', ca: '320 000 €', status: 'success' },
            { line: 5, company: 'Garage Dupont', siret: '45678901234567', city: 'Toulouse', ca: '240 000 €', status: 'success' },
            { line: 6, company: 'Coiffure Elégance', siret: '56789012345678', city: 'Nice', ca: '95 000 €', status: 'success' },
            { line: 7, company: 'Pharmacie Centrale', siret: '67890123456789', city: 'Nantes', ca: '680 000 €', status: 'success' },
            { line: 8, company: 'Boutique Mode & Style', siret: '78901234567890', city: 'Strasbourg', ca: '180 000 €', status: 'success' },
            { line: 9, company: 'Plomberie Services', siret: '89012345678901', city: 'Bordeaux', ca: '210 000 €', status: 'success' },
            { line: 10, company: 'Pâtisserie Gourmande', siret: '90123456789012', city: 'Lille', ca: '120 000 €', status: 'success' },
            { line: 11, company: 'Tabac Presse du Coin', siret: '01234567890123', city: 'Rennes', ca: '75 000 €', status: 'success' }
          ].each do |row| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= row[:line] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= row[:company] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= row[:siret] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= row[:city] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= row[:ca] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Importé
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="px-6 py-4 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-700">
          Affichage de <span class="font-medium">1</span> à <span class="font-medium">10</span> sur <span class="font-medium">127</span> résultats
        </div>
        <div class="flex gap-2">
          <button class="px-3 py-1 border border-gray-300 rounded-lg text-sm text-gray-400 cursor-not-allowed">
            Précédent
          </button>
          <button class="px-3 py-1 bg-blue-600 text-white rounded-lg text-sm">
            1
          </button>
          <button class="px-3 py-1 border border-gray-300 rounded-lg text-sm text-gray-700 hover:bg-gray-50">
            2
          </button>
          <button class="px-3 py-1 border border-gray-300 rounded-lg text-sm text-gray-700 hover:bg-gray-50">
            3
          </button>
          <button class="px-3 py-1 border border-gray-300 rounded-lg text-sm text-gray-700 hover:bg-gray-50">
            Suivant
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- No Errors Message -->
  <div class="bg-green-50 border border-green-200 rounded-lg p-4">
    <div class="flex items-start gap-3">
      <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <p class="text-sm font-medium text-green-900">Aucune erreur détectée</p>
        <p class="text-sm text-green-700 mt-1">Toutes les lignes du fichier ont été importées avec succès.</p>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex items-center justify-between">
    <%= link_to mockups_admin_imports_path, class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
      Retour à la liste
    <% end %>
    <%= link_to new_mockups_admin_import_path, class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium" do %>
      Nouvel import
    <% end %>
  </div>
</div>
