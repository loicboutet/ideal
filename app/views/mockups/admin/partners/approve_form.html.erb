<% content_for :title, "Approuver le partenaire - Administration - Idéal Reprise" %>

<div class="max-w-3xl mx-auto space-y-6 py-12">
  <div class="bg-white rounded-xl shadow-sm p-8">
    <!-- Icon -->
    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>

    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Approuver le partenaire</h1>
      <p class="text-gray-600">
        <strong>SCP Martin-Leroy</strong> - Notaire
      </p>
    </div>

    <form class="space-y-6">
      <!-- Summary -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <div class="text-sm text-gray-700">
          <p class="font-medium mb-2">En approuvant ce partenaire :</p>
          <ul class="list-disc list-inside space-y-1">
            <li>Il apparaîtra dans l'annuaire des partenaires</li>
            <li>Il pourra être recommandé aux utilisateurs</li>
            <li>Il recevra un email de confirmation</li>
            <li>Il pourra accéder à son tableau de bord</li>
          </ul>
        </div>
      </div>

      <!-- Partner Type & Visibility -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Options de visibilité</label>
        <div class="space-y-3">
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" checked class="rounded border-gray-300 text-green-600 focus:ring-green-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Afficher dans l'annuaire public</div>
              <div class="text-xs text-gray-600">Les utilisateurs pourront trouver ce partenaire</div>
            </div>
          </label>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" checked class="rounded border-gray-300 text-green-600 focus:ring-green-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Partenaire recommandé</div>
              <div class="text-xs text-gray-600">Mettre en avant dans les recommandations</div>
            </div>
          </label>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" class="rounded border-gray-300 text-green-600 focus:ring-green-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Badge "Partenaire certifié"</div>
              <div class="text-xs text-gray-600">Afficher un badge de certification</div>
            </div>
          </label>
        </div>
      </div>

      <!-- Specializations -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Spécialisations</label>
        <div class="grid grid-cols-2 gap-2">
          <% [
            "Cession PME",
            "Transmission familiale",
            "Droit immobilier",
            "Droit des sociétés",
            "Fiscalité",
            "Due diligence"
          ].each do |spec| %>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded cursor-pointer hover:bg-gray-100">
              <input type="checkbox" class="rounded border-gray-300 text-purple-600 focus:ring-purple-500">
              <span class="text-sm text-gray-900"><%= spec %></span>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Welcome Message -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Message de bienvenue personnalisé (optionnel)</label>
        <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Message qui sera envoyé au partenaire avec l'email de confirmation..."></textarea>
      </div>

      <!-- Internal Notes -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Notes internes (optionnel)</label>
        <textarea rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Notes pour l'équipe..."></textarea>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
        <%= link_to mockups_admin_partner_path(@partner_id), class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
          Annuler
        <% end %>
        <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium">
          Approuver le partenaire
        </button>
      </div>
    </form>
  </div>
</div>
