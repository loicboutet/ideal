<% content_for :title, "Partenaires - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Partenaires</h1>
      <p class="text-gray-600 mt-1">Gestion de l'annuaire des partenaires</p>
    </div>
    <%= link_to mockups_admin_partners_pending_path, class: "px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600" do %>
      En attente (5)
    <% end %>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg p-4 border border-gray-200">
    <div class="grid grid-cols-1 sm:grid-cols-4 gap-4">
      <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
        <option>Tous les types</option>
        <option>Avocat</option>
        <option>Comptable</option>
        <option>Consultant</option>
        <option>Banquier</option>
        <option>Broker</option>
      </select>
      <select multiple id="sectors-filter" class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
        <option value="">Tous les secteurs</option>
        <option value="industrie">Industrie</option>
        <option value="construction">Construction</option>
        <option value="commerce">Commerce & Distribution</option>
        <option value="transport">Transport & Logistique</option>
        <option value="restauration">Hôtellerie / Restauration</option>
        <option value="services">Services</option>
        <option value="agri">Agri-food & Agriculture</option>
        <option value="sante">Santé</option>
        <option value="digital">Digital</option>
        <option value="immobilier">Immobilier</option>
        <option value="autre">Autre</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
        <option>Période: 30 derniers jours</option>
        <option>7 derniers jours</option>
        <option>3 mois</option>
        <option>6 mois</option>
      </select>
      <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
        <option>Tri: Nom</option>
        <option>Tri: Vues</option>
        <option>Tri: Contacts</option>
        <option>Tri: Date inscription</option>
      </select>
    </div>
  </div>

  <!-- Partners Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Partenaire</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Secteurs</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Stades CRM</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Vues</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Contacts</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% [
            {id: 1, name: 'Sophie Conseil', type: 'Avocat', sectors: 'Commerce, Services', stages: 'LOI, Audits', views: 342, contacts: 28, status: 'approved'},
            {id: 2, name: 'Cabinet Martin', type: 'Comptable', sectors: 'Tous secteurs', stages: 'Analyse, Audits, Finance', views: 287, contacts: 35, status: 'approved'},
            {id: 3, name: 'Conseil & Co', type: 'Consultant', sectors: 'Digital, Services', stages: 'Échange, Analyse, Alignement', views: 198, contacts: 15, status: 'approved'},
            {id: 4, name: 'BNP Entreprises', type: 'Banquier', sectors: 'Tous secteurs', stages: 'Financement', views: 156, contacts: 42, status: 'approved'}
          ].each do |partner| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium text-gray-900"><%= partner[:name] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs rounded-full bg-admin-100 text-admin-800"><%= partner[:type] %></span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= partner[:sectors] %></td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= partner[:stages] %></td>
              <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= partner[:views] %></td>
              <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= partner[:contacts] %></td>
              <td class="px-6 py-4">
                <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Validé</span>
              </td>
              <td class="px-6 py-4">
                <%= link_to mockups_admin_partner_path(partner[:id]), class: "text-admin-600 hover:text-admin-800 text-sm" do %>
                  Voir →
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Choices.js CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">

<!-- Choices.js JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

<script>
// Initialize Choices.js for multi-select
document.addEventListener('DOMContentLoaded', function() {
  const sectorsFilter = document.getElementById('sectors-filter');
  
  if (sectorsFilter) {
    const choices = new Choices(sectorsFilter, {
      removeItemButton: true,
      placeholderValue: 'Sélectionnez un ou plusieurs secteurs',
      searchPlaceholderValue: 'Rechercher...',
      noResultsText: 'Aucun résultat trouvé',
      noChoicesText: 'Aucun choix disponible',
      itemSelectText: 'Cliquer pour sélectionner',
      maxItemCount: -1,
      searchEnabled: true,
      searchChoices: true,
      classNames: {
        containerOuter: 'choices',
        containerInner: 'choices__inner',
        input: 'choices__input',
        inputCloned: 'choices__input--cloned',
        list: 'choices__list',
        listItems: 'choices__list--multiple',
        listSingle: 'choices__list--single',
        listDropdown: 'choices__list--dropdown',
        item: 'choices__item',
        itemSelectable: 'choices__item--selectable',
        itemDisabled: 'choices__item--disabled',
        itemChoice: 'choices__item--choice',
        placeholder: 'choices__placeholder',
        group: 'choices__group',
        groupHeading: 'choices__heading',
        button: 'choices__button',
        activeState: 'is-active',
        focusState: 'is-focused',
        openState: 'is-open',
        disabledState: 'is-disabled',
        highlightedState: 'is-highlighted',
        selectedState: 'is-selected',
        flippedState: 'is-flipped',
        loadingState: 'is-loading',
        noResults: 'has-no-results',
        noChoices: 'has-no-choices'
      }
    });
  }
});
</script>

<style>
/* Custom styling for Choices.js to match Tailwind */
.choices {
  margin-bottom: 0;
}

.choices__inner {
  min-height: 42px;
  padding: 0.5rem 0.75rem;
  border: 1px solid #d1d5db;
  border-radius: 0.5rem;
  background-color: white;
  font-size: 0.875rem;
}

.choices__inner:focus,
.choices.is-focused .choices__inner {
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.choices__list--multiple .choices__item {
  background-color: #3b82f6;
  border: 1px solid #2563eb;
  border-radius: 0.375rem;
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  margin-right: 0.375rem;
  margin-bottom: 0.375rem;
}

.choices__list--dropdown {
  border: 1px solid #d1d5db;
  border-radius: 0.5rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  z-index: 50;
}

.choices__list--dropdown .choices__item--selectable {
  padding: 0.5rem 0.75rem;
}

.choices__list--dropdown .choices__item--selectable.is-highlighted {
  background-color: #eff6ff;
}

.choices__button {
  border: none;
  padding: 0;
  margin-left: 0.5rem;
  opacity: 0.75;
}

.choices__button:hover {
  opacity: 1;
}

.choices__input {
  background-color: transparent;
  margin-bottom: 0;
}
</style>
