<% content_for :title, "Transactions - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Header -->
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Transactions</h1>
    <p class="text-gray-600 mt-1">Gérer toutes les transactions de la plateforme</p>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Total</p>
          <p class="text-2xl font-bold text-gray-900 mt-1">89</p>
        </div>
        <div class="w-12 h-12 bg-admin-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-admin-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">En cours</p>
          <p class="text-2xl font-bold text-orange-600 mt-1">24</p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Conclues</p>
          <p class="text-2xl font-bold text-green-600 mt-1">52</p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Abandonnées</p>
          <p class="text-2xl font-bold text-red-600 mt-1">13</p>
        </div>
        <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-sm p-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <input type="text" placeholder="Rechercher..." class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500">
      <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500">
        <option>Tous les statuts</option>
        <option>En cours</option>
        <option>Conclue</option>
        <option>Abandonnée</option>
      </select>
      <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500">
        <option>Toutes les périodes</option>
        <option>Ce mois</option>
        <option>Ce trimestre</option>
        <option>Cette année</option>
      </select>
      <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500">
        <option>Tri: Plus récent</option>
        <option>Plus ancien</option>
        <option>Montant croissant</option>
        <option>Montant décroissant</option>
      </select>
    </div>
  </div>

  <!-- Table -->
  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transaction</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vendeur</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Repreneur</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% [
            { id: 1, listing: "Boutique prêt-à-porter", seller: "Jean Dupont", buyer: "Marie Martin", amount: "450 000 €", date: "15/06/2025", status: "en cours", status_color: "orange", progress: "NDA signé" },
            { id: 2, listing: "Restaurant gastronomique", seller: "Pierre Leroy", buyer: "Sophie Bernard", amount: "680 000 €", date: "14/06/2025", status: "en cours", status_color: "orange", progress: "Due diligence" },
            { id: 3, listing: "Agence immobilière", seller: "Luc Moreau", buyer: "Emma Petit", amount: "1 200 000 €", date: "10/06/2025", status: "conclue", status_color: "green", progress: "Acte signé" },
            { id: 4, listing: "Salon de coiffure", seller: "Claire Dubois", buyer: "Thomas Bernard", amount: "125 000 €", date: "08/06/2025", status: "en cours", status_color: "orange", progress: "Négociation" },
            { id: 5, listing: "Boulangerie", seller: "Nicolas Renard", buyer: "Alice Rousseau", amount: "380 000 €", date: "05/06/2025", status: "conclue", status_color: "green", progress: "Acte signé" },
            { id: 6, listing: "Garage automobile", seller: "Marc Lefebvre", buyer: "-", amount: "560 000 €", date: "02/06/2025", status: "abandonnée", status_color: "red", progress: "Annulée" },
          ].each do |deal| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div>
                  <div class="text-sm font-medium text-gray-900"><%= deal[:listing] %></div>
                  <div class="text-xs text-gray-500"><%= deal[:progress] %></div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-2">
                  <div class="w-8 h-8 bg-admin-600 rounded-full flex items-center justify-center text-white text-xs font-bold">
                    <%= deal[:seller].split(' ').map(&:first).join %>
                  </div>
                  <div class="text-sm text-gray-900"><%= deal[:seller] %></div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if deal[:buyer] != "-" %>
                  <div class="flex items-center gap-2">
                    <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-white text-xs font-bold">
                      <%= deal[:buyer].split(' ').map(&:first).join %>
                    </div>
                    <div class="text-sm text-gray-900"><%= deal[:buyer] %></div>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= deal[:amount] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500"><%= deal[:date] %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= deal[:status_color] %>-100 text-<%= deal[:status_color] %>-800 capitalize">
                  <%= deal[:status] %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to mockups_admin_deal_path(deal[:id]), class: "text-admin-600 hover:text-admin-900" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <div class="flex items-center justify-between">
    <div class="text-sm text-gray-700">
      Affichage de <span class="font-medium">1</span> à <span class="font-medium">6</span> sur <span class="font-medium">89</span> résultats
    </div>
    <div class="flex items-center gap-2">
      <button class="px-3 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 disabled:opacity-50" disabled>
        Précédent
      </button>
      <button class="px-3 py-2 bg-admin-600 text-white rounded-lg">1</button>
      <button class="px-3 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">2</button>
      <button class="px-3 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">3</button>
      <button class="px-3 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
        Suivant
      </button>
    </div>
  </div>
</div>
