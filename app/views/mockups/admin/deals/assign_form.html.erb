<% content_for :title, "Attribuer la transaction - Administration - Idéal Reprise" %>

<div class="max-w-4xl mx-auto space-y-6 py-12">
  <div class="bg-white rounded-xl shadow-sm p-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Gérer l'attribution de la transaction</h1>
      <p class="text-gray-600">
        <strong>Boutique prêt-à-porter</strong> - Transaction #00001
      </p>
    </div>

    <form class="space-y-6">
      <!-- Current Assignment -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Attribution actuelle</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Seller -->
          <div class="p-4 bg-white rounded-lg">
            <div class="text-sm text-gray-500 mb-2">Vendeur</div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">
                JD
              </div>
              <div>
                <div class="font-medium text-gray-900">Jean Dupont</div>
                <div class="text-sm text-gray-600">jean.dupont@email.fr</div>
              </div>
            </div>
          </div>

          <!-- Buyer -->
          <div class="p-4 bg-white rounded-lg">
            <div class="text-sm text-gray-500 mb-2">Acheteur</div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-green-600 rounded-full flex items-center justify-center text-white font-bold">
                MM
              </div>
              <div>
                <div class="font-medium text-gray-900">Marie Martin</div>
                <div class="text-sm text-gray-600">marie.m@email.fr</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Assign to Another Buyer -->
      <div>
        <h2 class="text-lg font-bold text-gray-900 mb-4">Attribuer à un autre acheteur</h2>
        
        <!-- Search Buyers -->
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Rechercher un acheteur</label>
          <input type="text" placeholder="Nom, email ou ID..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <!-- Available Buyers -->
        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Acheteurs intéressés par ce secteur</label>
          <% [
            { name: "Sophie Bernard", email: "s.bernard@email.fr", initials: "SB", interests: "Commerce, Mode", experience: "5 ans" },
            { name: "Thomas Dubois", email: "t.dubois@email.fr", initials: "TD", interests: "Commerce, Retail", experience: "3 ans" },
            { name: "Claire Lambert", email: "c.lambert@email.fr", initials: "CL", interests: "Commerce", experience: "8 ans" },
          ].each do |buyer| %>
            <label class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100 border-2 border-transparent hover:border-blue-200">
              <input type="radio" name="new_buyer" value="<%= buyer[:email] %>" class="text-blue-600 focus:ring-blue-500">
              <div class="w-12 h-12 bg-green-600 rounded-full flex items-center justify-center text-white font-bold flex-shrink-0">
                <%= buyer[:initials] %>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-900"><%= buyer[:name] %></div>
                <div class="text-sm text-gray-600"><%= buyer[:email] %></div>
                <div class="flex gap-4 mt-1 text-xs text-gray-500">
                  <span>Intérêts: <%= buyer[:interests] %></span>
                  <span>Expérience: <%= buyer[:experience] %></span>
                </div>
              </div>
              <div class="flex items-center gap-1 text-yellow-500">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="text-sm font-medium">85%</span>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Assignment Type -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Type d'attribution</label>
        <div class="space-y-2">
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="radio" name="assignment_type" value="exclusive" checked class="text-blue-600 focus:ring-blue-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Attribution exclusive</div>
              <div class="text-xs text-gray-600">L'acheteur a l'exclusivité pour 30 jours</div>
            </div>
          </label>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="radio" name="assignment_type" value="non_exclusive" class="text-blue-600 focus:ring-blue-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Attribution non-exclusive</div>
              <div class="text-xs text-gray-600">Plusieurs acheteurs peuvent être intéressés</div>
            </div>
          </label>
        </div>
      </div>

      <!-- Exclusivity Period -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Période d'exclusivité</label>
        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option>15 jours</option>
          <option selected>30 jours</option>
          <option>45 jours</option>
          <option>60 jours</option>
          <option>90 jours</option>
        </select>
      </div>

      <!-- Notification Options -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Notifications</label>
        <div class="space-y-3">
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" checked class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Notifier le nouvel acheteur</div>
              <div class="text-xs text-gray-600">Envoyer un email d'attribution</div>
            </div>
          </label>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" checked class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Notifier le vendeur</div>
              <div class="text-xs text-gray-600">Informer de la nouvelle attribution</div>
            </div>
          </label>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Notifier l'ancien acheteur</div>
              <div class="text-xs text-gray-600">Informer du changement d'attribution</div>
            </div>
          </label>
        </div>
      </div>

      <!-- Reason for Change -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Raison du changement (optionnel)</label>
        <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Expliquez pourquoi cette transaction est réattribuée..."></textarea>
      </div>

      <!-- Warning -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="text-sm text-blue-800">
            <p class="font-medium mb-1">Important :</p>
            <ul class="list-disc list-inside space-y-0.5">
              <li>Cette action modifiera l'acheteur attribué à cette transaction</li>
              <li>L'historique complet sera conservé</li>
              <li>Les parties concernées seront notifiées selon vos choix</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
        <%= link_to mockups_admin_deal_path(@deal_id), class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
          Annuler
        <% end %>
        <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
          Confirmer l'attribution
        </button>
      </div>
    </form>
  </div>
</div>
