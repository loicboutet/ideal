<% content_for :title, "Statistiques - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Statistiques</h1>
      <p class="mt-1 text-sm text-gray-600">
        Performance de votre profil dans l'annuaire partenaires
      </p>
    </div>
    
    <div class="flex items-center gap-3">
      <select class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 text-sm">
        <option value="30">30 derniers jours</option>
        <option value="90">3 derniers mois</option>
        <option value="180">6 derniers mois</option>
        <option value="365">12 derniers mois</option>
      </select>
      
      <button type="button" class="inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors">
        <i data-lucide="download" class="w-4 h-4 mr-2"></i>
        Exporter
      </button>
    </div>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="bg-white border border-gray-200 rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Vues du profil</p>
          <p class="text-3xl font-bold text-gray-900 mt-1">342</p>
        </div>
        <div class="p-3 bg-blue-100 rounded-xl">
          <i data-lucide="eye" class="w-6 h-6 text-blue-600"></i>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <span class="text-green-600 font-medium flex items-center">
          <i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
          +18%
        </span>
        <span class="text-gray-500 ml-2">vs mois précédent</span>
      </div>
    </div>
    
    <div class="bg-white border border-gray-200 rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Contacts reçus</p>
          <p class="text-3xl font-bold text-gray-900 mt-1">47</p>
        </div>
        <div class="p-3 bg-emerald-100 rounded-xl">
          <i data-lucide="message-square" class="w-6 h-6 text-emerald-600"></i>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <span class="text-green-600 font-medium flex items-center">
          <i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
          +24%
        </span>
        <span class="text-gray-500 ml-2">vs mois précédent</span>
      </div>
    </div>
    
    <div class="bg-white border border-gray-200 rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Taux de conversion</p>
          <p class="text-3xl font-bold text-gray-900 mt-1">13,7%</p>
        </div>
        <div class="p-3 bg-purple-100 rounded-xl">
          <i data-lucide="percent" class="w-6 h-6 text-purple-600"></i>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <span class="text-green-600 font-medium flex items-center">
          <i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
          +5%
        </span>
        <span class="text-gray-500 ml-2">vs mois précédent</span>
      </div>
    </div>
    
    <div class="bg-white border border-gray-200 rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Position moyenne</p>
          <p class="text-3xl font-bold text-gray-900 mt-1">#4</p>
        </div>
        <div class="p-3 bg-amber-100 rounded-xl">
          <i data-lucide="trophy" class="w-6 h-6 text-amber-600"></i>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <span class="text-green-600 font-medium flex items-center">
          <i data-lucide="arrow-up" class="w-4 h-4 mr-1"></i>
          +2 places
        </span>
        <span class="text-gray-500 ml-2">vs mois précédent</span>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Views Chart -->
    <div class="lg:col-span-2 bg-white border border-gray-200 rounded-xl">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Évolution des vues</h2>
        <div class="flex gap-2">
          <button type="button" class="px-3 py-1 text-sm font-medium text-teal-600 bg-teal-50 rounded-lg">Vues</button>
          <button type="button" class="px-3 py-1 text-sm font-medium text-gray-500 hover:bg-gray-100 rounded-lg">Contacts</button>
        </div>
      </div>
      <div class="p-6">
        <!-- Placeholder chart -->
        <div class="h-64 flex items-end justify-between gap-2">
          <% [45, 52, 38, 65, 72, 58, 82, 95, 78, 88, 102, 115].each_with_index do |value, index| %>
            <div class="flex-1 flex flex-col items-center">
              <div class="w-full bg-teal-500 rounded-t transition-all hover:bg-teal-600" style="height: <%= value * 2 %>px;"></div>
              <span class="text-xs text-gray-500 mt-2"><%= Date.today.months_ago(11 - index).strftime('%b') %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Contact Sources -->
    <div class="bg-white border border-gray-200 rounded-xl">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Origine des contacts</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div>
            <div class="flex items-center justify-between mb-1">
              <span class="text-sm text-gray-600">Cédants</span>
              <span class="text-sm font-medium text-gray-900">60%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-emerald-500 h-2 rounded-full" style="width: 60%"></div>
            </div>
          </div>
          
          <div>
            <div class="flex items-center justify-between mb-1">
              <span class="text-sm text-gray-600">Repreneurs</span>
              <span class="text-sm font-medium text-gray-900">35%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-purple-500 h-2 rounded-full" style="width: 35%"></div>
            </div>
          </div>
          
          <div>
            <div class="flex items-center justify-between mb-1">
              <span class="text-sm text-gray-600">Autres</span>
              <span class="text-sm font-medium text-gray-900">5%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-gray-400 h-2 rounded-full" style="width: 5%"></div>
            </div>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-900 mb-4">Répartition par type</h3>
          <div class="flex items-center justify-center">
            <!-- Pie chart placeholder -->
            <div class="relative w-32 h-32">
              <svg viewBox="0 0 36 36" class="w-full h-full">
                <path class="text-emerald-500" stroke="currentColor" stroke-width="3" fill="none"
                      d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                      stroke-dasharray="60, 100" />
                <path class="text-purple-500" stroke="currentColor" stroke-width="3" fill="none"
                      d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                      stroke-dasharray="35, 100" stroke-dashoffset="-60" />
                <path class="text-gray-300" stroke="currentColor" stroke-width="3" fill="none"
                      d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                      stroke-dasharray="5, 100" stroke-dashoffset="-95" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Top Keywords -->
    <div class="bg-white border border-gray-200 rounded-xl">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Recherches qui vous trouvent</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-gray-500 w-6">1</span>
              <span class="text-sm text-gray-900">expert-comptable cession entreprise</span>
            </div>
            <span class="text-sm font-medium text-teal-600">89 recherches</span>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-gray-500 w-6">2</span>
              <span class="text-sm text-gray-900">audit financier bordeaux</span>
            </div>
            <span class="text-sm font-medium text-teal-600">67 recherches</span>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-gray-500 w-6">3</span>
              <span class="text-sm text-gray-900">valorisation entreprise</span>
            </div>
            <span class="text-sm font-medium text-teal-600">54 recherches</span>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-gray-500 w-6">4</span>
              <span class="text-sm text-gray-900">comptable transmission</span>
            </div>
            <span class="text-sm font-medium text-teal-600">42 recherches</span>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-gray-500 w-6">5</span>
              <span class="text-sm text-gray-900">bilan prévisionnel reprise</span>
            </div>
            <span class="text-sm font-medium text-teal-600">38 recherches</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Geographic Distribution -->
    <div class="bg-white border border-gray-200 rounded-xl">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Répartition géographique</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm text-gray-900">Gironde (33)</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-32 bg-gray-200 rounded-full h-2">
                <div class="bg-teal-500 h-2 rounded-full" style="width: 45%"></div>
              </div>
              <span class="text-sm font-medium text-gray-600 w-12 text-right">45%</span>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm text-gray-900">Dordogne (24)</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-32 bg-gray-200 rounded-full h-2">
                <div class="bg-teal-500 h-2 rounded-full" style="width: 22%"></div>
              </div>
              <span class="text-sm font-medium text-gray-600 w-12 text-right">22%</span>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm text-gray-900">Lot-et-Garonne (47)</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-32 bg-gray-200 rounded-full h-2">
                <div class="bg-teal-500 h-2 rounded-full" style="width: 15%"></div>
              </div>
              <span class="text-sm font-medium text-gray-600 w-12 text-right">15%</span>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm text-gray-900">Landes (40)</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-32 bg-gray-200 rounded-full h-2">
                <div class="bg-teal-500 h-2 rounded-full" style="width: 12%"></div>
              </div>
              <span class="text-sm font-medium text-gray-600 w-12 text-right">12%</span>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-sm text-gray-900">Autres</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-32 bg-gray-200 rounded-full h-2">
                <div class="bg-gray-400 h-2 rounded-full" style="width: 6%"></div>
              </div>
              <span class="text-sm font-medium text-gray-600 w-12 text-right">6%</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white border border-gray-200 rounded-xl">
    <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Activité récente</h2>
      <a href="<%= mockups_partner_contacts_path %>" class="text-sm text-teal-600 hover:text-teal-700 font-medium">
        Voir tous les contacts →
      </a>
    </div>
    <div class="divide-y divide-gray-200">
      <div class="px-6 py-4 flex items-center gap-4 hover:bg-gray-50 transition-colors">
        <div class="p-2 bg-emerald-100 rounded-lg">
          <i data-lucide="message-square" class="w-5 h-5 text-emerald-600"></i>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900">Nouveau contact reçu</p>
          <p class="text-sm text-gray-500 truncate">Marc Leblanc - Cédant - Accompagnement cession</p>
        </div>
        <span class="text-sm text-gray-500">Il y a 2h</span>
      </div>
      
      <div class="px-6 py-4 flex items-center gap-4 hover:bg-gray-50 transition-colors">
        <div class="p-2 bg-blue-100 rounded-lg">
          <i data-lucide="eye" class="w-5 h-5 text-blue-600"></i>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900">Profil consulté</p>
          <p class="text-sm text-gray-500 truncate">Votre profil a été consulté 5 fois aujourd'hui</p>
        </div>
        <span class="text-sm text-gray-500">Il y a 4h</span>
      </div>
      
      <div class="px-6 py-4 flex items-center gap-4 hover:bg-gray-50 transition-colors">
        <div class="p-2 bg-purple-100 rounded-lg">
          <i data-lucide="star" class="w-5 h-5 text-purple-600"></i>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900">Nouvelle recommandation</p>
          <p class="text-sm text-gray-500 truncate">Vous êtes apparu dans les recommandations "Expert-comptable Nouvelle-Aquitaine"</p>
        </div>
        <span class="text-sm text-gray-500">Hier</span>
      </div>
      
      <div class="px-6 py-4 flex items-center gap-4 hover:bg-gray-50 transition-colors">
        <div class="p-2 bg-emerald-100 rounded-lg">
          <i data-lucide="message-square" class="w-5 h-5 text-emerald-600"></i>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900">Nouveau contact reçu</p>
          <p class="text-sm text-gray-500 truncate">Sophie Durand - Repreneur - Audit financier</p>
        </div>
        <span class="text-sm text-gray-500">Hier</span>
      </div>
    </div>
  </div>

  <!-- Tips Card -->
  <div class="bg-gradient-to-r from-teal-50 to-emerald-50 border border-teal-200 rounded-xl p-6">
    <div class="flex items-start gap-4">
      <div class="flex-shrink-0">
        <div class="p-3 bg-teal-100 rounded-xl">
          <i data-lucide="lightbulb" class="w-6 h-6 text-teal-600"></i>
        </div>
      </div>
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-gray-900">Conseils pour améliorer votre visibilité</h3>
        <ul class="mt-3 space-y-2 text-sm text-gray-600">
          <li class="flex items-start gap-2">
            <i data-lucide="check-circle" class="w-4 h-4 text-teal-600 flex-shrink-0 mt-0.5"></i>
            <span>Complétez votre profil à 100% pour apparaître plus haut dans les résultats</span>
          </li>
          <li class="flex items-start gap-2">
            <i data-lucide="check-circle" class="w-4 h-4 text-teal-600 flex-shrink-0 mt-0.5"></i>
            <span>Ajoutez des spécialités précises pour correspondre aux recherches ciblées</span>
          </li>
          <li class="flex items-start gap-2">
            <i data-lucide="check-circle" class="w-4 h-4 text-teal-600 flex-shrink-0 mt-0.5"></i>
            <span>Répondez rapidement aux contacts pour améliorer votre taux de conversion</span>
          </li>
        </ul>
        <div class="mt-4">
          <a href="<%= edit_mockups_partner_profile_path %>" class="inline-flex items-center px-4 py-2 bg-teal-600 text-white text-sm font-medium rounded-lg hover:bg-teal-700 transition-colors">
            <i data-lucide="edit" class="w-4 h-4 mr-2"></i>
            Optimiser mon profil
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
