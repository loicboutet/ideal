        <label class="block text-sm font-medium text-gray-700 mb-2">Nom complet</label>
        <input type="text" value="Sophie Conseil" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
        <input type="tel" value="01 42 86 82 00" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
      </div>
    </div>
    <button class="mt-4 px-6 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition font-medium">
      Enregistrer les modifications
    </button>
  </div>

  <!-- Password -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Mot de passe</h3>
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Mot de passe actuel</label>
        <input type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Nouveau mot de passe</label>
        <input type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Confirmer le nouveau mot de passe</label>
        <input type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
      </div>
    </div>
    <button class="mt-4 px-6 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition font-medium">
      Modifier le mot de passe
    </button>
  </div>

  <!-- Notifications -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Notifications par email</h3>
    <div class="space-y-3">
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-teal-600 focus:ring-teal-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Nouvelles demandes de contact</div>
          <div class="text-xs text-gray-600">Recevoir un email à chaque nouvelle demande</div>
        </div>
      </label>
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-teal-600 focus:ring-teal-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Nouveaux avis clients</div>
          <div class="text-xs text-gray-600">Notification quand un client laisse un avis</div>
        </div>
      </label>
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" class="rounded border-gray-300 text-teal-600 focus:ring-teal-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Rapport mensuel d'activité</div>
          <div class="text-xs text-gray-600">Statistiques de performance chaque mois</div>
        </div>
      </label>
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-teal-600 focus:ring-teal-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Renouvellement d'abonnement</div>
          <div class="text-xs text-gray-600">Rappels avant l'échéance de l'abonnement</div>
        </div>
      </label>
    </div>
  </div>

  <!-- Privacy -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Confidentialité</h3>
    <div class="space-y-3">
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-teal-600 focus:ring-teal-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Profil visible dans l'annuaire</div>
          <div class="text-xs text-gray-600">Les utilisateurs peuvent consulter votre fiche</div>
        </div>
      </label>
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-teal-600 focus:ring-teal-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Afficher les statistiques publiques</div>
          <div class="text-xs text-gray-600">Nombre d'avis et note moyenne visibles</div>
        </div>
      </label>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-red-200">
    <h3 class="text-lg font-bold text-red-900 mb-2">Zone de danger</h3>
    <p class="text-sm text-gray-600 mb-4">Actions irréversibles concernant votre compte</p>
    <div class="flex gap-3">
      <button class="px-6 py-2 border border-red-300 text-red-700 rounded-lg hover:bg-red-50 transition font-medium">
        Désactiver mon compte
      </button>
      <button class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-medium">
        Supprimer mon compte
      </button>
    </div>
