  <h2 class="text-2xl font-bold text-gray-900">Paramètres du compte</h2>

  <!-- Account Information -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Informations du compte</h3>
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email de connexion</label>
        <input type="email" value="sophie.conseil@cabinet-sc.fr" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
