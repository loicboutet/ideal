<% content_for :title, "Modifier ma fiche - Partenaire - Idéal Reprise" %>
<% content_for :page_title, "Modifier ma fiche annuaire" %>

<div class="max-w-4xl mx-auto space-y-6">
  <%= link_to mockups_partner_profile_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour à ma fiche
  <% end %>

  <h2 class="text-2xl font-bold text-gray-900">Modifier ma fiche annuaire</h2>

  <form class="space-y-6">
    <!-- Basic Information -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Informations de base</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom complet</label>
          <input type="text" value="Sophie Conseil" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
        </div>
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Titre professionnel</label>
          <input type="text" value="Avocat d'affaires - Droit des sociétés" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
        </div>
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Présentation</label>
          <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">Avocate spécialisée en droit des affaires depuis plus de 15 ans, j'accompagne les entrepreneurs dans toutes les étapes de la vie de leur entreprise : création, développement, cession et transmission. Mon expertise couvre notamment les opérations de fusion-acquisition, la rédaction d'actes juridiques et l'audit juridique.</textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Années d'expérience</label>
          <input type="number" value="15" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Catégorie</label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent">
            <option selected>Avocat</option>
            <option>Expert-comptable</option>
            <option>Notaire</option>
            <option>Conseiller en gestion</option>
            <option>Courtier</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Services -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Services proposés</h3>
      <div class="space-y-4">
        <div class="flex items-start gap-3">
          <input type="text" value="Fusion-Acquisition" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg">
          <button type="button" class="p-2 text-red-600 hover:bg-red-50 rounded-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </button>
        </div>
        <div class="flex items-start gap-3">
          <input type="text" value="Droit des sociétés" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg">
          <button type="button" class="p-2 text-red-600 hover:bg-red-50 rounded-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </button>
        </div>
        <button type="button" class="w-full px-4 py-2 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-teal-500 hover:text-teal-600 transition">
          + Ajouter un service
        </button>
      </div>
    </div>

    <!-- Pricing -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Tarification</h3>
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <input type="text" value="Consultation initiale (1h)" placeholder="Description" class="px-4 py-2 border border-gray-300 rounded-lg">
          <input type="text" value="150€ HT" placeholder="Prix" class="px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div class="grid grid-cols-2 gap-4">
          <input type="text" value="Taux horaire" placeholder="Description" class="px-4 py-2 border border-gray-300 rounded-lg">
          <input type="text" value="250€ HT" placeholder="Prix" class="px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <button type="button" class="w-full px-4 py-2 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-teal-500 hover:text-teal-600 transition">
          + Ajouter une ligne tarifaire
        </button>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Coordonnées</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Adresse</label>
          <input type="text" value="45 Avenue de l'Opéra" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Code postal</label>
          <input type="text" value="75002" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Ville</label>
          <input type="text" value="Paris" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
          <input type="tel" value="01 42 86 82 00" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
          <input type="email" value="sophie.conseil@cabinet-sc.fr" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Site web</label>
          <input type="url" value="https://www.cabinet-sc.fr" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-between">
      <%= link_to mockups_partner_profile_path, class: "px-6 py-3 border border-gray-300 rounded-full text-gray-700 hover:bg-gray-50 transition font-medium" do %>
        Annuler
      <% end %>
      <button type="submit" class="px-6 py-3 bg-teal-600 text-white rounded-full hover:bg-teal-700 transition font-medium">
        Enregistrer les modifications
      </button>
    </div>
  </form>
</div>
