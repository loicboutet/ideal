<% content_for :title, "Modifier ma fiche - Partenaire - Idéal Reprise" %>
<% content_for :page_title, "Modifier ma fiche" %>

<div class="max-w-4xl mx-auto space-y-6">
  <%= link_to mockups_partner_profile_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour
  <% end %>

  <div>
    <h1 class="text-2xl font-bold text-gray-900">Modifier ma fiche annuaire</h1>
  </div>

  <form class="space-y-6">
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Informations générales</h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm f ont-medium text-gray-700 mb-2">Nom du cabinet *</label>
          <input type="text" value="Sophie Conseil SARL" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type de partenaire *</label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
            <option selected>Avocat d'affaires</option>
            <option>Comptable</option>
            <option>Consultant</option>
            <option>Banquier M&A</option>
            <option>Broker</option>
            <option>Autre</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Description *</label>
          <textarea rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">Cabinet spécialisé en droit des affaires et transmission d'entreprises. 15 ans d'expérience.</textarea>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Services proposés</label>
          <textarea rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">Accompagnement juridique, rédaction protocoles, due diligence juridique</textarea>
        </div>
      </div>
    </div>

    <!-- Nouveaux champs -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Zone d'intervention</h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Secteur couvert *</label>
          <div class="space-y-2">
            <label class="flex items-center gap-2">
              <input type="radio" name="coverage" value="city" class="text-purple-600">
              <span class="text-sm">Ville spécifique</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="radio" name="coverage" value="department" class="text-purple-600">
              <span class="text-sm">Département(s)</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="radio" name="coverage" value="region" class="text-purple-600" checked>
              <span class="text-sm">Région(s)</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="radio" name="coverage" value="national" class="text-purple-600">
              <span class="text-sm">France entière</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="radio" name="coverage" value="international" class="text-purple-600">
              <span class="text-sm">International</span>
            </label>
          </div>
          <input type="text" placeholder="Précisez (ex: Île-de-France, Lyon, etc.)" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 mt-2">
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Stades d'intervention *</label>
          <p class="text-xs text-gray-500 mb-2">Sélectionnez les étapes où vous intervenez</p>
          <div class="grid grid-cols-2 gap-2">
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" class="rounded text-purple-600">
              <span class="text-sm">Échange d'infos</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" class="rounded text-purple-600">
              <span class="text-sm">Analyse</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" class="rounded text-purple-600">
              <span class="text-sm">Alignement projets</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" class="rounded text-purple-600">
              <span class="text-sm">Négociation</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" checked class="rounded text-purple-600">
              <span class="text-sm">LOI</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" checked class="rounded text-purple-600">
              <span class="text-sm">Audits</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" checked class="rounded text-purple-600">
              <span class="text-sm">Financement</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" class="rounded text-purple-600">
              <span class="text-sm">Deal signé</span>
            </label>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Secteurs d'activité visés (si spécialisation)</label>
          <select multiple size="5" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
            <option>Industrie</option>
            <option>BTP</option>
            <option selected>Commerce & Distribution</option>
            <option selected>Services</option>
            <option>Transport & logistique</option>
            <option>Hôtellerie / Restauration</option>
            <option>Agroalimentaire & Agriculture</option>
            <option>Santé</option>
            <option selected>Digital</option>
            <option>Immobilier</option>
            <option>Autre</option>
          </select>
          <p class="text-xs text-gray-500 mt-1">Laissez vide si vous intervenez dans tous les secteurs</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Contact</h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Site web</label>
          <input type="url" value="https://www.sophie-conseil.fr" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Lien Google Agenda (prise de RDV)</label>
          <input type="url" value="https://calendar.google.com/..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
      </div>
    </div>

    <div class="flex gap-3">
      <%= link_to mockups_partner_profile_path, class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50" do %>
        Annuler
      <% end %>
      <button type="submit" class="flex-1 px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700">
        Enregistrer les modifications
      </button>
    </div>
  </form>
</div>
