        </div>
      </div>

      <button class="w-full px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition font-medium">
        Voir le profil complet
      </button>
    </div>
  </div>

  <div class="text-center">
    <%= link_to mockups_partner_profile_path, class: "text-partner-600 hover:text-partner-800 font-medium" do %>
