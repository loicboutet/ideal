<% content_for :title, "Ma fiche annuaire - Partenaire - Idéal Reprise" %>
<% content_for :page_title, "Ma fiche annuaire" %>

<div class="max-w-4xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900">Ma fiche annuaire</h1>
    <%= link_to preview_mockups_partner_profile_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" do %>
      Voir ma fiche publique
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-start justify-between mb-6">
      <div>
        <h2 class="text-xl font-bold text-gray-900">Sophie Conseil SARL</h2>
        <p class="text-gray-600">Avocat d'affaires</p>
      </div>
      <%= link_to edit_mockups_partner_profile_path, class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50" do %>
        Modifier
      <% end %>
    </div>

    <!-- Informations -->
    <div class="space-y-4">
      <div>
        <div class="text-sm font-medium text-gray-700 mb-1">Description</div>
        <p class="text-gray-900">Cabinet spécialisé en droit des affaires et transmission d'entreprises. 15 ans d'expérience.</p>
      </div>

      <div>
        <div class="text-sm font-medium text-gray-700 mb-1">Services proposés</div>
        <p class="text-gray-900">Accompagnement juridique, rédaction protocoles, due diligence juridique</p>
      </div>

      <div>
        <div class="text-sm font-medium text-gray-700 mb-1">Secteur couvert</div>
        <p class="text-gray-900">Île-de-France • France entière</p>
      </div>

      <div>
        <div class="text-sm font-medium text-gray-700 mb-1">Stades d'intervention (CRM)</div>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">LOI</span>
          <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">Audits</span>
          <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">Financement</span>
        </div>
      </div>

      <div>
        <div class="text-sm font-medium text-gray-700 mb-1">Secteurs d'activité visés</div>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm">Commerce</span>
          <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm">Services</span>
          <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm">Digital</span>
        </div>
      </div>

      <div>
        <div class="text-sm font-medium text-gray-700 mb-1">Site web</div>
        <a href="#" class="text-blue-600 hover:text-blue-800">www.sophie-conseil.fr</a>
      </div>

      <div>
        <div class="text-sm font-medium text-gray-700 mb-1">Prendre rendez-vous</div>
        <a href="#" class="text-blue-600 hover:text-blue-800">Lien Google Agenda</a>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Statistiques</h3>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <div class="text-sm text-gray-600">Vues profil (30j)</div>
        <div class="text-2xl font-bold text-gray-900">342</div>
      </div>
      <div>
        <div class="text-sm text-gray-600">Contacts (30j)</div>
        <div class="text-2xl font-bold text-gray-900">28</div>
      </div>
    </div>
  </div>
</div>
