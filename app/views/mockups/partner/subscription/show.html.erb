  <!-- Renewal -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="font-semibold text-gray-900">Renouvellement automatique</h3>
        <p class="text-sm text-gray-600 mt-1">Le 15/12/2025 • 499€/an</p>
      </div>
      <%= link_to renew_mockups_partner_subscription_path, class: "px-4 py-2 border border-purple-600 text-purple-600 rounded-lg hover:bg-purple-50" do %>
