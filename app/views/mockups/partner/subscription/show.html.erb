<% content_for :title, "Mon abonnement - Partenaire - Idéal Reprise" %>
<% content_for :page_title, "Mon abonnement" %>

<div class="max-w-4xl mx-auto space-y-6">
  <h2 class="text-2xl font-bold text-gray-900">Mon abonnement annuaire</h2>

  <!-- Current Subscription -->
  <div class="bg-gradient-to-br from-purple-500 to-indigo-600 rounded-lg shadow-lg p-6 text-white">
    <div class="flex items-start justify-between mb-4">
      <div>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/20 text-white mb-3">
          Abonnement actif
        </span>
        <h3 class="text-2xl font-bold mb-2">Plan Premium</h3>
        <p class="text-purple-100">Profil mis en avant dans l'annuaire</p>
      </div>
      <div class="text-right">
        <div class="text-3xl font-bold">499€</div>
        <div class="text-purple-100 text-sm">par an HT</div>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 pt-4 border-t border-white/20">
      <div>
        <p class="text-purple-100 text-sm">Date de souscription</p>
        <p class="font-semibold">15/03/2025</p>
      </div>
      <div>
        <p class="text-purple-100 text-sm">Prochaine échéance</p>
        <p class="font-semibold">15/03/2026</p>
      </div>
    </div>
  </div>

  <!-- Subscription Features -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Avantages de votre abonnement</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <p class="font-medium text-gray-900">Profil mis en avant</p>
          <p class="text-sm text-gray-600">Badge Premium visible</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <p class="font-medium text-gray-900">Statistiques détaillées</p>
          <p class="text-sm text-gray-600">Vues, clics, contacts</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <p class="font-medium text-gray-900">Illimité contacts</p>
          <p class="text-sm text-gray-600">Pas de limite mensuelle</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <p class="font-medium text-gray-900">Support prioritaire</p>
          <p class="text-sm text-gray-600">Réponse sous 24h</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <p class="font-medium text-gray-900">Galerie photos</p>
          <p class="text-sm text-gray-600">Jusqu'à 10 photos</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <p class="font-medium text-gray-900">Témoignages clients</p>
          <p class="text-sm text-gray-600">Avis mis en avant</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Payment Method -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Moyen de paiement</h3>
    <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg">
      <div class="w-12 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded flex items-center justify-center text-white text-xs font-bold">
        VISA
      </div>
      <div class="flex-1">
        <p class="font-medium text-gray-900">•••• •••• •••• 4242</p>
        <p class="text-sm text-gray-600">Expire le 12/2027</p>
      </div>
      <button class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition text-sm font-medium">
        Modifier
      </button>
    </div>
  </div>

  <!-- Billing History -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Historique de facturation</h3>
    <div class="space-y-3">
      <% [
        { date: '15/03/2025', description: 'Abonnement Premium Annuel', amount: '499€', status: 'Payé', invoice: 'INV-2025-001' },
        { date: '15/03/2024', description: 'Abonnement Premium Annuel', amount: '499€', status: 'Payé', invoice: 'INV-2024-001' }
      ].each do |payment| %>
        <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-1">
              <p class="font-medium text-gray-900"><%= payment[:description] %></p>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <%= payment[:status] %>
              </span>
            </div>
            <p class="text-sm text-gray-600"><%= payment[:date] %> • <%= payment[:invoice] %></p>
          </div>
          <div class="flex items-center gap-4">
            <p class="font-semibold text-gray-900"><%= payment[:amount] %></p>
            <button class="p-2 text-teal-600 hover:bg-teal-50 rounded-lg transition">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Renewal Options -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Options de renouvellement</h3>
    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-green-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <p class="font-medium text-gray-900">Renouvellement automatique activé</p>
          <p class="text-sm text-gray-600">Votre abonnement sera renouvelé le 15/03/2026</p>
        </div>
      </div>
      <label class="relative inline-flex items-center cursor-pointer">
        <input type="checkbox" checked class="sr-only peer">
        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-teal-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-teal-600"></div>
      </label>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex gap-3">
    <%= link_to renew_mockups_partner_subscription_path, class: "flex-1 px-6 py-3 bg-teal-600 text-white text-center rounded-full hover:bg-teal-700 transition font-medium" do %>
      Renouveler maintenant
    <% end %>
    <button class="px-6 py-3 border border-red-300 text-red-700 rounded-full hover:bg-red-50 transition font-medium">
      Résilier l'abonnement
    </button>
  </div>
</div>
