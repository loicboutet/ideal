<% content_for :title, "Messages - Idéal Reprise" %>

<div class="flex h-[calc(100vh-8rem)] bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <!-- Conversations List -->
  <div class="w-80 border-r border-gray-200 flex flex-col">
    <!-- Header -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-bold text-gray-900">Messages</h2>
        <%= link_to "#", class: "p-2 hover:bg-gray-100 rounded-lg transition" do %>
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
        <% end %>
      </div>
      <input type="text" placeholder="Rechercher..." class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 text-sm">
    </div>

    <!-- Conversations -->
    <div class="flex-1 overflow-y-auto">
      <% 8.times do |i| %>
        <div class="p-4 hover:bg-gray-50 cursor-pointer border-b border-gray-100 <%= 'bg-blue-50' if i == 0 %>">
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-<%= ['blue', 'green', 'purple'][i % 3] %>-500 to-<%= ['blue', 'green', 'purple'][i % 3] %>-600 rounded-full flex items-center justify-center text-white font-bold flex-shrink-0">
              <%= ['JD', 'MR', 'SC'][i % 3] %>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <h3 class="font-semibold text-gray-900 truncate">
                  <%= ['Jean Dupont', 'Marie Richard', 'Sophie Conseil'][i % 3] %>
                </h3>
                <span class="text-xs text-gray-500">14:32</span>
              </div>
              <p class="text-sm text-gray-600 truncate">
                <%= i == 0 ? 'Concernant la boulangerie à Paris...' : 'Derniers messages échangés...' %>
              </p>
              <% if i == 0 %>
                <span class="inline-block mt-1 px-2 py-0.5 bg-blue-600 text-white text-xs rounded-full">2 nouveaux</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Message Thread -->
  <div class="flex-1 flex flex-col">
    <!-- Thread Header -->
    <div class="p-4 border-b border-gray-200 bg-gray-50">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white font-bold">
          JD
        </div>
        <div>
          <h3 class="font-semibold text-gray-900">Jean Dupont</h3>
          <p class="text-xs text-gray-500">Cédant • Boulangerie Paris 11e</p>
        </div>
      </div>
    </div>

    <!-- Messages -->
    <div class="flex-1 overflow-y-auto p-4 space-y-4">
      <!-- Received message -->
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white text-sm font-bold flex-shrink-0">
          JD
        </div>
        <div class="flex-1">
          <div class="bg-gray-100 rounded-lg p-3 max-w-lg">
            <p class="text-sm text-gray-900">Bonjour, je vois que vous avez réservé mon annonce. Avez-vous des questions sur l'entreprise ?</p>
          </div>
          <span class="text-xs text-gray-500 mt-1 block">Aujourd'hui à 14:30</span>
        </div>
      </div>

      <!-- Sent message -->
      <div class="flex items-start gap-3 justify-end">
        <div class="flex-1 flex flex-col items-end">
          <div class="bg-blue-600 text-white rounded-lg p-3 max-w-lg">
            <p class="text-sm">Oui, j'aurais quelques questions sur l'équipe en place et le bail commercial.</p>
          </div>
          <span class="text-xs text-gray-500 mt-1 block">Aujourd'hui à 14:32</span>
        </div>
        <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center text-white text-sm font-bold flex-shrink-0">
          MR
        </div>
      </div>

      <!-- Received message -->
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white text-sm font-bold flex-shrink-0">
          JD
        </div>
        <div class="flex-1">
          <div class="bg-gray-100 rounded-lg p-3 max-w-lg">
            <p class="text-sm text-gray-900">L'équipe est composée de 3 personnes dont 2 boulangers qualifiés. Le bail court jusqu'en 2028 avec option de renouvellement.</p>
          </div>
          <span class="text-xs text-gray-500 mt-1 block">Aujourd'hui à 14:35</span>
        </div>
      </div>
    </div>

    <!-- Message Input -->
    <div class="p-4 border-t border-gray-200">
      <div class="flex gap-2">
        <input type="text" placeholder="Votre message..." class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        <button class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
