<% content_for :title, "Paramètres - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Paramètres" %>

<div class="max-w-4xl mx-auto space-y-6">
  <h2 class="text-2xl font-bold text-gray-900">Paramètres du compte</h2>

  <div class="bg-white rounded-xl shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Notifications</h3>
    <div class="space-y-3">
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Nouvelles annonces correspondantes</div>
          <div class="text-xs text-gray-600">Recevoir un email quand une nouvelle annonce correspond à vos critères</div>
        </div>
      </label>
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Expiration des réservations</div>
          <div class="text-xs text-gray-600">Alertes avant l'expiration de vos réservations</div>
        </div>
      </label>
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Newsletter hebdomadaire</div>
          <div class="text-xs text-gray-600">Résumé des nouvelles opportunités chaque semaine</div>
        </div>
      </label>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Confidentialité</h3>
    <div class="space-y-3">
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Profil visible</div>
          <div class="text-xs text-gray-600">Les vendeurs peuvent voir votre profil après signature du NDA</div>
        </div>
      </label>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Critères de recherche</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Secteurs d'intérêt</label>
        <select multiple class="w-full px-4 py-2 border border-gray-300 rounded-lg" size="4">
          <option selected>Commerce</option>
          <option selected>Restauration</option>
          <option>Services</option>
          <option>BTP</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Régions d'intérêt</label>
        <select multiple class="w-full px-4 py-2 border border-gray-300 rounded-lg" size="4">
          <option selected>Île-de-France</option>
          <option selected>Auvergne-Rhône-Alpes</option>
          <option>Nouvelle-Aquitaine</option>
          <option>Occitanie</option>
        </select>
      </div>
    </div>
  </div>

  <button class="px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium">
    Enregistrer les paramètres
  </button>
</div>
