<% content_for :title, "Paramètres - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Paramètres" %>

<div class="max-w-4xl mx-auto space-y-6">
  <h2 class="text-2xl font-bold text-gray-900">Paramètres du compte</h2>

  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Informations personnelles</h3>
    <div class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Prénom</label>
          <input type="text" value="Pierre" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom</label>
          <input type="text" value="Martin" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
        <input type="email" value="pierre.martin@email.fr" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
        <input type="tel" value="06 12 34 56 78" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Notifications</h3>
    <div class="space-y-3">
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Nouvelles annonces</div>
          <div class="text-xs text-gray-600">Annonces correspondant à mes critères</div>
        </div>
      </label>
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Messages</div>
          <div class="text-xs text-gray-600">Nouveaux messages des cédants</div>
        </div>
      </label>
      <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
        <input type="checkbox" checked class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
        <div>
          <div class="text-sm font-medium text-gray-900">Alertes timer</div>
          <div class="text-xs text-gray-600">Rappels avant expiration réservations</div>
        </div>
      </label>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Sécurité</h3>
    <button class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium">
      Changer le mot de passe
    </button>
  </div>

  <button class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
    Enregistrer les modifications
  </button>
</div>
