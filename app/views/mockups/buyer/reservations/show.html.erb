<% content_for :title, "Détail de la réservation - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Détail de la réservation" %>

<div class="max-w-5xl mx-auto space-y-6">
  <%= link_to mockups_buyer_reservations_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour aux réservations
  <% end %>

  <div class="bg-white rounded-xl shadow-sm p-6">
    <div class="flex items-start justify-between mb-6">
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Restaurant Italien Lyon 6ème</h2>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
          Réservé
        </span>
      </div>
      <div class="text-right">
        <div class="text-sm text-gray-600">Temps restant</div>
        <div class="text-3xl font-bold text-orange-600">23h 45m</div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="p-4 bg-blue-50 rounded-lg">
        <div class="text-sm text-gray-600">CA annuel</div>
        <div class="text-xl font-bold text-blue-600">420 000€</div>
      </div>
      <div class="p-4 bg-green-50 rounded-lg">
        <div class="text-sm text-gray-600">Prix de vente</div>
        <div class="text-xl font-bold text-green-600">320 000€</div>
      </div>
      <div class="p-4 bg-purple-50 rounded-lg">
        <div class="text-sm text-gray-600">Localisation</div>
        <div class="text-xl font-bold text-purple-600">Lyon 6ème</div>
      </div>
    </div>

    <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 mb-6">
      <h3 class="font-semibold text-orange-900 mb-2">⏱ Information sur la réservation</h3>
      <ul class="text-sm text-orange-800 space-y-1">
        <li>• Réservée le 14/10/2025 à 15:30</li>
        <li>• Expire le 15/10/2025 à 15:30</li>
        <li>• Pendant ce temps, l'annonce n'est visible que pour vous</li>
        <li>• Vous pouvez libérer la réservation à tout moment</li>
      </ul>
    </div>

    <div class="flex gap-3">
      <%= link_to mockups_buyer_listing_path(1), class: "flex-1 px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium text-center" do %>
        Voir l'annonce complète
      <% end %>
      <%= link_to release_mockups_buyer_reservation_path(@reservation_id || 1), class: "px-6 py-3 border border-red-300 text-red-700 rounded-full hover:bg-red-50 transition font-medium" do %>
        Libérer la réservation
      <% end %>
    </div>
  </div>
</div>
