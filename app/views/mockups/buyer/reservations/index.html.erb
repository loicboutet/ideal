<% content_for :title, "Mes réservations - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Mes réservations" %>

<div class="max-w-7xl mx-auto space-y-6">
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Mes réservations actives</h2>
    <p class="text-gray-600 mt-1">2 annonces réservées (24h chacune)</p>
  </div>

  <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
    <p class="text-sm text-orange-900">⏱ Les réservations expirent automatiquement après 24 heures. Vous pouvez les libérer à tout moment.</p>
  </div>

  <!-- Active Reservations -->
  <div class="space-y-6">
    <% [
      { id: 1, name: 'Restaurant Italien Lyon 6ème', ca: '420k€', location: 'Lyon 6ème', price: '320k€', reserved_at: '14/10/2025 15:30', time_left: '23h 45m', percentage: 99 },
      { id: 2, name: 'Garage Automobile Toulouse', ca: '280k€', location: 'Toulouse', price: '180k€', reserved_at: '13/10/2025 10:00', time_left: '47h 12m', percentage: 49 }
    ].each do |reservation| %>
      <div class="bg-white rounded-xl shadow-sm p-6 border-2 border-orange-200">
        <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-4 mb-4">
          <div>
            <h3 class="text-xl font-bold text-gray-900 mb-2"><%= reservation[:name] %></h3>
            <p class="text-gray-600"><%= reservation[:location] %> • CA <%= reservation[:ca] %></p>
          </div>
          <div class="text-right">
            <div class="text-sm text-gray-600">Temps restant</div>
            <div class="text-2xl font-bold text-orange-600"><%= reservation[:time_left] %></div>
          </div>
        </div>

        <div class="mb-4">
          <div class="flex justify-between text-sm text-gray-600 mb-2">
            <span>Réservé le <%= reservation[:reserved_at] %></span>
            <span><%= reservation[:percentage] %>% du temps restant</span>
          </div>
          <div class="h-3 bg-gray-200 rounded-full overflow-hidden">
            <div class="h-full bg-orange-500 transition-all" style="width: <%= reservation[:percentage] %>%"></div>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-2 mb-4">
          <div class="p-3 bg-gray-50 rounded-lg">
            <div class="text-sm text-gray-600">Prix estimé</div>
            <div class="text-lg font-bold text-blue-600"><%= reservation[:price] %></div>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg">
            <div class="text-sm text-gray-600">Statut</div>
            <div class="text-lg font-bold text-orange-600">Réservé</div>
          </div>
        </div>

        <div class="flex gap-3">
          <%= link_to mockups_buyer_reservation_path(reservation[:id]), class: "flex-1 px-4 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium text-center" do %>
            Voir les détails
          <% end %>
          <%= link_to release_mockups_buyer_reservation_path(reservation[:id]), class: "px-4 py-3 border border-red-300 text-red-700 rounded-full hover:bg-red-50 transition font-medium" do %>
            Libérer la réservation
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
