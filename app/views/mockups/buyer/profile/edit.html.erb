<% content_for :title, "Modifier mon profil - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Modifier mon profil" %>

<div class="max-w-4xl mx-auto space-y-6">
  <%= link_to mockups_buyer_profile_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour à mon profil
  <% end %>

  <div>
    <h1 class="text-2xl font-bold text-gray-900">Modifier mon profil repreneur</h1>
    <p class="text-buyer-600 font-medium mt-1">Complétude: 85%</p>
  </div>

  <form class="space-y-6">
    <!-- Données publiques -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Données publiques</h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type de repreneur *</label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
            <option selected>Personne physique</option>
            <option>Holding / Société</option>
            <option>Fond d'investissement</option>
            <option>Investisseur</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Formation *</label>
          <textarea rows="2" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">MBA + Formation spécialisée en reprise d'entreprise</textarea>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Expérience *</label>
          <textarea rows="2" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">15 ans en direction commerciale, dont 8 ans comme Directrice Marketing Digital</textarea>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Compétences (200 car max) *</label>
          <textarea rows="2" maxlength="200" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">Management, Marketing Digital, Commercial, Finance</textarea>
          <p class="text-xs text-gray-500 mt-1">49 / 200 caractères</p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Thèse de reprise (500 car max) *</label>
          <textarea rows="4" maxlength="500" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">Passionnée par le digital et le service client, je cherche une entreprise avec une forte culture d'équipe...</textarea>
          <p class="text-xs text-gray-500 mt-1">142 / 500 caractères</p>
        </div>
      </div>
    </div>

    <!-- Données confidentielles -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Données confidentielles</h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">LinkedIn</label>
          <input type="url" value="https://www.linkedin.com/in/pierre-martin" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
        </div>
      </div>
    </div>

    <div class="flex gap-3">
      <%= link_to mockups_buyer_profile_path, class: "px-6 py-3 border border-gray-300 rounded-lg" do %>
        Annuler
      <% end %>
      <button type="submit" class="flex-1 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700">
        Enregistrer
      </button>
    </div>
  </form>
</div>
