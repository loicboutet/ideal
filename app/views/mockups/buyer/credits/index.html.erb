<% content_for :title, "Mes crédits - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Mes crédits" %>

<div class="max-w-5xl mx-auto space-y-6">
  <!-- Balance Card -->
  <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl shadow-lg p-6 text-white">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-blue-100 mb-2">Solde actuel</p>
        <div class="text-5xl font-bold">24</div>
        <p class="text-blue-100 mt-2">crédits disponibles</p>
      </div>
    </div>
  </div>

  <!-- Pricing Info AVANT historique -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-bold text-gray-900 mb-6">Tarification des crédits</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="border-2 border-gray-200 rounded-lg p-6 hover:border-blue-500 transition cursor-pointer text-center">
        <div class="text-2xl font-bold text-gray-900 mb-2">10 crédits</div>
        <div class="text-3xl font-bold text-blue-600 mb-3">50 €</div>
        <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          Acheter
        </button>
      </div>
      <div class="border-2 border-blue-500 rounded-lg p-6 relative text-center">
        <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
          <span class="px-3 py-1 bg-blue-600 text-white text-xs font-medium rounded-full">Populaire</span>
        </div>
        <div class="text-2xl font-bold text-gray-900 mb-2">25 crédits</div>
        <div class="text-3xl font-bold text-blue-600 mb-3">100 €</div>
        <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          Acheter
        </button>
      </div>
      <div class="border-2 border-gray-200 rounded-lg p-6 hover:border-blue-500 transition cursor-pointer text-center">
        <div class="text-2xl font-bold text-gray-900 mb-2">50 crédits</div>
        <div class="text-3xl font-bold text-blue-600 mb-3">180 €</div>
        <div class="text-xs text-green-600 mb-3">Meilleure valeur</div>
        <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          Acheter
        </button>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="text-sm text-gray-600 mb-2">Utilisés ce mois</div>
      <div class="text-2xl font-bold text-gray-900">8</div>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="text-sm text-gray-600 mb-2">Gagnés (enrichissement)</div>
      <div class="text-2xl font-bold text-green-600">12</div>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="text-sm text-gray-600 mb-2">Total achetés</div>
      <div class="text-2xl font-bold text-gray-900">100</div>
    </div>
  </div>

  <!-- Transaction History APRÈS tarification -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Historique</h3>
    <div class="space-y-3">
      <% [
        {date: '20/01/2025', desc: 'Libération annonce + docs', amount: 3, color: 'green'},
        {date: '18/01/2025', desc: 'Contact partenaire', amount: -1, color: 'red'},
        {date: '15/01/2025', desc: 'Enrichissement validé', amount: 2, color: 'green'},
        {date: '10/01/2025', desc: 'Achat pack 25', amount: 25, color: 'blue'},
        {date: '05/01/2025', desc: 'Pousser annonce', amount: -1, color: 'red'}
      ].each do |tx| %>
        <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg">
          <div>
            <div class="font-medium text-gray-900 text-sm"><%= tx[:desc] %></div>
            <div class="text-xs text-gray-500"><%= tx[:date] %></div>
          </div>
          <div class="font-bold text-<%= tx[:color] %>-600">
            <%= tx[:amount] > 0 ? '+' : '' %><%= tx[:amount] %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
