<% content_for :title, "Recherche avancée - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Recherche avancée" %>

<div class="max-w-5xl mx-auto space-y-6">
  <%= link_to mockups_buyer_listings_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour aux annonces
  <% end %>

  <div class="bg-white rounded-xl shadow-sm p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Affinez votre recherche</h2>

    <form class="space-y-6">
      <!-- Localisation -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Localisation</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Région</label>
            <select class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option>Toutes les régions</option>
              <option>Île-de-France</option>
              <option>Auvergne-Rhône-Alpes</option>
              <option>Nouvelle-Aquitaine</option>
              <option>Occitanie</option>
              <option>Provence-Alpes-Côte d'Azur</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Département</label>
            <input type="text" placeholder="Ex: 75, 69, 33..." class="w-full px-4 py-2 border border-gray-300 rounded-lg">
          </div>
        </div>
      </div>

      <!-- Secteur d'activité -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Secteur d'activité</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <% ['Commerce', 'Restauration', 'Services', 'BTP', 'Industrie', 'Transport', 'Santé', 'Autre'].each do |sector| %>
            <label class="flex items-center gap-2 p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
              <span class="text-sm text-gray-900"><%= sector %></span>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Données financières -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Données financières</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Chiffre d'affaires minimum</label>
            <input type="number" placeholder="Ex: 200000" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Chiffre d'affaires maximum</label>
            <input type="number" placeholder="Ex: 500000" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Prix minimum</label>
            <input type="number" placeholder="Ex: 100000" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Prix maximum</label>
            <input type="number" placeholder="Ex: 300000" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
          </div>
        </div>
      </div>

      <!-- Effectif -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Effectif</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <% ['0-5', '6-10', '11-20', '20+'].each do |range| %>
            <label class="flex items-center gap-2 p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50">
              <input type="radio" name="employees" class="border-gray-300 text-blue-600 focus:ring-blue-500">
              <span class="text-sm text-gray-900"><%= range %> salariés</span>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Filtres avancés -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Filtres avancés</h3>
        <div class="space-y-3">
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Deals sous mandat IDEAL uniquement</div>
              <div class="text-xs text-gray-600">Annonces premium avec garantie qualité</div>
            </div>
          </label>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Masquer les annonces réservées</div>
              <div class="text-xs text-gray-600">Afficher uniquement les annonces disponibles</div>
            </div>
          </label>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
            <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5">
            <div>
              <div class="text-sm font-medium text-gray-900">Complétude minimum 80%</div>
              <div class="text-xs text-gray-600">Annonces avec données complètes</div>
            </div>
          </label>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex gap-4 pt-6 border-t border-gray-200">
        <button type="button" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-full hover:bg-gray-50 transition font-medium">
          Réinitialiser
        </button>
        <button type="submit" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium">
          Rechercher
        </button>
      </div>
    </form>
  </div>
</div>
