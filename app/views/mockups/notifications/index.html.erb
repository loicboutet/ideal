<% content_for :title, "Notifications - IDEAL" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-900">Notifications</h1>
        <button class="text-sm text-blue-600 hover:text-blue-700 font-medium">
          Tout marquer comme lu
        </button>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Filters Sidebar -->
      <aside class="lg:w-64 flex-shrink-0">
        <div class="bg-white rounded-lg shadow-sm p-6 sticky top-8">
          <h2 class="font-bold text-gray-900 mb-4">Filtres</h2>
          
          <!-- Status Filter -->
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Statut</h3>
            <div class="space-y-2">
              <label class="flex items-center cursor-pointer">
                <input type="radio" name="status" checked class="w-4 h-4 text-blue-600 focus:ring-blue-500">
                <span class="ml-3 text-sm text-gray-900 font-medium">Toutes (24)</span>
              </label>
              <label class="flex items-center cursor-pointer">
                <input type="radio" name="status" class="w-4 h-4 text-blue-600 focus:ring-blue-500">
                <span class="ml-3 text-sm text-gray-700">Non lues (8)</span>
              </label>
              <label class="flex items-center cursor-pointer">
                <input type="radio" name="status" class="w-4 h-4 text-blue-600 focus:ring-blue-500">
                <span class="ml-3 text-sm text-gray-700">Lues (16)</span>
              </label>
            </div>
          </div>

          <!-- Category Filter -->
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Catégorie</h3>
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="checkbox" checked class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500">
                <span class="ml-3 text-sm text-gray-700">Annonces (5)</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" checked class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500">
                <span class="ml-3 text-gray-700">Messages (7)</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" checked class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500">
                <span class="ml-3 text-gray-700">Réservations (3)</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" checked class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500">
                <span class="ml-3 text-gray-700">Enrichissements (4)</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" checked class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500">
                <span class="ml-3 text-gray-700">Système (5)</span>
              </label>
            </div>
          </div>

          <!-- Clear Filters -->
          <button class="w-full mt-4 px-4 py-2 border-2 border-gray-300 text-gray-700 rounded-full font-medium hover:bg-gray-50 transition-colors text-sm">
            Réinitialiser
          </button>
        </div>
      </aside>

      <!-- Notifications List -->
      <main class="flex-1">
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <!-- Notification 1 - Unread -->
          <a href="<%= mockups_notification_path(id: 1) %>" class="block hover:bg-gray-50 transition-colors border-b border-gray-200">
            <div class="p-6 flex gap-4">
              <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <h3 class="font-semibold text-gray-900">Nouveau message de Pierre Martin</h3>
                  <div class="flex items-center gap-3 flex-shrink-0">
                    <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                    <span class="text-sm text-gray-500">Il y a 5 min</span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  "Bonjour, je suis très intéressé par votre société de transport. Pourriez-vous me transmettre le business plan complet ?"
                </p>
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                    Messages
                  </span>
                  <span class="text-xs text-gray-500">Société Transport - Annonce #1234</span>
                </div>
              </div>
            </div>
          </a>

          <!-- Notification 2 - Unread -->
          <a href="<%= mockups_notification_path(id: 2) %>" class="block hover:bg-gray-50 transition-colors border-b border-gray-200">
            <div class="p-6 flex gap-4">
              <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <h3 class="font-semibold text-gray-900">Enrichissement terminé</h3>
                  <div class="flex items-center gap-3 flex-shrink-0">
                    <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                    <span class="text-sm text-gray-500">Il y a 1h</span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  Votre demande d'enrichissement pour "Restaurant Gastronomique Paris 8" a été traitée. Le rapport complet est disponible.
                </p>
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
                    Enrichissements
                  </span>
                  <span class="text-xs text-gray-500">Restaurant Gastronomique - Annonce #5678</span>
                </div>
              </div>
            </div>
          </a>

          <!-- Notification 3 - Unread -->
          <a href="<%= mockups_notification_path(id: 3) %>" class="block hover:bg-gray-50 transition-colors border-b border-gray-200">
            <div class="p-6 flex gap-4">
              <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <h3 class="font-semibold text-gray-900">Nouvelle réservation confirmée</h3>
                  <div class="flex items-center gap-3 flex-shrink-0">
                    <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                    <span class="text-sm text-gray-500">Il y a 2h</span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  Vous avez réservé l'annonce "Cabinet Comptable Lyon" pour 30 jours. Montant débité : 199€
                </p>
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-700">
                    Réservations
                  </span>
                  <span class="text-xs text-gray-500">Cabinet Comptable - Annonce #9012</span>
                </div>
              </div>
            </div>
          </a>

          <!-- Notification 4 - Read -->
          <a href="<%= mockups_notification_path(id: 4) %>" class="block hover:bg-gray-50 transition-colors border-b border-gray-200 bg-gray-50">
            <div class="p-6 flex gap-4 opacity-75">
              <div class="w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <h3 class="font-semibold text-gray-900">Votre annonce a été validée</h3>
                  <div class="flex items-center gap-3 flex-shrink-0">
                    <span class="text-sm text-gray-500">Il y a 5h</span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  Félicitations ! Votre annonce "Société BTP Région Rhône-Alpes" a été validée et est maintenant visible sur la plateforme.
                </p>
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700">
                    Annonces
                  </span>
                  <span class="text-xs text-gray-500">Société BTP - Annonce #3456</span>
                </div>
              </div>
            </div>
          </a>

          <!-- Notification 5 - Read -->
          <a href="<%= mockups_notification_path(id: 5) %>" class="block hover:bg-gray-50 transition-colors border-b border-gray-200 bg-gray-50">
            <div class="p-6 flex gap-4 opacity-75">
              <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <h3 class="font-semibold text-gray-900">Crédits insuffisants</h3>
                  <div class="flex items-center gap-3 flex-shrink-0">
                    <span class="text-sm text-gray-500">Hier</span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  Vous n'avez plus de crédits d'enrichissement. Rechargez votre compte pour continuer à enrichir vos annonces favorites.
                </p>
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-700">
                    Système
                  </span>
                  <button class="text-xs text-blue-600 hover:text-blue-700 font-medium">
                    Recharger maintenant →
                  </button>
                </div>
              </div>
            </div>
          </a>

          <!-- Notification 6 - Read -->
          <a href="<%= mockups_notification_path(id: 6) %>" class="block hover:bg-gray-50 transition-colors border-b border-gray-200 bg-gray-50">
            <div class="p-6 flex gap-4 opacity-75">
              <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <h3 class="font-semibold text-gray-900">Rappel : Votre réservation expire bientôt</h3>
                  <div class="flex items-center gap-3 flex-shrink-0">
                    <span class="text-sm text-gray-500">Il y a 2 jours</span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  Votre réservation sur "Commerce Alimentaire Toulouse" expire dans 5 jours. Pensez à prolonger si nécessaire.
                </p>
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-700">
                    Système
                  </span>
                  <span class="text-xs text-gray-500">Commerce Alimentaire - Annonce #7890</span>
                </div>
              </div>
            </div>
          </a>

          <!-- Notification 7 - Read -->
          <a href="<%= mockups_notification_path(id: 7) %>" class="block hover:bg-gray-50 transition-colors border-b border-gray-200 bg-gray-50">
            <div class="p-6 flex gap-4 opacity-75">
              <div class="w-12 h-12 rounded-full bg-teal-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <h3 class="font-semibold text-gray-900">Nouveau document disponible</h3>
                  <div class="flex items-center gap-3 flex-shrink-0">
                    <span class="text-sm text-gray-500">Il y a 3 jours</span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  Le vendeur a ajouté un nouveau document : "Bilan comptable 2024.pdf" pour la société que vous suivez.
                </p>
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-teal-100 text-teal-700">
                    Annonces
                  </span>
                  <span class="text-xs text-gray-500">Société Services - Annonce #2345</span>
                </div>
              </div>
            </div>
          </a>

          <!-- Notification 8 - Read -->
          <a href="<%= mockups_notification_path(id: 8) %>" class="block hover:bg-gray-50 transition-colors">
            <div class="p-6 flex gap-4 opacity-75">
              <div class="w-12 h-12 rounded-full bg-pink-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <h3 class="font-semibold text-gray-900">Paiement reçu</h3>
                  <div class="flex items-center gap-3 flex-shrink-0">
                    <span class="text-sm text-gray-500">Il y a 5 jours</span>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  Votre paiement de 49€ pour l'abonnement Premium mensuel a été confirmé. Merci pour votre confiance !
                </p>
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-pink-100 text-pink-700">
                    Système
                  </span>
                  <span class="text-xs text-gray-500">Facture #INV-2025-001</span>
                </div>
              </div>
            </div>
          </a>
        </div>

        <!-- Pagination -->
        <div class="mt-6 flex justify-center">
          <nav class="flex items-center gap-2">
            <button class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
              Précédent
            </button>
            <button class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium">1</button>
            <button class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">2</button>
            <button class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">3</button>
            <button class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
              Suivant
            </button>
          </nav>
        </div>
      </main>
    </div>
  </div>
</div>
