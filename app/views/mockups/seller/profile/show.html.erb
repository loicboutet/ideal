<% content_for :title, "Mon profil - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Mon profil" %>

<% 
  # Mock data - in production this would come from database
  is_broker = params[:broker] != 'false' # Default to broker for demo
  subscription_tier = is_broker ? 'Premium' : 'Gratuit'
%>

<div class="max-w-4xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900">Mon profil</h1>
    <%= link_to edit_mockups_seller_profile_path, class: "px-4 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700" do %>
      Modifier
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-center gap-4 mb-6">
      <div class="w-20 h-20 bg-gradient-to-br from-seller-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-2xl">
        JD
      </div>
      <div class="flex-1">
        <div class="flex items-center gap-3">
          <h2 class="text-2xl font-bold text-gray-900">Jean Dupont</h2>
          <% if is_broker %>
            <span class="inline-flex items-center gap-1 px-3 py-1 bg-gradient-to-r from-purple-600 to-seller-600 text-white text-sm font-semibold rounded-full">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Professionnel
            </span>
          <% end %>
        </div>
        <p class="text-gray-600"><%= is_broker ? 'Courtier / Intermédiaire' : 'Cédant' %></p>
        <% if is_broker %>
          <p class="text-sm text-purple-600 font-medium mt-1">Abonnement <%= subscription_tier %></p>
        <% end %>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <div>
          <div class="text-sm text-gray-600">Email</div>
          <div class="font-medium text-gray-900">jean.dupont@example.fr</div>
        </div>
        <div>
          <div class="text-sm text-gray-600">Téléphone</div>
          <div class="font-medium text-gray-900">06 12 34 56 78</div>
        </div>
        <% if !is_broker %>
          <div>
            <div class="text-sm text-gray-600">Entreprise</div>
            <div class="font-medium text-gray-900">Boulangerie L'Amie Dorée</div>
          </div>
        <% end %>
      </div>
      
      <% if is_broker %>
        <div class="space-y-4">
          <div>
            <div class="text-sm text-gray-600">Cabinet / Société</div>
            <div class="font-medium text-gray-900">Dupont M&A Conseil</div>
          </div>
          <div>
            <div class="text-sm text-gray-600">Numéro SIRET</div>
            <div class="font-medium text-gray-900">123 456 789 00012</div>
          </div>
          <div>
            <div class="text-sm text-gray-600">Spécialisation</div>
            <div class="font-medium text-gray-900">Commerce, Services</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if is_broker %>
    <!-- Professional Capabilities Section -->
    <div class="bg-gradient-to-br from-purple-50 to-seller-50 rounded-xl shadow-sm p-6 border border-purple-200">
      <div class="flex items-center gap-2 mb-4">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
        </svg>
        <h3 class="text-lg font-bold text-gray-900">Abonnement Premium - Professionnel</h3>
      </div>
      
      <div class="grid md:grid-cols-2 gap-4">
        <div class="flex items-start gap-3 bg-white/60 p-4 rounded-lg">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div>
            <div class="font-semibold text-gray-900">Annonces illimitées</div>
            <div class="text-sm text-gray-600">Publiez autant d'annonces que vous souhaitez</div>
          </div>
        </div>

        <div class="flex items-start gap-3 bg-white/60 p-4 rounded-lg">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
          </div>
          <div>
            <div class="font-semibold text-gray-900">Support prioritaire</div>
            <div class="text-sm text-gray-600">Assistance dédiée et temps de réponse rapide</div>
          </div>
        </div>

        <div class="flex items-start gap-3 bg-white/60 p-4 rounded-lg">
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <div>
            <div class="font-semibold text-gray-900">Accès annuaire partenaires</div>
            <div class="text-sm text-gray-600">Trouvez des experts pour vos clients</div>
          </div>
        </div>

        <div class="flex items-start gap-3 bg-white/60 p-4 rounded-lg">
          <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
          </div>
          <div>
            <div class="font-semibold text-gray-900">5 pushs mensuels offerts</div>
            <div class="text-sm text-gray-600">Proposez vos annonces à des repreneurs ciblés</div>
          </div>
        </div>
      </div>

      <div class="mt-4 p-4 bg-white/60 rounded-lg border border-purple-200">
        <div class="flex items-center gap-2 text-sm">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-medium text-gray-900">Accord de commission signé</span>
          <span class="text-gray-600">• Commission sur transactions réalisées via la plateforme</span>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-bold text-gray-900">Mes annonces</h3>
      <% if is_broker %>
        <span class="text-sm text-gray-600">
          <span class="font-semibold text-purple-600"><%= 3 %></span> active<%= 3 > 1 ? 's' : '' %> 
          <span class="text-gray-400">• Illimitées</span>
        </span>
      <% else %>
        <span class="text-sm text-gray-600">
          <span class="font-semibold text-seller-600"><%= 3 %></span> / 3 annonces
        </span>
      <% end %>
    </div>
    <div class="space-y-3">
      <% 3.times do |i| %>
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
          <div class="flex-1">
            <div class="flex items-center gap-2">
              <div class="font-medium text-gray-900">
                <%= i == 0 ? 'Boulangerie artisanale - Paris 15e' : i == 1 ? 'Commerce de proximité - Lyon' : 'Restaurant traditionnel - Bordeaux' %>
              </div>
              <% if is_broker && i < 2 %>
                <span class="px-2 py-0.5 bg-purple-100 text-purple-700 text-xs font-medium rounded">Mandat</span>
              <% end %>
            </div>
            <div class="text-sm text-gray-600 mt-1">
              Active • <%= 300 + (i * 50) %> vues • <%= 5 + i %> intéressés
            </div>
          </div>
          <%= link_to mockups_seller_listing_path(i + 1), class: "text-seller-600 hover:text-seller-800 text-sm font-medium flex items-center gap-1" do %>
            Voir
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% unless is_broker %>
      <div class="mt-4 p-4 bg-gradient-to-r from-purple-50 to-seller-50 rounded-lg border border-purple-200">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-purple-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <div class="flex-1">
            <div class="font-semibold text-gray-900">Passez Premium pour plus d'annonces</div>
            <div class="text-sm text-gray-600 mt-1">Accédez à des annonces illimitées, au support prioritaire et bien plus encore.</div>
            <%= link_to mockups_seller_subscription_path, class: "inline-flex items-center gap-1 mt-2 text-sm font-medium text-purple-600 hover:text-purple-800" do %>
              Découvrir Premium
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
