<% content_for :title, "Ajouter un document - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Ajouter un document" %>

<div class="max-w-3xl mx-auto space-y-6">
  <%= link_to mockups_seller_listing_path(@listing_id), class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour à l'annonce
  <% end %>

  <div>
    <h1 class="text-2xl font-bold text-gray-900">Ajouter un document</h1>
    <p class="text-gray-600 mt-1">Boulangerie artisanale Paris 15ème</p>
  </div>

  <form class="space-y-6">
    <!-- Catégorie document (11 catégories) -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Catégorie du document *</h3>
      <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        <option>Sélectionnez une catégorie...</option>
        <option>Bilans N-1</option>
        <option>Bilans N-2</option>
        <option>Bilans N-3</option>
        <option>Organigramme</option>
        <option>Liasse fiscale</option>
        <option>Compte de résultat</option>
        <option>Liste véhicules et matériel lourd re-finançable</option>
        <option>Bail</option>
        <option>Titre de propriété</option>
        <option>Rapport Scorecard</option>
        <option>Autre (à spécifier)</option>
      </select>
    </div>

    <!-- Upload -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Fichier</h3>
      <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-400 transition">
        <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
        </svg>
        <p class="text-gray-700 font-medium mb-1">Glissez-déposez votre fichier ici</p>
        <p class="text-sm text-gray-500 mb-4">ou</p>
        <label class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition cursor-pointer">
          <input type="file" class="hidden">
          Parcourir
        </label>
        <p class="text-xs text-gray-500 mt-4">PDF, JPG, PNG - Max 10 MB</p>
      </div>
    </div>

    <!-- Documents déjà uploadés -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Documents déjà uploadés</h3>
      <div class="space-y-2">
        <% [
          {name: 'Bilan N-1', file: 'bilan_2024.pdf', size: '2.3 MB', date: '15/01/2025'},
          {name: 'Bilan N-2', file: 'bilan_2023.pdf', size: '2.1 MB', date: '15/01/2025'},
          {name: 'Liasse fiscale', file: 'liasse_2024.pdf', size: '4.5 MB', date: '14/01/2025'},
          {name: 'Compte de résultat', file: 'compte_resultat.pdf', size: '1.2 MB', date: '14/01/2025'},
          {name: 'Bail', file: 'bail_commercial.pdf', size: '890 KB', date: '12/01/2025'}
        ].each do |doc| %>
          <div class="flex items-center justify-between p-3 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex items-center gap-3 flex-1">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-green-900"><%= doc[:name] %></div>
                <div class="text-xs text-green-700"><%= doc[:file] %> • <%= doc[:size] %> • <%= doc[:date] %></div>
              </div>
            </div>
            <div class="flex gap-2">
              <button class="text-blue-600 hover:text-blue-700 text-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
              </button>
              <button class="text-red-600 hover:text-red-700 text-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex gap-3">
      <%= link_to mockups_seller_listing_path(@listing_id), class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50" do %>
        Annuler
      <% end %>
      <button type="submit" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
        Ajouter le document
      </button>
    </div>
  </form>
</div>
EOF
echo "Document upload page updated"