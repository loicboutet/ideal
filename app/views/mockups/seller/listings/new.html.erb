<% content_for :title, "Créer une annonce - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Créer une annonce" %>

<div class="max-w-4xl mx-auto space-y-6">
  <div>
    <%= link_to mockups_seller_listings_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-4" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Retour à mes annonces
    <% end %>
    <h2 class="text-2xl font-bold text-gray-900">Créer une nouvelle annonce</h2>
    <p class="text-gray-600 mt-1">Remplissez les informations pour publier votre entreprise</p>
  </div>

  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex gap-3">
      <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <p class="text-sm font-medium text-blue-900">Vos informations sont protégées</p>
        <p class="text-sm text-blue-700 mt-1">Toutes les données sensibles ne seront visibles qu'après signature du NDA par l'acheteur.</p>
      </div>
    </div>
  </div>

  <form class="space-y-6">
    <!-- Basic Information -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Informations générales</h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom de l'entreprise *</label>
          <input type="text" placeholder="Ex: Boulangerie artisanale" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Secteur d'activité *</label>
            <select class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option>Sélectionner...</option>
              <option>Commerce de détail</option>
              <option>Restauration</option>
              <option>Services aux entreprises</option>
              <option>Services aux particuliers</option>
              <option>Industrie</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Forme juridique *</label>
            <select class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option>Sélectionner...</option>
              <option>SARL</option>
              <option>SAS</option>
              <option>EURL</option>
              <option>SA</option>
              <option>Auto-entrepreneur</option>
            </select>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Description courte *</label>
          <textarea rows="3" placeholder="Décrivez brièvement votre entreprise..." class="w-full px-4 py-2 border border-gray-300 rounded-lg resize-none"></textarea>
          <p class="text-xs text-gray-500 mt-1">Maximum 200 caractères</p>
        </div>
      </div>
    </div>

    <!-- Location -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Localisation</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Ville *</label>
          <input type="text" placeholder="Ex: Paris" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Code postal *</label>
          <input type="text" placeholder="75015" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Département *</label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg">
            <option>Sélectionner...</option>
            <option>75 - Paris</option>
            <option>69 - Rhône</option>
            <option>31 - Haute-Garonne</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Financial Data -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Données financières</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Chiffre d'affaires annuel *</label>
          <input type="text" placeholder="450 000" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
          <p class="text-xs text-gray-500 mt-1">En euros</p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Résultat net</label>
          <input type="text" placeholder="85 000" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
          <p class="text-xs text-gray-500 mt-1">En euros</p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Prix de vente souhaité</label>
          <input type="text" placeholder="350 000" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Effectif</label>
          <input type="number" placeholder="5" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
          <p class="text-xs text-gray-500 mt-1">Nombre de salariés</p>
        </div>
      </div>
    </div>

    <!-- Description -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Description détaillée</h3>
      <textarea rows="6" placeholder="Décrivez votre entreprise en détail: activités, clientèle, points forts, raisons de la cession..." class="w-full px-4 py-2 border border-gray-300 rounded-lg resize-none"></textarea>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between">
      <%= link_to mockups_seller_listings_path, class: "px-6 py-3 border border-gray-300 rounded-full text-gray-700 hover:bg-gray-50 transition font-medium" do %>
        Annuler
      <% end %>
      <div class="flex gap-3">
        <button type="button" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-full hover:bg-gray-300 transition font-medium">
          Enregistrer comme brouillon
        </button>
        <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium">
          Publier l'annonce
        </button>
      </div>
    </div>
  </form>
</div>
