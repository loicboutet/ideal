<% content_for :title, "Créer une annonce - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Créer une annonce" %>

<div class="max-w-4xl mx-auto space-y-6">
  <!-- Back Link -->
  <%= link_to mockups_seller_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-4" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour au tableau de bord
  <% end %>

  <!-- Header -->
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Créer une nouvelle annonce</h2>
    <p class="text-gray-600 mt-1">Remplissez les informations pour publier votre entreprise</p>
    <p class="text-seller-600 font-medium mt-2">Une fiche complète a 2x plus de chances d'attirer des repreneurs</p>
  </div>

  <!-- Info Banner -->
  <div class="bg-seller-50 border border-seller-200 rounded-lg p-4">
    <div class="flex gap-3">
      <svg class="w-5 h-5 text-seller-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div class="text-sm text-seller-800">
        <p><strong>Vos informations sont protégées par un accord de confidentialité</strong></p>
        <p class="mt-1">Ne mettez pas d'informations permettant de vous identifier dans les données publiques.</p>
        <p class="mt-2">
          <%= link_to "#", class: "text-seller-600 underline hover:text-seller-800" do %>
            Voir à quoi ressemble la partie publique de votre annonce →
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Progress -->
  <div class="bg-white rounded-lg p-4 border border-gray-200">
    <div class="flex items-center justify-between mb-2">
      <span class="text-sm font-medium text-gray-700">Complétude de l'annonce</span>
      <span class="text-sm font-semibold text-gray-900">25%</span>
    </div>
    <div class="w-full bg-gray-200 rounded-full h-2">
      <div class="bg-gradient-to-r from-seller-400 to-seller-600 h-2 rounded-full transition-all" style="width: 25%"></div>
    </div>
  </div>

  <!-- SECTION 1: Données publiques -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-xl font-bold text-gray-900 mb-6">Données publiques</h3>
    
    <form class="space-y-6">
      <!-- Type entreprise (générique) -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Type d'entreprise (générique) <span class="text-red-500">*</span></label>
        <input type="text" placeholder="Ex: Boulangerie artisanale, Restaurant italien, Agence digitale..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
        <p class="text-xs text-gray-500 mt-1">Ne mettez pas le nom exact de votre entreprise</p>
      </div>

      <!-- Secteur -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Secteur d'activité <span class="text-red-500">*</span></label>
        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
          <option>Sélectionnez...</option>
          <option>Industrie</option>
          <option>BTP</option>
          <option>Commerce & Distribution</option>
          <option>Transport & logistique</option>
          <option>Hôtellerie / Restauration</option>
          <option>Services</option>
          <option>Agroalimentaire & Agriculture</option>
          <option>Santé</option>
          <option>Digital</option>
          <option>Immobilier</option>
          <option>Autre</option>
        </select>
      </div>

      <!-- Localisation (département seulement) -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Localisation (département) <span class="text-red-500">*</span></label>
        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
          <option>Sélectionnez...</option>
          <option>75 - Paris</option>
          <option>69 - Rhône</option>
          <option>31 - Haute-Garonne</option>
          <option>33 - Gironde</option>
          <option>59 - Nord</option>
          <option>13 - Bouches-du-Rhône</option>
        </select>
        <p class="text-xs text-gray-500 mt-1">Seul le département sera visible publiquement</p>
      </div>

      <!-- Données financières -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Chiffre d'affaires annuel <span class="text-red-500">*</span></label>
          <input type="text" placeholder="450 000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
          <p class="text-xs text-gray-500 mt-1">En euros</p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Résultat net</label>
          <input type="text" placeholder="85 000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
        </div>
      </div>

      <!-- Effectif -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Effectif <span class="text-red-500">*</span></label>
        <input type="number" placeholder="5" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
        <p class="text-xs text-gray-500 mt-1">Nombre de salariés</p>
      </div>

      <!-- Prix -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Prix de vente souhaité</label>
        <input type="text" placeholder="350 000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
        <p class="text-xs text-gray-500 mt-1">Ou fourchette de prix</p>
      </div>

      <!-- Nouveaux champs -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Horizon pour transmission <span class="text-red-500">*</span></label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
            <option>Sélectionnez...</option>
            <option>Immédiat (moins de 6 mois)</option>
            <option>6-12 mois</option>
            <option>1-2 ans</option>
            <option>2-5 ans</option>
            <option>Plus de 5 ans</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type de transmission <span class="text-red-500">*</span></label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
            <option>Sélectionnez...</option>
            <option>Fond de commerce</option>
            <option>Cession de titres partielle</option>
            <option>Cession de titres totale</option>
            <option>Cession d'actifs</option>
          </select>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Ancienneté entreprise <span class="text-red-500">*</span></label>
          <input type="number" placeholder="15" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
          <p class="text-xs text-gray-500 mt-1">Années d'existence</p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type de clients <span class="text-red-500">*</span></label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500">
            <option>Sélectionnez...</option>
            <option>B2B uniquement</option>
            <option>B2C uniquement</option>
            <option>Mixte (B2B et B2C)</option>
          </select>
        </div>
      </div>

      <!-- Description publique -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Description publique <span class="text-red-500">*</span></label>
        <textarea rows="4" placeholder="Description générale visible par tous (sans informations confidentielles)..." class="w-full px-4 py-2 border border-gray-300 rounded-lg resize-none focus:ring-2 focus:ring-seller-500"></textarea>
        <p class="text-xs text-gray-500 mt-1">Maximum 500 caractères - Ne mentionnez pas le nom de l'entreprise ni d'éléments identifiables</p>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-between pt-4 border-t border-gray-200">
        <%= link_to mockups_seller_path, class: "px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition font-medium" do %>
          Annuler
        <% end %>
        <div class="flex gap-3">
          <button type="button" class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition font-medium">
            Enregistrer comme brouillon
          </button>
          <%= link_to "#", class: "px-6 py-3 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition font-medium" do %>
            Suite : données confidentielles →
          <% end %>
        </div>
      </div>
    </form>
  </div>
</div>
