<% content_for :title, "Documents - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Documents de l'annonce" %>

<div class="max-w-5xl mx-auto space-y-6">
  <%= link_to mockups_seller_listing_path(@listing_id), class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour à l'annonce
  <% end %>

  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Documents</h2>
      <p class="text-gray-600">Boulangerie artisanale Paris 15ème</p>
    </div>
    <%= link_to new_mockups_seller_listing_document_path(@listing_id), class: "px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium" do %>
      Ajouter un document
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6">
    <div class="space-y-4">
      <% ['Bilan financier 2024.pdf', 'Statuts société.pdf', 'Bail commercial.pdf'].each_with_index do |doc, i| %>
        <div class="flex items-center gap-4 p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="flex-1">
            <div class="font-medium text-gray-900"><%= doc %></div>
            <div class="text-sm text-gray-600">Ajouté le 15/09/2025 - 2.4 Mo</div>
          </div>
          <button class="text-red-600 hover:text-red-700">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
