<% content_for :title, "Modifier l'annonce - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Modifier l'annonce" %>

<div class="max-w-4xl mx-auto space-y-6">
  <%= link_to mockups_seller_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-4" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour au tableau de bord
  <% end %>

  <div>
    <h2 class="text-2xl font-bold text-gray-900">Modifier l'annonce</h2>
    <p class="text-gray-600 mt-1">Boulangerie artisanale Paris 15ème</p>
  </div>

  <!-- Progress -->
  <div class="bg-white rounded-lg p-4 border border-gray-200">
    <div class="flex items-center justify-between mb-2">
      <span class="text-sm font-medium text-gray-700">Complétude de l'annonce</span>
      <span class="text-sm font-semibold text-gray-900">90%</span>
    </div>
    <div class="w-full bg-gray-200 rounded-full h-2">
      <div class="bg-green-600 h-2 rounded-full" style="width: 90%"></div>
    </div>
  </div>

  <!-- SECTION 1: Données publiques -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-xl font-bold text-gray-900 mb-6">Données publiques</h3>
    
    <form class="space-y-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Type d'entreprise (générique) *</label>
        <input type="text" value="Boulangerie artisanale" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Secteur d'activité *</label>
        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
          <option>Industrie</option>
          <option>BTP</option>
          <option selected>Commerce & Distribution</option>
          <option>Transport & logistique</option>
          <option>Hôtellerie / Restauration</option>
          <option>Services</option>
          <option>Agroalimentaire & Agriculture</option>
          <option>Santé</option>
          <option>Digital</option>
          <option>Immobilier</option>
          <option>Autre</option>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Localisation (département) *</label>
        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
          <option selected>75 - Paris</option>
          <option>69 - Rhône</option>
          <option>31 - Haute-Garonne</option>
        </select>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">CA annuel *</label>
          <input type="text" value="450000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Résultat net</label>
          <input type="text" value="85000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Effectif *</label>
        <input type="number" value="5" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Horizon transmission *</label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <option>Immédiat (< 6 mois)</option>
            <option selected>6-12 mois</option>
            <option>1-2 ans</option>
            <option>2-5 ans</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type transmission *</label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <option selected>Fond de commerce</option>
            <option>Cession titres partielle</option>
            <option>Cession titres totale</option>
            <option>Cession d'actifs</option>
          </select>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Ancienneté *</label>
          <input type="number" value="12" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Type clients *</label>
          <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <option>B2B uniquement</option>
            <option selected>B2C uniquement</option>
            <option>Mixte</option>
          </select>
        </div>
      </div>

      <div class="flex gap-3">
        <%= link_to mockups_seller_listing_path(@listing_id), class: "px-6 py-3 border border-gray-300 rounded-lg" do %>
          Annuler
        <% end %>
        <button class="px-6 py-3 border border-gray-300 rounded-lg">
          Brouillon
        </button>
        <button class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
          Suite: Confidentielles →
        </button>
      </div>
    </form>
  </div>
</div>
