<% content_for :title, "Modifier l'annonce - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Modifier l'annonce" %>

<div class="max-w-4xl mx-auto space-y-6">
  <%= link_to mockups_seller_listing_path(@listing_id), class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour
  <% end %>

  <h2 class="text-2xl font-bold text-gray-900">Modifier l'annonce</h2>

  <form class="space-y-6">
    <div class="bg-white rounded-xl shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Informations générales</h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom de l'entreprise</label>
          <input type="text" value="Boulangerie artisanale Paris 15ème" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Secteur</label>
            <select class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option selected>Commerce de détail</option>
              <option>Restauration</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Forme juridique</label>
            <select class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option selected>SARL</option>
              <option>SAS</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-between">
      <%= link_to mockups_seller_listing_path(@listing_id), class: "px-6 py-3 border border-gray-300 rounded-full text-gray-700 hover:bg-gray-50 transition font-medium" do %>
        Annuler
      <% end %>
      <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium">
        Enregistrer les modifications
      </button>
    </div>
  </form>
</div>
