<% content_for :title, "Mes annonces - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Mes annonces" %>

<div class="max-w-7xl mx-auto space-y-6">
  <!-- Header with Actions -->
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Mes annonces</h2>
      <p class="text-gray-600 mt-1">Gérez toutes vos annonces d'entreprises à céder</p>
    </div>
    <%= link_to new_mockups_seller_listing_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-full font-medium hover:bg-blue-700 transition shadow-lg" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Créer une annonce
    <% end %>
  </div>

  <!-- Stats Summary -->
  <div class="grid grid-cols-1 sm:grid-cols-4 gap-4">
    <div class="bg-white rounded-lg p-4 border-2 border-blue-200">
      <div class="text-2xl font-bold text-blue-600">5</div>
      <div class="text-sm text-gray-600">Total</div>
    </div>
    <div class="bg-white rounded-lg p-4">
      <div class="text-2xl font-bold text-green-600">3</div>
      <div class="text-sm text-gray-600">Actives</div>
    </div>
    <div class="bg-white rounded-lg p-4">
      <div class="text-2xl font-bold text-orange-600">2</div>
      <div class="text-sm text-gray-600">En attente</div>
    </div>
    <div class="bg-white rounded-lg p-4">
      <div class="text-2xl font-bold text-gray-600">0</div>
      <div class="text-sm text-gray-600">Archivées</div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-sm p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Statut</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg">
          <option>Toutes</option>
          <option>Actives</option>
          <option>En attente de validation</option>
          <option>Brouillon</option>
          <option>Archivées</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Secteur</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg">
          <option>Tous les secteurs</option>
          <option>Commerce</option>
          <option>Restauration</option>
          <option>Services</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Tri</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg">
          <option>Plus récentes</option>
          <option>Plus anciennes</option>
          <option>Plus de vues</option>
          <option>Plus de contacts</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Listings Grid -->
  <div class="grid grid-cols-1 gap-6">
    <% [
      { id: 1, name: 'Boulangerie artisanale Paris 15ème', sector: 'Commerce', status: 'active', views: 342, interests: 5, completion: 90, ca: '450 000', city: 'Paris', created: '15/09/2025' },
      { id: 2, name: 'Café Restaurant Lyon Centre', sector: 'Restauration', status: 'active', views: 189, interests: 3, completion: 85, ca: '320 000', city: 'Lyon', created: '10/09/2025' },
      { id: 3, name: 'Garage Automobile Toulouse', sector: 'Services', status: 'pending', views: 45, interests: 1, completion: 65, ca: '280 000', city: 'Toulouse', created: '05/09/2025' },
      { id: 4, name: 'Salon de coiffure Bordeaux', sector: 'Services', status: 'active', views: 156, interests: 4, completion: 95, ca: '180 000', city: 'Bordeaux', created: '01/09/2025' },
      { id: 5, name: 'Boutique prêt-à-porter Nice', sector: 'Commerce', status: 'pending', views: 23, interests: 0, completion: 55, ca: '220 000', city: 'Nice', created: '28/08/2025' }
    ].each do |listing| %>
      <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition overflow-hidden">
        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-2">
                <h3 class="text-lg font-bold text-gray-900"><%= listing[:name] %></h3>
                <% if listing[:status] == 'active' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                    En attente
                  </span>
                <% end %>
              </div>
              <div class="flex items-center gap-4 text-sm text-gray-600">
                <span class="inline-flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  <%= listing[:sector] %>
                </span>
                <span class="inline-flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <%= listing[:city] %>
                </span>
                <span class="inline-flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <%= listing[:created] %>
                </span>
              </div>
            </div>
          </div>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
            <div>
              <div class="text-xs text-gray-600 mb-1">CA annuel</div>
              <div class="text-sm font-semibold text-gray-900"><%= listing[:ca] %> €</div>
            </div>
            <div>
              <div class="text-xs text-gray-600 mb-1">Vues</div>
              <div class="text-sm font-semibold text-gray-900"><%= listing[:views] %></div>
            </div>
            <div>
              <div class="text-xs text-gray-600 mb-1">Intéressés</div>
              <div class="text-sm font-semibold text-gray-900"><%= listing[:interests] %></div>
            </div>
            <div>
              <div class="text-xs text-gray-600 mb-1">Complétude</div>
              <div class="text-sm font-semibold <%= listing[:completion] >= 80 ? 'text-green-600' : 'text-orange-600' %>"><%= listing[:completion] %>%</div>
            </div>
          </div>

          <div class="mb-4">
            <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
              <div class="h-full <%= listing[:completion] >= 80 ? 'bg-gradient-to-r from-green-400 to-green-600' : 'bg-gradient-to-r from-orange-400 to-orange-600' %>" style="width: <%= listing[:completion] %>%"></div>
            </div>
          </div>

          <div class="flex items-center justify-between pt-4 border-t border-gray-200">
            <div class="flex items-center gap-2">
              <%= link_to mockups_seller_listing_path(listing[:id]), class: "inline-flex items-center gap-1 text-sm text-blue-600 hover:text-blue-700 font-medium" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Voir
              <% end %>
              <%= link_to edit_mockups_seller_listing_path(listing[:id]), class: "inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-700 font-medium" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Modifier
              <% end %>
              <%= link_to mockups_seller_listing_documents_path(listing[:id]), class: "inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-700 font-medium" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                Documents
              <% end %>
            </div>
            <button class="text-gray-400 hover:text-gray-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
