<% content_for :title, "Annuaire Repreneurs - Cédant - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Annuaire des Repreneurs</h1>
      <p class="text-gray-600 mt-1">Trouvez des repreneurs correspondant à vos annonces</p>
    </div>
    <%= link_to "#", class: "inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      Recherche avancée
    <% end %>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg p-4 border border-gray-200">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        <option>Tous les secteurs</option>
        <option>Industrie</option>
        <option>BTP</option>
        <option>Commerce & Distribution</option>
        <option>Services</option>
      </select>
      
      <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        <option>Toutes les localisations</option>
        <option>Île-de-France</option>
        <option>Auvergne-Rhône-Alpes</option>
        <option>Nouvelle-Aquitaine</option>
      </select>
      
      <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        <option>Toutes les offres</option>
        <option>Starter</option>
        <option>Standard</option>
        <option>Premium</option>
        <option>Club</option>
      </select>
    </div>
  </div>

  <!-- Results Count -->
  <div class="text-sm text-gray-600">
    <strong>124 repreneurs</strong> correspondent à vos critères
  </div>

  <!-- Buyer Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% 6.times do |i| %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition">
        <div class="p-6">
          <!-- Header -->
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
                M<%= i + 1 %>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Marie <%= i + 1 %></h3>
                <p class="text-xs text-gray-500">Repreneur individuel</p>
              </div>
            </div>
            <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800 font-medium">Premium</span>
          </div>

          <!-- Completeness -->
          <div class="mb-4">
            <div class="flex items-center justify-between mb-1">
              <span class="text-xs text-gray-600">Profil</span>
              <span class="text-xs font-semibold text-gray-900"><%= 65 + (i * 5) %>%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-1.5">
              <div class="bg-green-600 h-1.5 rounded-full" style="width: <%= 65 + (i * 5) %>%"></div>
            </div>
          </div>

          <!-- Info -->
          <div class="space-y-2 mb-4 text-sm">
            <div class="flex items-start gap-2">
              <svg class="w-4 h-4 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span class="text-gray-600">Services, Digital</span>
            </div>
            <div class="flex items-start gap-2">
              <svg class="w-4 h-4 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="text-gray-600">Île-de-France, Lyon</span>
            </div>
            <div class="flex items-start gap-2">
              <svg class="w-4 h-4 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-gray-600">500k-2M € CA</span>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex gap-2">
            <%= link_to "#", class: "flex-1 px-3 py-2 text-sm text-center border border-gray-300 rounded-lg hover:bg-gray-50 transition" do %>
              Voir le profil
            <% end %>
            <%= link_to "#", class: "flex-1 px-3 py-2 text-sm text-center bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" do %>
              Pousser annonce (1 ⭐)
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="flex items-center justify-between">
    <div class="text-sm text-gray-600">
      Affichage 1-6 sur 124 repreneurs
    </div>
    <div class="flex gap-2">
      <button class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50 disabled:opacity-50" disabled>
        Précédent
      </button>
      <button class="px-3 py-2 bg-blue-600 text-white rounded-lg text-sm">1</button>
      <button class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50">2</button>
      <button class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50">3</button>
      <button class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50">
        Suivant
      </button>
    </div>
  </div>
</div>
