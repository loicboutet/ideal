<% content_for :title, "Pousser mon annonce - Cédant - Idéal Reprise" %>

<div class="max-w-5xl mx-auto space-y-6">
  <!-- Header -->
  <div>
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Pousser mon annonce</h1>
    <p class="text-gray-600 mt-1">Envoyez votre annonce aux repreneurs qui correspondent</p>
  </div>

  <!-- Credit Balance -->
  <div class="bg-white rounded-xl shadow-sm p-6 border-2 border-blue-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-gray-900">12 crédits</div>
          <div class="text-sm text-gray-600">Solde disponible</div>
        </div>
      </div>
      <%= link_to "#", class: "px-4 py-2 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition text-sm font-medium" do %>
        Acheter des crédits
      <% end %>
    </div>
  </div>

  <!-- Repreneurs en favoris -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200 flex items-center justify-between">
      <div>
        <h2 class="text-lg font-bold text-gray-900">Repreneurs ayant mis vos annonces en favoris</h2>
        <p class="text-sm text-gray-600 mt-1">Sélectionnez les repreneurs à qui pousser votre annonce</p>
      </div>
      <div class="text-sm font-medium text-gray-900">
        <span id="selectedCount">0</span> sélectionné(s) = <span id="creditsNeeded">0</span> crédits
      </div>
    </div>

    <div class="divide-y divide-gray-200">
      <% 5.times do |i| %>
        <label class="p-4 hover:bg-gray-50 cursor-pointer flex items-center gap-4">
          <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" onchange="updateCount()">
          <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center text-white font-bold">
            M<%= i + 1 %>
          </div>
          <div class="flex-1">
            <div class="font-medium text-gray-900">Marie <%= i + 1 %></div>
            <div class="text-sm text-gray-600">Services, Digital • 500k-2M € • Premium</div>
          </div>
          <div class="text-sm text-gray-500">
            Complétude: <strong><%= 70 + (i * 5) %>%</strong>
          </div>
          <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Premium</span>
        </label>
      <% end %>
    </div>

    <div class="p-6 border-t border-gray-200 bg-gray-50">
      <div class="flex items-center justify-between">
        <%= link_to "#", class: "text-sm text-blue-600 hover:text-blue-700 font-medium" do %>
          Trouver plus de repreneurs →
        <% end %>
        <div class="flex gap-3">
          <div class="text-sm text-gray-600">
            <span id="creditsNeededBottom">0</span> crédits nécessaires
          </div>
          <button class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition disabled:opacity-50 disabled:cursor-not-allowed" id="pushButton" disabled>
            Pousser mon annonce
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Credit Purchase -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Acheter des crédits</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="border-2 border-gray-200 rounded-lg p-4 hover:border-blue-500 transition cursor-pointer">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">10 crédits</div>
          <div class="text-3xl font-bold text-blue-600 my-2">50 €</div>
          <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            Acheter
          </button>
        </div>
      </div>
      <div class="border-2 border-blue-500 rounded-lg p-4 relative">
        <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
          <span class="px-3 py-1 bg-blue-600 text-white text-xs font-medium rounded-full">Populaire</span>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">25 crédits</div>
          <div class="text-3xl font-bold text-blue-600 my-2">100 €</div>
          <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            Acheter
          </button>
        </div>
      </div>
      <div class="border-2 border-gray-200 rounded-lg p-4 hover:border-blue-500 transition cursor-pointer">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">50 crédits</div>
          <div class="text-3xl font-bold text-blue-600 my-2">180 €</div>
          <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            Acheter
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function updateCount() {
  const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
  const count = checkboxes.length;
  document.getElementById('selectedCount').textContent = count;
  document.getElementById('creditsNeeded').textContent = count;
  document.getElementById('creditsNeededBottom').textContent = count;
  document.getElementById('pushButton').disabled = count === 0;
}
</script>
