<% content_for :title, "Inscription Partenaire - Idéal Reprise" %>

<div class="min-h-screen bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center p-4">
  <div class="max-w-3xl w-full bg-white rounded-2xl shadow-2xl p-8">
    <%= link_to mockups_register_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-6" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Retour
    <% end %>

    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Inscription Partenaire</h1>
      <p class="text-gray-600">Rejoignez notre annuaire de professionnels</p>
    </div>

    <form class="space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Prénom *</label>
          <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" placeholder="Sophie">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom *</label>
          <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" placeholder="Conseil">
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Nom du cabinet/société *</label>
        <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" placeholder="Sophie Conseil SARL">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Type de partenaire *</label>
        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
          <option>Sélectionnez...</option>
          <option>Avocat d'affaires</option>
          <option>Expert-comptable</option>
          <option>Consultant transmission</option>
          <option>Banquier M&A</option>
          <option>Broker / Intermédiaire</option>
          <option>Autre</option>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email professionnel *</label>
        <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" placeholder="sophie@conseil-legal.fr">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone *</label>
        <input type="tel" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" placeholder="01 23 45 67 89">
      </div>

      <!-- Nouveaux champs -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Secteur couvert *</label>
        <div class="space-y-2 mb-2">
          <label class="flex items-center gap-2">
            <input type="radio" name="coverage" value="city" class="text-purple-600">
            <span class="text-sm">Ville spécifique</span>
          </label>
          <label class="flex items-center gap-2">
            <input type="radio" name="coverage" value="dept" class="text-purple-600">
            <span class="text-sm">Département(s)</span>
          </label>
          <label class="flex items-center gap-2">
            <input type="radio" name="coverage" value="region" class="text-purple-600" checked>
            <span class="text-sm">Région(s)</span>
          </label>
          <label class="flex items-center gap-2">
            <input type="radio" name="coverage" value="national" class="text-purple-600">
            <span class="text-sm">France entière</span>
          </label>
          <label class="flex items-center gap-2">
            <input type="radio" name="coverage" value="international" class="text-purple-600">
            <span class="text-sm">International</span>
          </label>
        </div>
        <input type="text" placeholder="Précisez (ex: Île-de-France, Lyon...)" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Stades d'intervention *</label>
        <p class="text-xs text-gray-500 mb-2">Non public - utilisé pour matching intelligent</p>
        <div class="grid grid-cols-2 gap-2">
          <% ['Échange d\'infos', 'Analyse', 'Alignement projets', 'Négociation', 'LOI', 'Audits', 'Financement', 'Deal signé'].each do |stage| %>
            <label class="flex items-center gap-2 p-2 bg-gray-50 rounded">
              <input type="checkbox" class="rounded text-purple-600">
              <span class="text-sm"><%= stage %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Secteurs d'activité visés (si spécialisation)</label>
        <select multiple size="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
          <option>Industrie</option>
          <option>BTP</option>
          <option>Commerce & Distribution</option>
          <option>Transport & logistique</option>
          <option>Hôtellerie / Restauration</option>
          <option>Services</option>
          <option>Digital</option>
          <option>Santé</option>
          <option>Immobilier</option>
          <option>Autre</option>
        </select>
        <p class="text-xs text-gray-500 mt-1">Laissez vide si tous secteurs</p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Lien Google Agenda (prise de RDV)</label>
        <input type="url" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" placeholder="https://calendar.google.com/...">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Mot de passe *</label>
        <input type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" placeholder="••••••••">
      </div>

      <div class="flex items-start gap-2">
        <input type="checkbox" class="rounded border-gray-300 text-purple-600 focus:ring-purple-500 mt-1">
        <label class="text-sm text-gray-700">
          J'accepte les <%= link_to "CGU", mockups_terms_path, class: "text-purple-600 hover:underline" %> et la <%= link_to "Politique de confidentialité", mockups_privacy_path, class: "text-purple-600 hover:underline" %>
        </label>
      </div>

      <button type="submit" class="w-full px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition font-medium">
        Créer mon compte partenaire
      </button>
    </form>
  </div>
</div>
