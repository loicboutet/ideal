<% content_for :title, "Webhook Logs - Administration" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Subscription Webhook Logs</h1>
      <p class="text-gray-600 mt-1">Track all subscription-related webhook calls from Stripe</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <%= form_with url: admin_subscription_webhook_logs_path, method: :get, class: "flex flex-wrap gap-4" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :event_type, "Event Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :event_type, 
            options_for_select([["All Events", ""]] + @event_types.map { |et| [et.titleize.gsub('.', ' - '), et] }, params[:event_type]),
            {}, 
            class: "w-full rounded-lg border-gray-300 focus:border-admin-500 focus:ring-admin-500" %>
      </div>
      
      <div class="flex-1 min-w-[200px]">
        <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status,
            options_for_select([["All Statuses", ""], ["Success", "success"], ["Failed", "failed"], ["Pending", "pending"]], params[:status]),
            {},
            class: "w-full rounded-lg border-gray-300 focus:border-admin-500 focus:ring-admin-500" %>
      </div>
      
      <div class="flex-1 min-w-[200px]">
        <%= f.label :user_id, "User ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :user_id, 
            value: params[:user_id],
            placeholder: "Filter by user ID",
            class: "w-full rounded-lg border-gray-300 focus:border-admin-500 focus:ring-admin-500" %>
      </div>
      
      <div class="flex items-end gap-2">
        <%= f.submit "Filter", class: "px-4 py-2 bg-admin-600 text-white rounded-lg hover:bg-admin-700 transition" %>
        <%= link_to "Clear", admin_subscription_webhook_logs_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition" %>
      </div>
    <% end %>
  </div>

  <% if @logs.any? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subscription ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @logs.each do |log| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= l(log.created_at, format: :long) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= log.user.email %>
                <span class="text-xs text-gray-400">(ID: <%= log.user_id %>)</span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= log.event_type_display %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-500">
                <%= log.subscription_id&.truncate(20) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% case log.status %>
                <% when 'success' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Success</span>
                <% when 'failed' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Failed</span>
                <% else %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to "Details", admin_subscription_webhook_log_path(log), 
                    class: "text-admin-600 hover:text-admin-900" %>
                <span class="text-gray-300">|</span>
                <%= link_to "Delete", admin_subscription_webhook_log_path(log), 
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this log?" },
                    class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @logs %>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No webhook logs found</h3>
      <p class="mt-1 text-sm text-gray-500">Webhook logs will appear here when subscription events are received from Stripe.</p>
    </div>
  <% end %>
</div>
