<% content_for :title, "#{@listing.title} - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Back Link -->
  <%= link_to pending_admin_listings_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour à la file d'attente
  <% end %>

  <!-- Header -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-start justify-between mb-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @listing.title %></h1>
        <p class="text-gray-600"><%= sector_badge(@listing.industry_sector) %> • <%= listing_price_display(@listing) %></p>
      </div>
      <div class="flex gap-2">
        <%= validation_status_badge(@listing.validation_status) %>
        <%= deal_type_badge(@listing.deal_type) %>
      </div>
    </div>
    
    <!-- Seller Info -->
    <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
      <%= user_initials_avatar(@seller) %>
      <div>
        <div class="font-medium text-gray-900">
          <%= @seller.first_name.presence || @seller.email %>
          <% if @seller.last_name.present? %>
            <%= @seller.last_name %>
          <% end %>
        </div>
        <div class="text-sm text-gray-600"><%= @seller.email %></div>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Vues</div>
      <div class="text-2xl font-bold text-gray-900"><%= @stats[:views] %></div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Favoris</div>
      <div class="text-2xl font-bold text-gray-900"><%= @stats[:favorites] %></div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Réservations</div>
      <div class="text-2xl font-bold text-gray-900"><%= @stats[:reservations] %></div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Abandons</div>
      <div class="text-2xl font-bold text-red-600"><%= @stats[:abandons] %></div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-gray-200">
      <div class="text-sm text-gray-600">Complétude</div>
      <div class="text-2xl font-bold text-green-600"><%= @stats[:completeness] %>%</div>
    </div>
  </div>

  <!-- Listing Details -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-bold text-gray-900">Détails de l'annonce</h2>
    </div>
    <div class="p-6 space-y-6">
      <!-- Public Info -->
      <div>
        <h3 class="text-sm font-medium text-gray-700 mb-2">Description publique</h3>
        <p class="text-gray-900"><%= @listing.description_public || "Non renseignée" %></p>
      </div>

      <!-- Confidential Info -->
      <% if @listing.description_confidential.present? %>
        <div>
          <h3 class="text-sm font-medium text-gray-700 mb-2">Description confidentielle</h3>
          <p class="text-gray-900"><%= @listing.description_confidential %></p>
        </div>
      <% end %>

      <!-- Key Metrics -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% if @listing.annual_revenue.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-700">Chiffre d'affaires</h3>
            <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(@listing.annual_revenue, unit: '€', separator: ',', delimiter: ' ') %></p>
          </div>
        <% end %>
        <% if @listing.employee_count.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-700">Effectif</h3>
            <p class="text-lg font-semibold text-gray-900"><%= @listing.employee_count %> employé<%= 's' if @listing.employee_count > 1 %></p>
          </div>
        <% end %>
        <% if @listing.net_profit.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-700">Résultat net</h3>
            <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(@listing.net_profit, unit: '€', separator: ',', delimiter: ' ') %></p>
          </div>
        <% end %>
      </div>

      <!-- Location -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% if @listing.location_department.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-700">Département</h3>
            <p class="text-gray-900"><%= @listing.location_department %></p>
          </div>
        <% end %>
        <% if @listing.location_city.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-700">Ville (confidentiel)</h3>
            <p class="text-gray-900"><%= @listing.location_city %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Validation Comment (if rejected) -->
  <% if @listing.rejected? && @listing.validation_comment.present? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-6 h-6 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <p class="font-semibold text-red-900">Raison du rejet</p>
          <p class="mt-1 text-sm text-red-800"><%= @listing.validation_comment %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Validation Actions -->
  <% if @listing.pending_validation? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Actions de validation</h2>
      
      <!-- Quick Validate -->
      <div class="flex flex-col gap-4">
        <div class="flex gap-3">
          <%= button_to validate_admin_listing_path(@listing), method: :patch, class: "flex-1 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium text-center", form: { data: { turbo_confirm: "Valider et publier cette annonce ?" } } do %>
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Valider et publier
          <% end %>
        </div>

        <!-- Reject with Comment Form -->
        <%= form_with url: reject_admin_listing_path(@listing), method: :patch, class: "space-y-3" do |f| %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Rejeter avec commentaire (visible par le vendeur)</label>
            <%= f.text_area :comment, rows: 3, placeholder: "Raison du rejet...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500" %>
          </div>
          <%= f.submit "Rejeter l'annonce", class: "w-full px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-medium", data: { turbo_confirm: "Rejeter cette annonce ?" } %>
        <% end %>

        <!-- Optional: Attribution to Buyer -->
        <details class="border-t border-gray-200 pt-4">
          <summary class="cursor-pointer text-sm font-medium text-gray-700">Attribution exclusive (optionnel)</summary>
          <%= form_with url: validate_admin_listing_path(@listing), method: :patch, class: "mt-3 space-y-3" do |f| %>
            <%= f.select :attributed_buyer_id, 
                options_from_collection_for_select(BuyerProfile.includes(:user).all, :id, ->(bp) { "#{bp.user.email} - #{bp.buyer_type&.humanize}" }),
                { include_blank: "Sélectionner un repreneur..." },
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
            <p class="text-xs text-gray-600">Cette annonce sera visible uniquement par le repreneur sélectionné</p>
            <%= f.submit "Valider et attribuer", class: "w-full px-6 py-3 bg-admin-600 text-white rounded-lg hover:bg-admin-700 transition font-medium" %>
          <% end %>
        </details>
      </div>
    </div>
  <% end %>

  <!-- Edit Link -->
  <div class="flex gap-3">
    <%= link_to edit_admin_listing_path(@listing), class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition" do %>
      Modifier l'annonce
    <% end %>
  </div>
</div>
