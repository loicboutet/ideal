<% content_for :title, "Gestion des annonces - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Gestion des annonces</h1>
      <p class="text-gray-600">Toutes les annonces de la plateforme</p>
    </div>
    <%= link_to new_admin_listing_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-admin-600 text-white rounded-lg hover:bg-admin-700 transition" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Créer une annonce
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
      <div class="text-sm text-gray-600">Total</div>
      <div class="text-2xl font-bold text-gray-900"><%= @stats[:total] %></div>
    </div>
    <div class="bg-yellow-50 rounded-lg p-4 shadow-sm border border-yellow-200">
      <div class="text-sm text-yellow-800">En attente</div>
      <div class="text-2xl font-bold text-yellow-900">
        <%= link_to @stats[:pending], pending_admin_listings_path, class: "hover:underline" %>
      </div>
    </div>
    <div class="bg-green-50 rounded-lg p-4 shadow-sm border border-green-200">
      <div class="text-sm text-green-800">Validées</div>
      <div class="text-2xl font-bold text-green-900"><%= @stats[:approved] %></div>
    </div>
    <div class="bg-red-50 rounded-lg p-4 shadow-sm border border-red-200">
      <div class="text-sm text-red-800">Rejetées</div>
      <div class="text-2xl font-bold text-red-900"><%= @stats[:rejected] %></div>
    </div>
  </div>

  <!-- Quick Link to Pending Queue -->
  <% if @stats[:pending] > 0 %>
    <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <p class="font-semibold text-orange-900"><%= @stats[:pending] %> annonce<%= 's' if @stats[:pending] != 1 %> en attente de validation</p>
            <p class="text-sm text-orange-700">Consultez la file d'attente pour traiter les annonces</p>
          </div>
        </div>
        <%= link_to pending_admin_listings_path, class: "px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition" do %>
          Voir la file d'attente
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Filters -->
  <%= form_with url: admin_listings_path, method: :get, class: "bg-white rounded-lg shadow-sm p-4 border border-gray-200" do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div>
        <%= f.select :validation_status, 
            options_for_select([['Tous', 'all'], ['En attente', 'pending'], ['Validées', 'approved'], ['Rejetées', 'rejected']], params[:validation_status]),
            {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
      </div>
      <div>
        <%= f.select :status,
            options_for_select([['Tous', 'all'], ['Brouillon', 'draft'], ['Publiée', 'published'], ['Réservée', 'reserved']], params[:status]),
            {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
      </div>
      <div>
        <%= f.select :sector,
            options_for_select([['Tous les secteurs', 'all']] + Listing.industry_sectors.keys.map { |s| [s.humanize, s] }, params[:sector]),
            {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
      </div>
      <div>
        <%= f.search_field :search, placeholder: "Rechercher...", value: params[:search], class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
      </div>
    </div>
    <div class="mt-3 flex gap-2">
      <%= f.submit "Filtrer", class: "px-4 py-2 bg-admin-600 text-white rounded-lg hover:bg-admin-700 transition" %>
      <%= link_to admin_listings_path, class: "inline-flex items-center gap-2 px-4 py-2 border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Effacer les filtres
      <% end %>
    </div>
  <% end %>

  <!-- Listings Table -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Annonce</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Vendeur</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Prix</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Validation</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @listings.each do |listing| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <div class="font-medium text-gray-900"><%= listing.title %></div>
              <div class="text-sm text-gray-500"><%= sector_badge(listing.industry_sector) %></div>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900">
              <%= listing.seller_profile.user.email %>
            </td>
            <td class="px-6 py-4 text-sm font-medium text-gray-900">
              <%= listing_price_display(listing) %>
            </td>
            <td class="px-6 py-4">
              <%= validation_status_badge(listing.validation_status) %>
            </td>
            <td class="px-6 py-4">
              <%= listing_status_badge(listing.status) %>
            </td>
            <td class="px-6 py-4 text-right text-sm">
              <%= link_to "Voir", admin_listing_path(listing), class: "text-admin-600 hover:text-admin-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Pagination -->
    <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
      <div class="flex-1 flex justify-between sm:hidden">
        <% if @listings.prev_page %>
          <%= link_to admin_listings_path(page: @listings.prev_page, search: params[:search], status: params[:status], validation_status: params[:validation_status], sector: params[:sector]), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            Précédent
          <% end %>
        <% else %>
          <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-50 cursor-not-allowed">
            Précédent
          </span>
        <% end %>
        <% if @listings.next_page %>
          <%= link_to admin_listings_path(page: @listings.next_page, search: params[:search], status: params[:status], validation_status: params[:validation_status], sector: params[:sector]), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            Suivant
          <% end %>
        <% else %>
          <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-50 cursor-not-allowed">
            Suivant
          </span>
        <% end %>
      </div>
      <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Affichage de <span class="font-medium"><%= @listings.offset_value + 1 %></span> à <span class="font-medium"><%= [@listings.offset_value + @listings.count, @listings.total_count].min %></span> sur <span class="font-medium"><%= @listings.total_count %></span> résultats
          </p>
        </div>
        <div>
          <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
            <% if @listings.prev_page %>
              <%= link_to admin_listings_path(page: @listings.prev_page, search: params[:search], status: params[:status], validation_status: params[:validation_status], sector: params[:sector]), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                <span class="sr-only">Précédent</span>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-50 text-sm font-medium text-gray-300 cursor-not-allowed">
                <span class="sr-only">Précédent</span>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              </span>
            <% end %>
            
            <% page_start = [1, @listings.current_page - 1].max %>
            <% page_end = [page_start + 2, @listings.total_pages].min %>
            <% page_start = [page_end - 2, 1].max if page_end - page_start < 2 %>
            
            <% (page_start..page_end).each do |page| %>
              <% if page == @listings.current_page %>
                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-admin-50 text-sm font-medium text-admin-600"><%= page %></span>
              <% else %>
                <%= link_to page, admin_listings_path(page: page, search: params[:search], status: params[:status], validation_status: params[:validation_status], sector: params[:sector]), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
              <% end %>
            <% end %>
            
            <% if @listings.next_page %>
              <%= link_to admin_listings_path(page: @listings.next_page, search: params[:search], status: params[:status], validation_status: params[:validation_status], sector: params[:sector]), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                <span class="sr-only">Suivant</span>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-50 text-sm font-medium text-gray-300 cursor-not-allowed">
                <span class="sr-only">Suivant</span>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            <% end %>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
