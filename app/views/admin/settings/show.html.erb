<% content_for :title, "Paramètres plateforme - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Flash Messages -->
  <% if notice.present? %>
    <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start">
      <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <span><%= notice %></span>
    </div>
  <% end %>
  
  <% if alert.present? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start">
      <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
      <span><%= alert %></span>
    </div>
  <% end %>

  <!-- Page Header -->
  <div>
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Paramètres de la plateforme</h1>
    <p class="text-gray-600 mt-1">Configuration des tarifs, timers et textes</p>
  </div>

  <%= form_with url: admin_settings_path, method: :patch, local: true, html: { class: "space-y-6" } do |f| %>
    <!-- Tarifs & Offres -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-6">Tarifs & Textes des offres</h2>
      
      <div class="space-y-6">
        <!-- Repreneur -->
        <div>
          <h3 class="text-md font-semibold text-gray-900 mb-4">Repreneurs</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Starter (mensuel) - €</label>
              <%= f.number_field 'settings[buyer_plan_starter_monthly]', 
                  value: @settings[:pricing][:buyer_plan_starter_monthly], 
                  step: "0.01",
                  min: "0",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Standard (mensuel) - €</label>
              <%= f.number_field 'settings[buyer_plan_standard_monthly]', 
                  value: @settings[:pricing][:buyer_plan_standard_monthly], 
                  step: "0.01",
                  min: "0",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Premium (mensuel) - €</label>
              <%= f.number_field 'settings[buyer_plan_premium_monthly]', 
                  value: @settings[:pricing][:buyer_plan_premium_monthly], 
                  step: "0.01",
                  min: "0",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Club (annuel) - €</label>
              <%= f.number_field 'settings[buyer_plan_club_annual]', 
                  value: @settings[:pricing][:buyer_plan_club_annual], 
                  step: "0.01",
                  min: "0",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
            </div>
          </div>
        </div>

        <!-- Packs crédits -->
        <div>
          <h3 class="text-md font-semibold text-gray-900 mb-4">Packs de crédits</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Pack Small - Prix (€)</label>
              <%= f.number_field 'settings[credits_pack_small_price]', 
                  value: @settings[:pricing][:credits_pack_small_price], 
                  step: "0.01",
                  min: "0",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
              <label class="block text-sm font-medium text-gray-700 mb-2 mt-2">Crédits</label>
              <%= f.number_field 'settings[credits_pack_small_credits]', 
                  value: @settings[:pricing][:credits_pack_small_credits], 
                  min: "1",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Pack Medium - Prix (€)</label>
              <%= f.number_field 'settings[credits_pack_medium_price]', 
                  value: @settings[:pricing][:credits_pack_medium_price], 
                  step: "0.01",
                  min: "0",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
              <label class="block text-sm font-medium text-gray-700 mb-2 mt-2">Crédits</label>
              <%= f.number_field 'settings[credits_pack_medium_credits]', 
                  value: @settings[:pricing][:credits_pack_medium_credits], 
                  min: "1",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Pack Large - Prix (€)</label>
              <%= f.number_field 'settings[credits_pack_large_price]', 
                  value: @settings[:pricing][:credits_pack_large_price], 
                  step: "0.01",
                  min: "0",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
              <label class="block text-sm font-medium text-gray-700 mb-2 mt-2">Crédits</label>
              <%= f.number_field 'settings[credits_pack_large_credits]', 
                  value: @settings[:pricing][:credits_pack_large_credits], 
                  min: "1",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Timers Pipeline -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-6">Ajustement des timers par étape pipeline</h2>
      <p class="text-sm text-gray-600 mb-6">Minimum 1 semaine (7 jours), maximum 2 mois (60 jours)</p>
      
      <div class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">À contacter</label>
            <div class="flex items-center gap-2">
              <%= f.number_field 'settings[timer_to_contact]', 
                  value: @settings[:timers][:timer_to_contact], 
                  min: "7", 
                  max: "60",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
              <span class="text-sm text-gray-600">jours</span>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Échange infos + Analyse + Alignement projets (total)</label>
            <div class="flex items-center gap-2">
              <%= f.number_field 'settings[timer_info_analysis_alignment]', 
                  value: @settings[:timers][:timer_info_analysis_alignment], 
                  min: "7", 
                  max: "60",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
              <span class="text-sm text-gray-600">jours</span>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Négociation</label>
            <div class="flex items-center gap-2">
              <%= f.number_field 'settings[timer_negotiation]', 
                  value: @settings[:timers][:timer_negotiation], 
                  min: "7", 
                  max: "60",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
              <span class="text-sm text-gray-600">jours</span>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">LOI</label>
            <div class="flex items-center gap-2">
              <input type="text" value="Validation cédant" disabled class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-50">
              <span class="text-sm text-gray-600">(pause timer)</span>
            </div>
          </div>
        </div>
        
        <div class="bg-admin-50 border border-admin-200 rounded-lg p-4">
          <p class="text-sm text-admin-800">
            <strong>Note:</strong> Les étapes Audits, Financement et Deal signé n'ont pas de timer.
          </p>
        </div>
      </div>
    </div>

    <!-- Textes & Messages -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-6">Textes personnalisables</h2>
      
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Message de bienvenue (nouveaux utilisateurs)</label>
          <%= f.text_area 'settings[text_welcome_message]', 
              value: @settings[:texts][:text_welcome_message],
              rows: 3, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Message validation annonce</label>
          <%= f.text_area 'settings[text_validation_message]', 
              value: @settings[:texts][:text_validation_message],
              rows: 3, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Description offre Starter</label>
            <%= f.text_field 'settings[text_offer_starter]', 
                value: @settings[:texts][:text_offer_starter],
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Description offre Standard</label>
            <%= f.text_field 'settings[text_offer_standard]', 
                value: @settings[:texts][:text_offer_standard],
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Description offre Premium</label>
            <%= f.text_field 'settings[text_offer_premium]', 
                value: @settings[:texts][:text_offer_premium],
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Description offre Club</label>
            <%= f.text_field 'settings[text_offer_club]', 
                value: @settings[:texts][:text_offer_club],
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-end gap-3">
      <%= link_to 'Annuler', admin_root_path, class: "px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition" %>
      <%= f.submit 'Enregistrer les modifications', class: "px-6 py-2 bg-admin-600 text-white rounded-lg hover:bg-admin-700 transition" %>
    </div>
  <% end %>
</div>
