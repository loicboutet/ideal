<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Flash Messages -->
    <% if notice.present? %>
      <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start">
        <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span><%= notice %></span>
      </div>
    <% end %>
    
    <% if alert.present? %>
      <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start">
        <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <span><%= alert %></span>
      </div>
    <% end %>

    <!-- Breadcrumb -->
    <nav class="mb-4 text-sm">
      <%= link_to "Utilisateurs", admin_users_path, class: "text-purple-600 hover:text-purple-800" %>
      <span class="text-gray-500 mx-2">›</span>
      <%= link_to @user.full_name, admin_user_path(@user), class: "text-purple-600 hover:text-purple-800" %>
      <span class="text-gray-500 mx-2">›</span>
      <span class="text-gray-700">Modifier</span>
    </nav>

    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Modifier l'utilisateur</h1>
      <p class="text-gray-600 mt-1"><%= @user.full_name %></p>
    </div>

    <!-- Form -->
    <%= render "form", user: @user %>
  </div>
</div>
