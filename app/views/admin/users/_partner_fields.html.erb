<div class="bg-white rounded-lg shadow-sm p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Profil Partenaire</h3>
  
  <%= f.fields_for :partner_profile_attributes, @user.partner_profile do |partner_form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= partner_form.label :partner_type, "Type de partenaire", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= partner_form.select :partner_type,
          options_for_select([
            ['Avocat', 'lawyer'],
            ['Expert-comptable', 'accountant'],
            ['Consultant', 'consultant'],
            ['Banquier', 'banker'],
            ['Courtier', 'broker'],
            ['Autre', 'other']
          ], @user.partner_profile&.partner_type),
          { include_blank: 'Sélectionner un type' },
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= partner_form.label :validation_status, "Statut de validation", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= partner_form.select :validation_status,
          options_for_select([
            ['En attente', 'pending'],
            ['Approuvé', 'approved'],
            ['Rejeté', 'rejected']
          ], @user.partner_profile&.validation_status),
          {},
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= partner_form.label :coverage_area, "Zone de couverture", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= partner_form.select :coverage_area,
          options_for_select([
            ['Ville', 'city'],
            ['Département', 'department'],
            ['Région', 'region'],
            ['National', 'nationwide'],
            ['International', 'international']
          ], @user.partner_profile&.coverage_area),
          { include_blank: 'Sélectionner une zone' },
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= partner_form.label :website, "Site web", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= partner_form.url_field :website, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent", placeholder: "https://exemple.com" %>
      </div>

      <div class="md:col-span-2">
        <%= partner_form.label :services_offered, "Services proposés", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= partner_form.text_area :services_offered, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent", placeholder: "Décrivez les services proposés..." %>
      </div>
    </div>
  <% end %>
</div>
