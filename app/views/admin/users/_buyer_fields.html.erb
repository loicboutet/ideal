<div class="bg-white rounded-lg shadow-sm p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Profil Repreneur</h3>
  
  <%= f.fields_for :buyer_profile_attributes, @user.buyer_profile do |buyer_form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= buyer_form.label :subscription_plan, "Plan d'abonnement", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= buyer_form.select :subscription_plan,
          options_for_select([
            ['Gratuit', 'free'],
            ['Starter (€89/mois)', 'starter'],
            ['Standard (€199/mois)', 'standard'],
            ['Premium (€249/mois)', 'premium'],
            ['Club (€1200/an)', 'club']
          ], @user.buyer_profile&.subscription_plan),
          {},
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= buyer_form.label :buyer_type, "Type d'acheteur", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= buyer_form.select :buyer_type,
          options_for_select([
            ['Individuel', 'individual'],
            ['Holding', 'holding'],
            ['Fonds', 'fund'],
            ['Investisseur', 'investor']
          ], @user.buyer_profile&.buyer_type),
          { include_blank: 'Sélectionner un type' },
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= buyer_form.label :credits, "Crédits", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= buyer_form.number_field :credits, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent", min: 0 %>
      </div>

      <div class="flex items-center pt-6">
        <label class="flex items-center cursor-pointer">
          <%= buyer_form.check_box :verified_buyer, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-700">Acheteur vérifié (badge)</span>
        </label>
      </div>
    </div>
  <% end %>
</div>
