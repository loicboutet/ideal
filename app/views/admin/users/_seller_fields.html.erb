<div class="bg-white rounded-lg shadow-sm p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Profil Vendeur</h3>
  
  <%= f.fields_for :seller_profile_attributes, @user.seller_profile do |seller_form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-center">
        <label class="flex items-center cursor-pointer">
          <%= seller_form.check_box :is_broker, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-700">Est courtier/broker</span>
        </label>
      </div>

      <div class="flex items-center">
        <label class="flex items-center cursor-pointer">
          <%= seller_form.check_box :premium_access, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-700">Accès premium</span>
        </label>
      </div>

      <div>
        <%= seller_form.label :credits, "Crédits", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= seller_form.number_field :credits, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent", min: 0 %>
      </div>

      <div>
        <%= seller_form.label :free_contacts_limit, "Limite contacts gratuits", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= seller_form.number_field :free_contacts_limit, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent", min: 0 %>
      </div>

      <div class="flex items-center">
        <label class="flex items-center cursor-pointer">
          <%= seller_form.check_box :receive_signed_nda, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-700">Recevoir les NDAs signés</span>
        </label>
      </div>
    </div>
  <% end %>
</div>
