<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Flash Messages -->
    <%= render 'shared/flash_messages' %>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
        <%= link_to "Affaires", admin_deals_path, class: "hover:text-purple-600" %>
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <%= link_to "Détails", admin_deal_path(@deal), class: "hover:text-purple-600" %>
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span>Assigner</span>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Assigner une affaire exclusive</h1>
      <p class="text-gray-600 mt-1">Attribuer cette annonce à un repreneur spécifique</p>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Form Section -->
      <div class="md:col-span-2">
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">Sélectionner le repreneur</h2>

          <!-- Current Assignment -->
          <% if @deal.buyer_profile %>
            <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-yellow-600 mr-2 mt-0.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div class="flex-1">
                  <h3 class="text-sm font-medium text-yellow-900 mb-1">Affaire actuellement assignée à :</h3>
                  <p class="text-sm text-yellow-800 font-semibold">
                    <%= @deal.buyer_profile.user.full_name %> (<%= @deal.buyer_profile.user.email %>)
                  </p>
                  <p class="text-xs text-yellow-700 mt-1">
                    Sélectionnez un nouveau repreneur pour réassigner cette affaire
                  </p>
                </div>
              </div>
            </div>
          <% end %>

          <%= form_with url: assign_exclusive_admin_deal_path(@deal), method: :post, class: "space-y-6" do |f| %>
            <!-- Buyer Selection -->
            <div>
              <label for="buyer_profile_id" class="block text-sm font-medium text-gray-700 mb-2">
                Repreneur <span class="text-red-500">*</span>
              </label>
              <select name="buyer_profile_id" id="buyer_profile_id" required
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                <option value="">-- Sélectionner un repreneur --</option>
                <% @buyers.each do |buyer| %>
                  <option value="<%= buyer.buyer_profile.id %>" 
                          <%= 'selected' if @deal.buyer_profile_id == buyer.buyer_profile.id %>>
                    <%= buyer.full_name %> - <%= buyer.email %>
                    <% if buyer.buyer_profile.buyer_type.present? %>
                      (<%= buyer.buyer_profile.buyer_type %>)
                    <% end %>
                  </option>
                <% end %>
              </select>
              <p class="mt-1 text-sm text-gray-500">
                Choisissez le repreneur qui recevra cette affaire en exclusivité
              </p>
            </div>

            <!-- Information Box -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mr-2 mt-0.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="flex-1">
                  <h3 class="text-sm font-medium text-blue-900 mb-1">Ce qui va se passer :</h3>
                  <ul class="text-sm text-blue-800 space-y-1 list-disc list-inside">
                    <li>Une affaire sera créée pour le repreneur sélectionné</li>
                    <li>L'affaire sera automatiquement réservée pour 7 jours</li>
                    <li>Le repreneur recevra une notification</li>
                    <li>Le statut sera défini sur "À contacter"</li>
                  </ul>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-end gap-3 pt-4 border-t">
              <%= link_to "Annuler", admin_deal_path(@deal), class: "px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors" %>
              <%= f.submit "Assigner l'affaire", class: "px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Listing Info Section -->
      <div class="space-y-6">
        <!-- Listing Card -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Annonce concernée</h2>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Titre</label>
              <p class="text-sm text-gray-900"><%= @listing.title %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Secteur</label>
              <p class="text-sm text-gray-900"><%= @listing.industry_sector.humanize %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Département</label>
              <p class="text-sm text-gray-900"><%= @listing.location_department %></p>
            </div>
            <% if @listing.annual_revenue %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">CA</label>
                <p class="text-sm text-gray-900"><%= number_to_currency(@listing.annual_revenue, unit: "€", separator: ",", delimiter: " ", format: "%n %u") %></p>
              </div>
            <% end %>
            <% if @listing.employee_count %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Employés</label>
                <p class="text-sm text-gray-900"><%= @listing.employee_count %></p>
              </div>
            <% end %>
          </div>
          <div class="mt-4 pt-4 border-t">
            <%= link_to "Voir l'annonce complète", admin_listing_path(@listing), class: "text-sm text-purple-600 hover:text-purple-700" %>
          </div>
        </div>

        <!-- Help Card -->
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-sm font-semibold text-gray-900 mb-2">Besoin d'aide ?</h3>
          <p class="text-sm text-gray-600">
            L'assignation exclusive permet de réserver une annonce pour un repreneur spécifique. 
            Cela est utile pour gérer des opportunités sur mesure ou des mises en relation directes.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
