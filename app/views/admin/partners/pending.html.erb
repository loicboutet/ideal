<% content_for :title, "Partenaires en attente - Administration - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-3 mb-2">
        <%= link_to admin_partners_path, class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold text-gray-900">Partenaires en attente</h1>
      </div>
      <p class="text-gray-600">Candidatures en attente de validation</p>
    </div>
    <div class="flex items-center gap-2 px-4 py-2 bg-orange-100 text-orange-800 rounded-lg">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="font-bold"><%= @partners.count %> candidature<%= 's' if @partners.count != 1 %></span>
    </div>
  </div>

  <!-- Pending Partners -->
  <div class="space-y-4">
    <% if @partners.any? %>
      <% @partners.each do |partner| %>
        <div class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition">
          <div class="flex flex-col lg:flex-row gap-6">
            <!-- Partner Info -->
            <div class="flex-1">
              <div class="flex items-start gap-4 mb-4">
                <div class="w-16 h-16 bg-admin-600 rounded-lg flex items-center justify-center text-white font-bold text-xl flex-shrink-0">
                  <%= (partner.user.company_name || partner.user.full_name || partner.user.email).split(' ').map(&:first).join[0..1].upcase %>
                </div>
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 mb-1">
                    <%= partner.user.company_name || partner.user.full_name || partner.user.email %>
                  </h3>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                    <%= partner.partner_type.humanize %>
                  </span>
                </div>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <div class="text-sm text-gray-500 mb-1">Contact principal</div>
                  <div class="font-medium text-gray-900"><%= partner.user.full_name || '-' %></div>
                </div>
                <div>
                  <div class="text-sm text-gray-500 mb-1">Email</div>
                  <div class="font-medium text-gray-900"><%= partner.user.email %></div>
                </div>
                <div>
                  <div class="text-sm text-gray-500 mb-1">Téléphone</div>
                  <div class="font-medium text-gray-900"><%= partner.user.phone || '-' %></div>
                </div>
                <div>
                  <div class="text-sm text-gray-500 mb-1">Zone de couverture</div>
                  <div class="font-medium text-gray-900"><%= partner.coverage_area&.humanize || '-' %></div>
                </div>
                <div>
                  <div class="text-sm text-gray-500 mb-1">Site web</div>
                  <div class="font-medium text-gray-900"><%= partner.website || '-' %></div>
                </div>
                <div>
                  <div class="text-sm text-gray-500 mb-1">Candidature</div>
                  <div class="font-medium text-gray-900">
                    <%= time_ago_in_words(partner.created_at) %> ago
                  </div>
                </div>
              </div>
            </div>

            <!-- Actions -->
            <div class="flex lg:flex-col items-center gap-3 lg:min-w-[160px]">
              <%= link_to admin_partner_path(partner), class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Examiner
              <% end %>
              <%= button_to approve_admin_partner_path(partner), method: :patch, class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir approuver ce partenaire ?" } } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Approuver
              <% end %>
              <%= button_to reject_admin_partner_path(partner), method: :patch, class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir rejeter ce partenaire ?" } } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Rejeter
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-xl shadow-sm p-12 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune candidature en attente</h3>
        <p class="text-gray-600">Tous les partenaires ont été traités.</p>
      </div>
    <% end %>
  </div>
</div>
