<% content_for :title, "Approuver enrichissement - Administration - Idéal Reprise" %>

<div class="max-w-2xl mx-auto space-y-6">
  <!-- Back Button -->
  <div>
    <%= link_to admin_enrichment_path(@enrichment), class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Retour à l'enrichissement
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Approuver l'enrichissement</h1>
    
    <!-- Summary -->
    <div class="bg-gray-50 rounded-lg p-4 mb-6">
      <div class="grid grid-cols-2 gap-4 text-sm">
        <div>
          <div class="text-gray-600">Repreneur</div>
          <div class="font-medium text-gray-900"><%= @buyer&.user&.full_name || 'N/A' %></div>
        </div>
        <div>
          <div class="text-gray-600">Annonce</div>
          <div class="font-medium text-gray-900"><%= @listing&.title || 'N/A' %></div>
        </div>
        <div>
          <div class="text-gray-600">Type de document</div>
          <div class="font-medium text-gray-900"><%= @enrichment.document_category || 'Document' %></div>
        </div>
        <div>
          <div class="text-gray-600">Crédits actuels du repreneur</div>
          <div class="font-medium text-gray-900"><%= @buyer&.credits || 0 %></div>
        </div>
      </div>
    </div>

    <%= form_tag approve_admin_enrichment_path(@enrichment), method: :patch do %>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Crédits à attribuer
          </label>
          <div class="flex items-center gap-4">
            <%= number_field_tag :credits_awarded, 1, min: 0, max: 10, class: "w-24 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500 focus:border-admin-500" %>
            <span class="text-sm text-gray-500">crédit(s)</span>
          </div>
          <p class="text-xs text-gray-500 mt-1">Nombre de crédits à ajouter au compte du repreneur</p>
        </div>

        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-sm text-green-900">
                L'approbation attribuera automatiquement les crédits au repreneur et notifiera les deux parties.
              </p>
            </div>
          </div>
        </div>

        <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
          <%= link_to admin_enrichment_path(@enrichment), class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition" do %>
            Annuler
          <% end %>
          <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
            Approuver et attribuer les crédits
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
