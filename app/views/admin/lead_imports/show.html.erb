<% content_for :title, "Détails de l'import - Administration" %>

<div class="space-y-6">
  <%= link_to admin_lead_imports_path, class: "text-admin-600 hover:text-admin-700 flex items-center gap-2" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Retour aux imports
  <% end %>

  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">
        Import: <%= @lead_import.file_name %>
      </h1>
      <p class="text-gray-600 mt-1">
        Importé le <%= l(@lead_import.created_at, format: :long) %> par <%= @lead_import.imported_by.email %>
      </p>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600">Total lignes</p>
      <p class="text-3xl font-bold text-gray-900 mt-2"><%= @lead_import.total_rows %></p>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600">Réussis</p>
      <p class="text-3xl font-bold text-green-600 mt-2"><%= @lead_import.successful_imports %></p>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600">Échecs</p>
      <p class="text-3xl font-bold text-red-600 mt-2"><%= @lead_import.failed_imports %></p>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600">Statut</p>
      <div class="mt-2">
                <% case @lead_import.import_status&.to_sym %>
                <% when :completed %>
                  <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">Terminé</span>
                <% when :processing %>
                  <span class="px-3 py-1 text-sm font-semibold rounded-full bg-blue-100 text-blue-800">En cours</span>
                <% when :failed %>
                  <span class="px-3 py-1 text-sm font-semibold rounded-full bg-red-100 text-red-800">Échec</span>
                <% else %>
                  <span class="px-3 py-1 text-sm font-semibold rounded-full bg-gray-100 text-gray-800">En attente</span>
                <% end %>
      </div>
    </div>
  </div>

  <!-- Success Message -->
  <% if @lead_import.import_status == 'completed' && @lead_import.failed_imports == 0 %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-6">
      <div class="flex items-start gap-3">
        <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <h3 class="text-lg font-semibold text-green-900">Import réussi !</h3>
          <p class="text-green-700 mt-1">
            Tous les repreneurs ont été importés avec succès. <%= @lead_import.successful_imports %> comptes créés.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Errors Table -->
  <% if @errors.present? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex justify-between items-center mb-4">
        <div>
          <h2 class="text-lg font-bold text-gray-900">Erreurs d'import (<%= @errors.size %>)</h2>
          <p class="text-sm text-gray-600 mt-1">Lignes qui n'ont pas pu être importées</p>
        </div>
        <%= link_to download_errors_admin_lead_import_path(@lead_import), 
            data: { turbo: false },
            class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition flex items-center gap-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Télécharger CSV des erreurs
        <% end %>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ligne</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Erreur</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @errors.each do |error| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  Ligne <%= error['row'] %>
                </td>
                <td class="px-6 py-4 text-sm text-red-600">
                  <%= error['error'] %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <!-- Global Error -->
  <% if @lead_import.import_status == 'failed' && @lead_import.error_log.present? %>
    <% begin %>
      <% error_data = JSON.parse(@lead_import.error_log) %>
      <% if error_data['global_error'] %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-6">
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <h3 class="text-lg font-semibold text-red-900">Erreur lors de l'import</h3>
              <p class="text-red-700 mt-1">
                <%= error_data['global_error'] %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% rescue JSON::ParserError %>
    <% end %>
  <% end %>

  <!-- Info Box -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
    <div class="flex items-start gap-3">
      <svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h3 class="text-lg font-semibold text-blue-900">À propos de cet import</h3>
        <ul class="text-blue-700 mt-2 space-y-1 text-sm">
          <li>• Les repreneurs importés avec succès ont reçu un mot de passe généré automatiquement</li>
          <li>• Ils peuvent se connecter avec leur email et réinitialiser leur mot de passe</li>
          <li>• Les profils de repreneurs ont été créés avec les informations fournies</li>
          <li>• Les emails en double ont été ignorés pour éviter les doublons</li>
        </ul>
      </div>
    </div>
  </div>
</div>
