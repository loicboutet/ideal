<% content_for :title, "Tableau de bord - Administration - Idéal Reprise" %>

<!-- Admin Dashboard -->
<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Tableau de bord</h1>
      <p class="text-gray-600 mt-1">Vue d'ensemble de la plateforme</p>
    </div>
    <div class="flex items-center gap-3" data-controller="date-range">
      <select 
        data-action="change->date-range#updateRange"
        class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500 bg-white">
        <option value="30_days" <%= 'selected' if params[:date_range] == '30_days' || params[:date_range].nil? %>>30 derniers jours</option>
        <option value="7_days" <%= 'selected' if params[:date_range] == '7_days' %>>7 derniers jours</option>
        <option value="current_month" <%= 'selected' if params[:date_range] == 'current_month' %>>Ce mois-ci</option>
        <option value="previous_month" <%= 'selected' if params[:date_range] == 'previous_month' %>>Mois dernier</option>
      </select>
    </div>
  </div>

  <!-- Key Metrics Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Total Users -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-admin-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-admin-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <% if @metrics[:total_users][:evolution] %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @metrics[:total_users][:evolution] >= 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @metrics[:total_users][:evolution] >= 0 ? '+' : '' %><%= @metrics[:total_users][:evolution] %>%
          </span>
        <% end %>
      </div>
      <div class="text-2xl font-bold text-gray-900 mb-1"><%= number_with_delimiter(@metrics[:total_users][:count]) %></div>
      <div class="text-sm text-gray-600">Utilisateurs totaux</div>
    </div>

    <!-- Active Listings -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <% if @metrics[:active_listings][:evolution] %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @metrics[:active_listings][:evolution] >= 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @metrics[:active_listings][:evolution] >= 0 ? '+' : '' %><%= @metrics[:active_listings][:evolution] %>%
          </span>
        <% end %>
      </div>
      <div class="text-2xl font-bold text-gray-900 mb-1"><%= number_with_delimiter(@metrics[:active_listings][:count]) %></div>
      <div class="text-sm text-gray-600">Annonces actives</div>
    </div>

    <!-- Pending Validations -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
          En attente
        </span>
      </div>
      <div class="text-2xl font-bold text-gray-900 mb-1"><%= @metrics[:pending_validations][:count] %></div>
      <div class="text-sm text-gray-600">Validations en attente</div>
    </div>

    <!-- Monthly Revenue -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-admin-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-admin-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <% if @metrics[:monthly_revenue][:evolution] %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @metrics[:monthly_revenue][:evolution] >= 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @metrics[:monthly_revenue][:evolution] >= 0 ? '+' : '' %><%= @metrics[:monthly_revenue][:evolution] %>%
          </span>
        <% end %>
      </div>
      <div class="text-2xl font-bold text-gray-900 mb-1"><%= number_to_currency(@metrics[:monthly_revenue][:amount], unit: "", precision: 0, delimiter: " ") %> €</div>
      <div class="text-sm text-gray-600">Revenu mensuel</div>
    </div>
  </div>

  <!-- Charts Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- User Growth Chart -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-lg font-bold text-gray-900">Croissance des utilisateurs</h2>
        <select class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500 bg-white">
          <option>6 mois</option>
          <option>3 mois</option>
          <option>1 an</option>
        </select>
      </div>
      <!-- Mock Chart -->
      <div class="h-64 flex items-end justify-between gap-2">
        <% @user_growth_chart.each_with_index do |data, index| %>
          <div class="flex-1 <%= index == @user_growth_chart.length - 1 ? 'bg-admin-600' : 'bg-admin-100' %> rounded-t-lg transition hover:bg-admin-<%= index == @user_growth_chart.length - 1 ? '700' : '200' %>" style="height: <%= data[:percentage] %>%;"></div>
        <% end %>
      </div>
      <div class="flex justify-between mt-4 text-xs text-gray-500">
        <% @user_growth_chart.each do |data| %>
          <span><%= data[:month] %></span>
        <% end %>
      </div>
    </div>

    <!-- User Types Distribution -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-6">Distribution des utilisateurs</h2>
      <div class="space-y-4">
        <% @user_distribution.each do |role_data| %>
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700"><%= role_data[:label] %></span>
              <span class="text-sm font-semibold text-gray-900"><%= number_with_delimiter(role_data[:count]) %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-<%= role_data[:color] %>-600 h-2 rounded-full" style="width: <%= role_data[:percentage] %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Tables Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Users -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-bold text-gray-900">Nouveaux utilisateurs</h2>
          <%= link_to admin_users_path, class: "text-sm text-admin-600 hover:text-admin-700 font-medium" do %>
            Voir tout →
          <% end %>
        </div>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_users.each do |user| %>
          <div class="p-4 hover:bg-gray-50 transition">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-<%= user[:role] == 'seller' ? 'admin' : user[:role] == 'buyer' ? 'green' : 'admin' %>-100 rounded-full flex items-center justify-center text-<%= user[:role] == 'seller' ? 'admin' : user[:role] == 'buyer' ? 'green' : 'admin' %>-600 font-semibold">
                <%= user[:initials] %>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-gray-900"><%= user[:name] %></div>
                <div class="text-sm text-gray-500"><%= user[:email] %></div>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= user[:role] == 'seller' ? 'admin' : user[:role] == 'buyer' ? 'green' : 'admin' %>-100 text-<%= user[:role] == 'seller' ? 'admin' : user[:role] == 'buyer' ? 'green' : 'admin' %>-800">
                <%= user[:role_label] %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Listings -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-bold text-gray-900">Dernières annonces</h2>
          <%= link_to admin_listings_path, class: "text-sm text-admin-600 hover:text-admin-700 font-medium" do %>
            Voir tout →
          <% end %>
        </div>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_listings.each do |listing| %>
          <div class="p-4 hover:bg-gray-50 transition">
            <div class="flex items-start gap-3">
              <div class="w-12 h-12 bg-gradient-to-br from-<%= listing[:color] %>-500 to-<%= listing[:color] %>-600 rounded-lg flex-shrink-0"></div>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-gray-900 truncate"><%= listing[:title] %></div>
                <div class="text-sm text-gray-500"><%= listing[:location] %> • <%= number_to_currency(listing[:price], unit: "", precision: 0, delimiter: " ") %>k €</div>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= listing[:status] == 'approved' ? 'bg-green-100 text-green-800' : 'bg-orange-100 text-orange-800' %>">
                <%= listing[:status_label] %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-bold text-gray-900">Activité récente</h2>
    </div>
    <div class="p-6">
      <div class="flow-root">
        <ul class="-mb-8">
          <% @recent_activities.each_with_index do |activity, index| %>
            <li>
              <div class="relative <%= index < @recent_activities.length - 1 ? 'pb-8' : '' %>">
                <% if index < @recent_activities.length - 1 %>
                  <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                <% end %>
                <div class="relative flex space-x-3">
                  <div>
                    <span class="h-8 w-8 rounded-full bg-<%= activity[:color] %>-500 flex items-center justify-center ring-8 ring-white">
                      <%= activity[:icon].html_safe %>
                    </span>
                  </div>
                  <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                    <div>
                      <p class="text-sm text-gray-500"><%= activity[:message].html_safe %></p>
                    </div>
                    <div class="whitespace-nowrap text-right text-sm text-gray-500">
                      <time><%= activity[:time] %></time>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
