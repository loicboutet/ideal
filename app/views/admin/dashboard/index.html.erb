<% content_for :title, "Centre Opérationnel - Admin - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Header with Period Selector -->
  <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Centre Opérationnel</h1>
        <p class="text-gray-600 mt-1"><%= period_label(@period) %></p>
      </div>
      
      <!-- Period Selector -->
      <div class="flex gap-2 flex-wrap">
        <%= period_button "Jour", "day", @period %>
        <%= period_button "Semaine", "week", @period %>
        <%= period_button "Mois", "month", @period %>
        <%= period_button "Trimestre", "quarter", @period %>
        <%= period_button "Année", "year", @period %>
      </div>
    </div>
  </div>

  <!-- 4 Alert KPIs (Clickable) -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- Zero View Listings -->
    <%= link_to admin_dashboard_zero_views_path, class: "block" do %>
      <div class="bg-orange-50 border border-orange-200 rounded-lg p-6 hover:shadow-lg transition">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-orange-100 rounded-lg">
            <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <div>
            <div class="text-3xl font-bold text-orange-900"><%= @alerts[:zero_view_listings] %></div>
            <div class="text-sm text-gray-600 mt-1">Annonces sans vues</div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Pending Validations -->
    <%= link_to pending_admin_listings_path, class: "block" do %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 hover:shadow-lg transition">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-yellow-100 rounded-lg">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <div class="text-3xl font-bold text-yellow-900"><%= @alerts[:pending_validations] %></div>
            <div class="text-sm text-gray-600 mt-1">Validations en attente</div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Pending Reports (Placeholder) -->
    <div class="bg-purple-50 border border-purple-200 rounded-lg p-6 opacity-75">
      <div class="flex items-center gap-4">
        <div class="p-3 bg-purple-100 rounded-lg">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div>
          <div class="text-3xl font-bold text-purple-900"><%= @alerts[:pending_reports] %></div>
          <div class="text-sm text-gray-600 mt-1">Signalements en attente</div>
        </div>
      </div>
    </div>

    <!-- Expired Timers -->
    <%= link_to admin_dashboard_expired_timers_path, class: "block" do %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-6 hover:shadow-lg transition">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-red-100 rounded-lg">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <div class="text-3xl font-bold text-red-900"><%= @alerts[:expired_timers] %></div>
            <div class="text-sm text-gray-600 mt-1">Timers expirés</div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Key Ratios Row -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Listings per Buyer Ratio -->
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <h3 class="text-sm font-medium text-gray-700 mb-2">Ratio Annonces / Repreneurs payants</h3>
      <div class="flex items-baseline gap-2">
        <div class="text-4xl font-bold text-admin-600"><%= number_with_precision(@listings_per_buyer_ratio, precision: 2) %></div>
        <div class="text-sm text-gray-500">annonces / repreneur</div>
      </div>
      <p class="text-xs text-gray-500 mt-2">
        <%= Listing.where(validation_status: :approved, status: :published).count %> annonces pour 
        <%= BuyerProfile.where(subscription_status: :active).where('subscription_expires_at IS NULL OR subscription_expires_at > ?', Time.current).count %> repreneurs
      </p>
    </div>

    <!-- Satisfaction (Placeholder) -->
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <h3 class="text-sm font-medium text-gray-700 mb-2">Satisfaction utilisateurs</h3>
      <div class="flex items-baseline gap-2">
        <div class="text-4xl font-bold text-green-600"><%= @satisfaction[:current] %>%</div>
        <%= evolution_badge(@satisfaction[:evolution]) %>
      </div>
      <p class="text-xs text-gray-500 mt-2">Basé sur les enquêtes de satisfaction (à venir)</p>
    </div>
  </div>

  <!-- Growth Metrics (4 Cards) -->
  <div>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Métriques de Croissance</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Active Listings -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-green-100 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <%= evolution_badge(@growth_metrics[:active_listings][:evolution]) %>
        </div>
        <div class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@growth_metrics[:active_listings][:current]) %></div>
        <p class="text-sm text-gray-500 mt-2">Annonces actives</p>
      </div>

      <!-- Monthly Revenue -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <%= evolution_badge(@growth_metrics[:monthly_revenue][:evolution]) %>
        </div>
        <div class="text-3xl font-bold text-gray-900"><%= format_revenue(@growth_metrics[:monthly_revenue][:current]) %></div>
        <p class="text-sm text-gray-500 mt-2">Revenu mensuel récurrent</p>
      </div>

      <!-- Total Users -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-purple-100 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <%= evolution_badge(@growth_metrics[:total_users][:evolution]) %>
        </div>
        <div class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@growth_metrics[:total_users][:current]) %></div>
        <p class="text-sm text-gray-500 mt-2">Utilisateurs totaux</p>
      </div>

      <!-- Reservations -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-orange-100 rounded-lg">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <%= evolution_badge(@growth_metrics[:reservations][:evolution]) %>
        </div>
        <div class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@growth_metrics[:reservations][:current]) %></div>
        <p class="text-sm text-gray-500 mt-2">Réservations actives</p>
      </div>
    </div>
  </div>

  <!-- Charts Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Deals by Status Chart -->
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Transactions par statut CRM</h3>
      <% if @deals_by_status.any? %>
        <div class="space-y-3">
          <% @deals_by_status.each do |status, count| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2">
                <%= deal_status_badge(status) %>
              </div>
              <div class="text-lg font-semibold text-gray-900"><%= count %></div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">Aucune transaction pour cette période</p>
      <% end %>
    </div>

    <!-- Abandoned Deals Breakdown -->
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Transactions abandonnées</h3>
      <% total_abandoned = @abandoned_deals[:voluntary] + @abandoned_deals[:timer_expired] %>
      <% if total_abandoned > 0 %>
        <div class="space-y-4">
          <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium text-gray-900">Volontaire</span>
            </div>
            <div class="text-xl font-bold text-blue-600"><%= @abandoned_deals[:voluntary] %></div>
          </div>
          
          <div class="flex items-center justify-between p-4 bg-red-50 rounded-lg">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium text-gray-900">Timer expiré</span>
            </div>
            <div class="text-xl font-bold text-red-600"><%= @abandoned_deals[:timer_expired] %></div>
          </div>
          
          <div class="mt-4 p-3 bg-gray-50 rounded-lg text-center">
            <div class="text-sm text-gray-600">Total abandonné</div>
            <div class="text-2xl font-bold text-gray-900"><%= total_abandoned %></div>
          </div>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">Aucune transaction abandonnée pour cette période</p>
      <% end %>
    </div>
  </div>

  <!-- User Distribution -->
  <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Distribution des utilisateurs</h3>
    <% if @user_distribution.any? %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <% @user_distribution.each do |role, data| %>
          <div class="p-4 border border-gray-200 rounded-lg">
            <div class="flex items-center justify-between mb-2">
              <%= user_role_badge(role) %>
              <%= evolution_badge(data[:evolution]) if data.is_a?(Hash) %>
            </div>
            <div class="text-3xl font-bold text-gray-900">
              <%= data.is_a?(Hash) ? data[:current] : data %>
            </div>
            <div class="text-sm text-gray-500 mt-1"><%= role.to_s.humanize.pluralize %></div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">Aucun utilisateur pour cette période</p>
    <% end %>
  </div>

  <!-- Partner Usage Analytics -->
  <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Utilisation des partenaires</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <div class="text-center p-4 bg-purple-50 rounded-lg">
        <div class="text-3xl font-bold text-purple-600"><%= @partner_usage[:total_views] %></div>
        <div class="text-sm text-gray-600 mt-1">Vues totales</div>
      </div>
      <div class="text-center p-4 bg-blue-50 rounded-lg">
        <div class="text-3xl font-bold text-blue-600"><%= @partner_usage[:total_contacts] %></div>
        <div class="text-sm text-gray-600 mt-1">Contacts totaux</div>
      </div>
      <div class="text-center p-4 bg-green-50 rounded-lg">
        <div class="text-3xl font-bold text-green-600"><%= @partner_usage[:active_partners] %></div>
        <div class="text-sm text-gray-600 mt-1">Partenaires actifs</div>
      </div>
    </div>
    
    <% if @partner_usage_trend.any? %>
      <h4 class="text-sm font-medium text-gray-700 mb-3">Tendance sur 6 mois</h4>
      <div class="space-y-2">
        <% @partner_usage_trend.each do |month_data| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
            <span class="text-sm font-medium text-gray-700"><%= month_data[:month] %></span>
            <div class="flex gap-6">
              <span class="text-sm text-gray-600"><%= month_data[:views] %> vues</span>
              <span class="text-sm text-gray-600"><%= month_data[:contacts] %> contacts</span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Quick Actions (Kept for easy navigation) -->
  <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions rapides</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= link_to admin_users_path, class: "flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-admin-500 hover:bg-admin-50 transition" do %>
        <svg class="w-8 h-8 text-admin-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <div>
          <div class="font-medium text-gray-900">Gérer les utilisateurs</div>
          <div class="text-sm text-gray-500">Ajouter, modifier ou supprimer</div>
        </div>
      <% end %>

      <%= link_to admin_listings_path, class: "flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-admin-500 hover:bg-admin-50 transition" do %>
        <svg class="w-8 h-8 text-admin-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <div>
          <div class="font-medium text-gray-900">Valider les annonces</div>
          <div class="text-sm text-gray-500">Approuver ou rejeter</div>
        </div>
      <% end %>

      <%= link_to admin_partners_path, class: "flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-admin-500 hover:bg-admin-50 transition" do %>
        <svg class="w-8 h-8 text-admin-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <div>
          <div class="font-medium text-gray-900">Gérer les partenaires</div>
          <div class="text-sm text-gray-500">Valider et gérer</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
