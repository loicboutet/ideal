<% content_for :title, "Messages - Idéal Reprise" %>

<div class="flex h-[calc(100vh-8rem)] bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <!-- Conversations List -->
  <div class="w-80 border-r border-gray-200 flex flex-col">
    <!-- Header -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-bold text-gray-900">Messages</h2>
      </div>
      <input type="text" 
             placeholder="Rechercher..." 
             class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 text-sm"
             data-controller="search"
             data-action="input->search#filter">
    </div>

    <!-- Conversations -->
    <div class="flex-1 overflow-y-auto">
      <% if @conversations.any? %>
        <% @conversations.each do |conversation| %>
          <%= render 'conversations/conversation_item', conversation: conversation, current_user: current_user %>
        <% end %>
      <% else %>
        <div class="p-8 text-center text-gray-500">
          <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <p class="text-sm">Aucune conversation</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Empty State / Instructions -->
  <div class="flex-1 flex items-center justify-center bg-gray-50">
    <div class="text-center px-8">
      <svg class="w-24 h-24 mx-auto mb-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">Sélectionnez une conversation</h3>
      <p class="text-gray-600">Choisissez une conversation dans la liste pour commencer à échanger.</p>
    </div>
  </div>
</div>
