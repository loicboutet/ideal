<% content_for :title, "#{@survey.title} - Questionnaire - Idéal Reprise" %>

<!-- Survey Response Form -->
<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-sm p-8 border border-gray-200 mb-6">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2"><%= @survey.title %></h1>
      <% if @survey.description.present? %>
        <p class="text-gray-600"><%= @survey.description %></p>
      <% end %>
      <div class="mt-4 flex items-center gap-2 text-sm text-gray-500">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>Temps estimé : <%= @survey.satisfaction? ? '1-2 minutes' : '5-10 minutes' %></span>
      </div>
    </div>

    <%= form_with model: @survey_response, url: survey_survey_responses_path(@survey), class: "space-y-6" do |f| %>
      <% if @survey.satisfaction? %>
        <!-- Satisfaction Survey -->
        <div class="bg-white rounded-xl shadow-sm p-8 border border-gray-200">
          <div class="mb-6">
            <label class="block text-lg font-medium text-gray-900 mb-4">
              Comment évalueriez-vous votre expérience sur la plateforme ?
            </label>
            
            <!-- Star Rating -->
            <div class="flex items-center gap-2" data-controller="star-rating">
              <% (1..5).each do |rating| %>
                <label class="cursor-pointer">
                  <%= f.radio_button :satisfaction_score, rating, class: "sr-only peer", data: { action: "change->star-rating#update" } %>
                  <svg class="w-12 h-12 text-gray-300 peer-checked:text-yellow-400 hover:text-yellow-300 transition" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </label>
              <% end %>
            </div>
            <p class="text-sm text-gray-500 mt-2">Cliquez sur les étoiles pour noter (1 = Très insatisfait, 5 = Très satisfait)</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Commentaire (optionnel)
            </label>
            <%= text_area_tag 'comment', nil, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500", placeholder: "Partagez vos commentaires pour nous aider à améliorer..." %>
          </div>
        </div>

      <% else %>
        <!-- Development Survey - Dynamic Questions -->
        <% @questions.each_with_index do |question, index| %>
          <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
            <div class="mb-4">
              <label class="block text-base font-medium text-gray-900">
                Question <%= index + 1 %>
                <% if question['required'] %>
                  <span class="text-red-500">*</span>
                <% end %>
              </label>
              <p class="text-gray-700 mt-1"><%= question['text'] %></p>
            </div>

            <% case question['type'] %>
            <% when 'text' %>
              <%= text_field_tag "answers[q#{index}]", nil, required: question['required'], class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500", placeholder: "Votre réponse..." %>

            <% when 'textarea' %>
              <%= text_area_tag "answers[q#{index}]", nil, rows: 4, required: question['required'], class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-admin-500", placeholder: "Votre réponse détaillée..." %>

            <% when 'multiple_choice' %>
              <div class="space-y-2">
                <% (question['options'] || []).each do |option| %>
                  <label class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                    <%= radio_button_tag "answers[q#{index}]", option, false, required: question['required'], class: "w-4 h-4 text-admin-600 focus:ring-admin-500" %>
                    <span class="ml-3 text-sm text-gray-700"><%= option %></span>
                  </label>
                <% end %>
              </div>

            <% when 'checkbox' %>
              <div class="space-y-2">
                <% (question['options'] || []).each_with_index do |option, opt_idx| %>
                  <label class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                    <%= check_box_tag "answers[q#{index}][]", option, false, class: "w-4 h-4 text-admin-600 rounded focus:ring-admin-500" %>
                    <span class="ml-3 text-sm text-gray-700"><%= option %></span>
                  </label>
                <% end %>
              </div>

            <% when 'rating' %>
              <div class="flex items-center gap-2">
                <% (1..5).each do |rating| %>
                  <label class="cursor-pointer">
                    <%= radio_button_tag "answers[q#{index}]", rating, false, required: question['required'], class: "sr-only peer" %>
                    <svg class="w-10 h-10 text-gray-300 peer-checked:text-yellow-400 hover:text-yellow-300 transition" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  </label>
                <% end %>
              </div>

            <% when 'yes_no' %>
              <div class="flex gap-4">
                <label class="flex-1">
                  <%= radio_button_tag "answers[q#{index}]", 'Oui', false, required: question['required'], class: "sr-only peer" %>
                  <div class="p-4 text-center border-2 border-gray-200 rounded-lg cursor-pointer peer-checked:border-green-500 peer-checked:bg-green-50 hover:border-gray-300">
                    <div class="text-lg font-medium text-gray-900">Oui</div>
                  </div>
                </label>
                <label class="flex-1">
                  <%= radio_button_tag "answers[q#{index}]", 'Non', false, required: question['required'], class: "sr-only peer" %>
                  <div class="p-4 text-center border-2 border-gray-200 rounded-lg cursor-pointer peer-checked:border-red-500 peer-checked:bg-red-50 hover:border-gray-300">
                    <div class="text-lg font-medium text-gray-900">Non</div>
                  </div>
                </label>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <!-- Hidden field to store answers as JSON -->
      <%= f.hidden_field :answers, id: 'survey_answers' %>

      <!-- Submit Button -->
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <div class="flex items-center justify-between">
          <p class="text-sm text-gray-600">
            <% if @survey.satisfaction? %>
              Votre avis est précieux et nous aide à améliorer notre plateforme.
            <% else %>
              Les champs marqués d'un <span class="text-red-500">*</span> sont obligatoires.
            <% end %>
          </p>
          <%= f.submit "Soumettre mes réponses", class: "px-6 py-3 border border-transparent rounded-lg text-base font-medium text-white bg-admin-600 hover:bg-admin-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-admin-500 transition cursor-pointer" %>
        </div>
      </div>
    <% end %>

    <script>
      // Collect answers and store in hidden field before form submission
      document.querySelector('form').addEventListener('submit', function(e) {
        const answers = {};
        
        <% if @survey.satisfaction? %>
          // For satisfaction surveys, store the comment
          const comment = document.querySelector('textarea[name="comment"]')?.value;
          if (comment) {
            answers.comment = comment;
          }
        <% else %>
          // For development surveys, collect all answers
          <% @questions.each_with_index do |question, index| %>
            <% case question['type'] %>
            <% when 'checkbox' %>
              const checkboxes_<%= index %> = document.querySelectorAll('input[name="answers[q<%= index %>][]"]:checked');
              if (checkboxes_<%= index %>.length > 0) {
                answers['q<%= index %>'] = Array.from(checkboxes_<%= index %>).map(cb => cb.value);
              }
            <% else %>
              const field_<%= index %> = document.querySelector('input[name="answers[q<%= index %>]"]:checked, input[name="answers[q<%= index %>]"], textarea[name="answers[q<%= index %>]"]');
              if (field_<%= index %> && field_<%= index %>.value) {
                answers['q<%= index %>'] = field_<%= index %>.value;
              }
            <% end %>
          <% end %>
        <% end %>
        
        document.getElementById('survey_answers').value = JSON.stringify(answers);
      });
    </script>
  </div>
</div>
