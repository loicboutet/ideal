<!DOCTYPE html>
<html lang="fr" class="layout-seller">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= content_for(:title) || "Cédant - Idéal Reprise" %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= action_cable_meta_tag %>
  <%= yield :head %>
  <link rel="icon" href="/icon.png" type="image/png">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/icon.png">
  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <style>
    /* Custom Scrollbar Styling */
    #sidebar nav::-webkit-scrollbar { width: 6px; }
    #sidebar nav::-webkit-scrollbar-track { background: #f9fafb; }
    #sidebar nav::-webkit-scrollbar-thumb { background: #d1d5db; border-radius: 3px; }
    #sidebar nav::-webkit-scrollbar-thumb:hover { background: #9ca3af; }
  </style>
  <%= javascript_importmap_tags %>
</head>

<body class="bg-gray-50">
  <div class="lg:hidden fixed top-4 left-4 z-50">
    <button id="mobile-menu-toggle" class="p-2 bg-white rounded-lg shadow-md">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <div class="flex min-h-screen">
    <!-- Sidebar with gradient border - Blue theme -->
    <aside id="sidebar" class="sidebar-main fixed lg:sticky top-0 h-screen bg-white w-64 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 z-40 flex flex-col">
      <div class="p-6 border-b border-gray-200">
        <%= link_to root_path, class: "flex items-center gap-3" do %>
          <div class="w-10 h-10 bg-gradient-to-br from-sky-400 to-cyan-500 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">ID</span>
          </div>
          <span class="text-xl font-bold text-gray-900">IDEAL</span>
        <% end %>
      </div>

      <nav class="flex-1 p-4 overflow-y-auto">
        <div class="mb-6">
          <%= link_to seller_root_path, class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition #{menu_active?('dashboard') ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span class="font-medium">Tableau de bord</span>
          <% end %>
          <%= link_to seller_conversations_path, class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition mt-1 #{menu_active?('conversations') ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="font-medium">Messages</span>
            <% if current_user && current_user.unread_conversations_count > 0 %>
              <span class="ml-auto bg-red-500 text-white text-xs font-medium px-2 py-0.5 rounded-full"><%= current_user.unread_conversations_count %></span>
            <% end %>
          <% end %>
        </div>

        <div class="mb-6">
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Mes Annonces</h3>
          <%= link_to seller_listings_path, class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition #{menu_active?('listings') ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <span class="font-medium">Toutes mes annonces</span>
          <% end %>
          <%= link_to new_seller_listing_path, class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition mt-1 #{menu_active?('listings', 'new') ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span class="font-medium">Créer une annonce</span>
          <% end %>
        </div>

        <div class="mb-6">
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Repreneurs</h3>
          <%= link_to "#", class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition #{menu_active?('interested_buyers') ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span class="font-medium">Repreneurs intéressés</span>
            <span class="ml-auto text-xs text-gray-400">Bientôt</span>
          <% end %>
        </div>

        <div class="mb-6">
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Services</h3>
          <%= link_to seller_partners_path, class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition #{menu_active?('partners') ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="font-medium">Partenaires</span>
          <% end %>
        </div>

        <div class="mb-6">
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Mon Compte</h3>
          <%= link_to seller_profile_path, class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition #{menu_active?('profiles') ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span class="font-medium">Profil</span>
          <% end %>
          <%= link_to seller_settings_path, class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition mt-1 #{menu_active?('settings') ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="font-medium">Paramètres</span>
          <% end %>
        </div>
      </nav>

      <div class="p-4 border-t border-gray-200">
        <div class="flex items-center gap-3 mb-2">
          <% if current_user %>
            <div class="w-10 h-10 bg-gradient-to-br from-sky-400 to-cyan-500 rounded-full flex items-center justify-center text-white font-semibold text-sm">
              <%= current_user.first_name&.first&.upcase || current_user.email&.first&.upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <div class="text-sm font-medium text-gray-900 truncate"><%= current_user.first_name || current_user.email %></div>
              <div class="text-xs text-gray-500">Cédant</div>
              <div class="text-xs text-gray-500 truncate"><%= current_user.email %></div>
            </div>
          <% else %>
            <div class="w-10 h-10 bg-gradient-to-br from-sky-400 to-cyan-500 rounded-full flex items-center justify-center text-white font-semibold text-sm">
              JD
            </div>
            <div class="flex-1 min-w-0">
              <div class="text-sm font-medium text-gray-900 truncate">Jean Dupont</div>
              <div class="text-xs text-gray-500">Cédant</div>
            </div>
          <% end %>
        </div>
        <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "menu-link flex items-center gap-3 px-4 py-3 rounded-lg transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          <span class="font-medium">Déconnexion</span>
        <% end %>
      </div>
    </aside>

    <main class="flex-1 overflow-x-hidden">
      <!-- Top bar with gradient background and border - Blue theme -->
      <header class="header-top-bar bg-white px-4 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <h1 class="text-2xl font-bold text-gray-900 ml-12 lg:ml-0">
            <%= content_for(:page_title) || "Tableau de bord" %>
          </h1>
          <div class="flex items-center gap-4">
            <%= link_to notifications_path, class: "relative p-2 hover:bg-gray-100 rounded-lg transition", title: "Notifications" do %>
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <% if current_user && current_user.unread_admin_messages_count > 0 %>
                <span class="absolute top-0 right-0 flex h-5 w-5 items-center justify-center">
                  <span class="absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75 animate-ping"></span>
                  <span class="relative inline-flex rounded-full h-5 w-5 bg-red-500 text-white text-xs items-center justify-center font-medium">
                    <%= current_user.unread_admin_messages_count %>
                  </span>
                </span>
              <% end %>
            <% end %>
          </div>
        </div>
      </header>

      <div class="p-4 lg:p-8">
        <%= render 'shared/flash_messages' %>
        <%= yield %>
      </div>
    </main>
  </div>

  <div id="sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-30 lg:hidden hidden"></div>

  <script data-turbo-eval="false">
    (function() {
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('sidebar-overlay');

      mobileMenuToggle?.addEventListener('click', () => {
        sidebar.classList.toggle('-translate-x-full');
        overlay.classList.toggle('hidden');
      });

      overlay?.addEventListener('click', () => {
        sidebar.classList.add('-translate-x-full');
        overlay.classList.add('hidden');
      });
    })();
  </script>
</body>
</html>
