<!DOCTYPE html>
<html lang="fr">
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "IDEAL - Reprise d'entreprise" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Mobile Menu Toggle -->
    <div class="lg:hidden fixed top-4 left-4 z-50">
      <button id="mobile-menu-toggle" class="p-2 bg-white rounded-lg shadow-md">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside id="sidebar" class="fixed lg:sticky top-0 h-screen bg-white border-r border-gray-200 w-64 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 z-40 flex flex-col">
        <!-- Logo -->
        <div class="p-6 border-b border-gray-200">
          <%= link_to mockups_buyer_path, class: "flex items-center gap-3" do %>
            <div class="w-10 h-10 bg-gradient-to-br from-#4A90E2 to-purple-600 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-sm">ID</span>
            </div>
            <span class="text-xl font-bold text-gray-900">IDEAL</span>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4 overflow-y-auto">
          <!-- Dashboard Section -->
          <div class="mb-6">
            <%= link_to mockups_buyer_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_path)} hover:bg-gray-50" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              <span class="font-medium">Tableau de bord</span>
            <% end %>
          </div>

          <!-- Browse Section -->
          <div class="mb-6">
            <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Recherche</h3>
            <%= link_to mockups_buyer_listings_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_listings_path)} hover:bg-gray-50" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <span class="font-medium">Parcourir</span>
            <% end %>
            <%= link_to mockups_buyer_favorites_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_favorites_path)} hover:bg-gray-50 mt-1" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              <span class="font-medium">Favoris</span>
            <% end %>
          </div>

          <!-- CRM Section -->
          <div class="mb-6">
            <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Mon CRM</h3>
            <%= link_to mockups_buyer_pipeline_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_pipeline_path)} hover:bg-gray-50" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
              </svg>
              <span class="font-medium">Pipeline</span>
            <% end %>
            <%= link_to mockups_buyer_deals_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_deals_path)} hover:bg-gray-50 mt-1" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="font-medium">Mes dossiers</span>
            <% end %>
            <%= link_to mockups_buyer_reservations_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_reservations_path)} hover:bg-gray-50 mt-1" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">Réservations</span>
              <span class="ml-auto bg-orange-100 text-orange-800 text-xs font-medium px-2 py-0.5 rounded-full">2</span>
            <% end %>
          </div>

          <!-- Services Section -->
          <div class="mb-6">
            <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Services</h3>
            <%= link_to mockups_buyer_enrichments_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_enrichments_path)} hover:bg-gray-50" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="font-medium">Enrichissements</span>
            <% end %>
            <%= link_to mockups_buyer_credits_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_credits_path)} hover:bg-gray-50 mt-1" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">Crédits</span>
            <% end %>
          </div>

          <!-- Account Section -->
          <div class="mb-6">
            <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Mon Compte</h3>
            <%= link_to mockups_buyer_profile_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_profile_path)} hover:bg-gray-50" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span class="font-medium">Profil</span>
            <% end %>
            <%= link_to mockups_buyer_settings_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_settings_path)} hover:bg-gray-50 mt-1" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="font-medium">Paramètres</span>
            <% end %>
            <%= link_to mockups_buyer_subscription_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg transition #{'bg-[rgba(74,144,226,0.1)] text-#4A90E2' if current_page?(mockups_buyer_subscription_path)} hover:bg-gray-50 mt-1" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
              <span class="font-medium">Abonnement</span>
            <% end %>
          </div>
        </nav>

        <!-- User Info -->
        <div class="p-4 border-t border-gray-200">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-teal-600 rounded-full flex items-center justify-center text-white font-semibold text-sm">
              PM
            </div>
            <div class="flex-1 min-w-0">
              <div class="text-sm font-medium text-gray-900 truncate">Pierre Martin</div>
              <div class="text-xs text-gray-500">Repreneur</div>
            </div>
          </div>
          <button class="w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition">
            Déconnexion
          </button>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 overflow-x-hidden">
        <!-- Top Header -->
        <header class="bg-white border-b border-gray-200 px-4 lg:px-8 py-4">
          <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-900 ml-12 lg:ml-0">
              <%= content_for?(:page_title) ? yield(:page_title) : "Tableau de bord" %>
            </h1>
            <div class="flex items-center gap-4">
              <button class="relative p-2 hover:bg-gray-100 rounded-lg transition">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
              </button>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <div class="p-4 lg:p-8">
          <%= yield %>
        </div>
      </main>
    </div>

    <!-- Mobile Menu Overlay -->
    <div id="sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-30 lg:hidden hidden"></div>

    <script>
      // Mobile menu toggle
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('sidebar-overlay');

      mobileMenuToggle?.addEventListener('click', () => {
        sidebar.classList.toggle('-translate-x-full');
        overlay.classList.toggle('hidden');
      });

      overlay?.addEventListener('click', () => {
        sidebar.classList.add('-translate-x-full');
        overlay.classList.add('hidden');
      });
    </script>
  </body>
</html>
