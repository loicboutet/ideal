<% content_for :title, "Recherche de partenaires - Idéal Reprise" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header Section -->
  <div class="bg-gradient-to-r from-teal-600 to-cyan-700 text-white py-12">
    <div class="container mx-auto px-4">
      <div class="flex items-center gap-4 mb-4">
        <%= link_to partners_path, class: "inline-flex items-center gap-2 text-teal-100 hover:text-white transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Retour à l'annuaire
        <% end %>
      </div>
      <h1 class="text-3xl md:text-4xl font-bold mb-4">Recherche avancée de partenaires</h1>
      <p class="text-lg text-teal-50">Affinez vos critères pour trouver le partenaire idéal</p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <div class="lg:grid lg:grid-cols-3 lg:gap-8">
      <!-- Search Form -->
      <aside class="lg:col-span-1 mb-8 lg:mb-0">
        <%= form_with url: search_partners_path, method: :get, local: true, class: "bg-white rounded-xl shadow-sm p-6 sticky top-8" do |f| %>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-lg font-semibold text-gray-900">Critères de recherche</h2>
            <%= link_to "Réinitialiser", search_partners_path, class: "text-sm text-teal-600 hover:text-teal-700" %>
          </div>

          <!-- Keywords -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-900 mb-2">Mots-clés</label>
            <%= f.text_field :q, 
                value: params[:q],
                placeholder: "Nom, spécialité, cabinet...", 
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" %>
          </div>

          <!-- Partner Type -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-900 mb-2">Type de partenaire</label>
            <%= f.select :type, 
                options_for_select([
                  ["Tous les types", ""],
                  ["Avocats", "lawyer"],
                  ["Experts-comptables", "accountant"],
                  ["Consultants", "consultant"],
                  ["Banquiers", "banker"],
                  ["Courtiers", "broker"],
                  ["Autres", "other"]
                ], params[:type]),
                {},
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" %>
          </div>

          <!-- Location -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-900 mb-2">Localisation</label>
            <%= f.text_field :location, 
                value: params[:location],
                placeholder: "Ville, département, région...", 
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" %>
          </div>

          <!-- Coverage Area -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-900 mb-2">Zone d'intervention</label>
            <%= f.select :coverage, 
                options_for_select([
                  ["Toutes zones", ""],
                  ["Ville uniquement", "city"],
                  ["Département", "department"],
                  ["Région", "region"],
                  ["France entière", "nationwide"],
                  ["International", "international"]
                ], params[:coverage]),
                {},
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" %>
          </div>

          <!-- Intervention Stages -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-900 mb-2">Étapes d'intervention</label>
            <div class="space-y-2 max-h-40 overflow-y-auto">
              <% %w[Préparation Valorisation Recherche Négociation Audits Financement Juridique].each do |stage| %>
                <label class="flex items-center gap-2 text-sm text-gray-700 hover:bg-gray-50 p-2 rounded cursor-pointer">
                  <%= check_box_tag 'stages[]', stage, 
                      params[:stages]&.include?(stage),
                      class: "rounded border-gray-300 text-teal-600 focus:ring-teal-500" %>
                  <span><%= stage %></span>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Premium Only -->
          <div class="mb-6">
            <label class="flex items-center gap-3 cursor-pointer">
              <%= f.check_box :premium, { checked: params[:premium] == '1' }, '1', '0' %>
              <span class="inline-flex items-center gap-2">
                <span class="px-2 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-purple-600 to-indigo-600 text-white">
                  Premium
                </span>
                <span class="text-sm text-gray-700">uniquement</span>
              </span>
            </label>
          </div>

          <!-- Buttons -->
          <div class="flex gap-3 pt-4 border-t border-gray-200">
            <%= link_to "Réinitialiser", search_partners_path, class: "flex-1 px-4 py-2 border border-gray-300 rounded-full text-gray-700 hover:bg-gray-50 transition font-medium text-center" %>
            <%= f.submit "Rechercher", class: "flex-1 px-4 py-2 bg-teal-600 text-white rounded-full hover:bg-teal-700 transition font-medium cursor-pointer" %>
          </div>
        <% end %>
      </aside>

      <!-- Results Section -->
      <main class="lg:col-span-2">
        <!-- Results Header -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div>
              <h2 class="text-xl font-bold text-gray-900 mb-1">Résultats de recherche</h2>
              <p class="text-gray-600"><span class="font-semibold"><%= @total_count %></span> partenaires correspondent à vos critères</p>
            </div>
            <%= form_with url: search_partners_path, method: :get, local: true do |f| %>
              <!-- Preserve existing filters -->
              <% request.query_parameters.except('sort', 'page').each do |key, value| %>
                <% if value.is_a?(Array) %>
                  <% value.each do |v| %>
                    <%= hidden_field_tag "#{key}[]", v %>
                  <% end %>
                <% else %>
                  <%= hidden_field_tag key, value %>
                <% end %>
              <% end %>
              <%= f.select :sort, 
                  options_for_select([
                    ["Pertinence", ""],
                    ["Note (décroissante)", "rating"],
                    ["Nom (A-Z)", "name"],
                    ["Récent", "recent"]
                  ], params[:sort]),
                  {},
                  class: "px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500",
                  onchange: "this.form.submit()" %>
            <% end %>
          </div>

          <!-- Active Filters -->
          <% if @active_filters.present? && @active_filters.any? %>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <div class="flex items-center gap-2 flex-wrap">
                <span class="text-sm text-gray-600">Filtres actifs:</span>
                <% @active_filters.each do |filter| %>
                  <span class="inline-flex items-center gap-1 px-3 py-1 bg-teal-100 text-teal-700 rounded-full text-sm">
                    <%= filter[:label] %>
                    <%= link_to search_partners_path(request.query_parameters.except(filter[:key])), class: "hover:bg-teal-200 rounded-full p-0.5" do %>
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    <% end %>
                  </span>
                <% end %>
                <%= link_to "Tout effacer", search_partners_path, class: "text-sm text-gray-600 hover:text-gray-900 underline" %>
              </div>
            </div>
          <% end %>
        </div>

        <% if @partners.any? %>
          <!-- Results Grid -->
          <div class="space-y-6">
            <% @partners.each do |partner| %>
              <%= render partial: 'directory/partner_card', locals: { partner: partner } %>
            <% end %>
          </div>

          <!-- Pagination -->
          <div class="mt-8 flex justify-center">
            <nav class="flex items-center gap-2">
              <% if @page > 1 %>
                <%= link_to "Précédent", search_partners_path(request.query_parameters.merge(page: @page - 1)), class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50" %>
              <% else %>
                <span class="px-4 py-2 border border-gray-300 rounded-lg text-gray-400 bg-gray-50 cursor-not-allowed">Précédent</span>
              <% end %>
              
              <% (1..[@total_pages, 5].min).each do |page_num| %>
                <% if page_num == @page %>
                  <span class="px-4 py-2 bg-teal-600 text-white rounded-lg font-medium"><%= page_num %></span>
                <% else %>
                  <%= link_to page_num, search_partners_path(request.query_parameters.merge(page: page_num)), class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50" %>
                <% end %>
              <% end %>
              
              <% if @page < @total_pages %>
                <%= link_to "Suivant", search_partners_path(request.query_parameters.merge(page: @page + 1)), class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50" %>
              <% else %>
                <span class="px-4 py-2 border border-gray-300 rounded-lg text-gray-400 bg-gray-50 cursor-not-allowed">Suivant</span>
              <% end %>
            </nav>
          </div>
        <% else %>
          <!-- No Results -->
          <div class="bg-white rounded-xl shadow-sm p-12 text-center">
            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Aucun partenaire trouvé</h3>
            <p class="text-gray-600 mb-6">
              Essayez d'élargir vos critères de recherche ou parcourez tous les partenaires disponibles.
            </p>
            <%= link_to partners_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-teal-600 text-white rounded-full font-semibold hover:bg-teal-700 transition" do %>
              Voir tous les partenaires
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </main>
    </div>
  </div>
</div>
