<% content_for :title, "Mes dossiers - Id√©al Reprise" %>
<% content_for :page_title, "Mes dossiers" %>

<div class="max-w-7xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900">Mes dossiers</h1>
    <%= link_to buyer_listings_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-buyer-600 text-white rounded-lg hover:bg-buyer-700 transition font-medium" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      Parcourir les annonces
    <% end %>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-white rounded-lg shadow-sm p-4 border border-gray-200">
      <div class="flex items-center gap-3">
        <div class="p-3 bg-purple-100 rounded-lg">
          <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        </div>
        <div>
          <div class="text-sm text-gray-600">Total dossiers</div>
          <div class="text-2xl font-bold text-gray-900"><%= @deals.count %></div>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-sm p-4 border border-gray-200">
      <div class="flex items-center gap-3">
        <div class="p-3 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <div class="text-sm text-gray-600">R√©servations actives</div>
          <div class="text-2xl font-bold text-green-600"><%= @reserved_deals.count %></div>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-sm p-4 border border-gray-200">
      <div class="flex items-center gap-3">
        <div class="p-3 bg-red-100 rounded-lg">
          <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <div class="text-sm text-gray-600">Expire bient√¥t</div>
          <div class="text-2xl font-bold text-red-600"><%= @expiring_soon.count %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Expiring Soon Alert -->
  <% if @expiring_soon.any? %>
    <div class="bg-red-50 border-2 border-red-300 rounded-lg p-4">
      <div class="flex items-start gap-3">
        <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div class="flex-1">
          <h3 class="text-sm font-semibold text-red-900 mb-1">‚ö†Ô∏è Attention : <%= @expiring_soon.count %> r√©servation<%= @expiring_soon.count > 1 ? 's' : '' %> expire<%= @expiring_soon.count == 1 ? '' : 'nt' %> bient√¥t!</h3>
          <p class="text-sm text-red-800">
            Vous avez des dossiers qui expirent dans les 3 prochains jours. Agissez rapidement ou lib√©rez-les pour gagner des cr√©dits.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Reserved Deals (Active Reservations) -->
  <% if @reserved_deals.any? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="bg-gradient-to-r from-green-600 to-buyer-600 px-6 py-4">
        <h2 class="text-xl font-bold text-white flex items-center gap-2">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
          </svg>
          R√©servations actives (<%= @reserved_deals.count %>)
        </h2>
      </div>
      
      <div class="divide-y divide-gray-200">
        <% @reserved_deals.each do |deal| %>
          <div class="p-6 hover:bg-gray-50 transition">
            <div class="flex items-start gap-6">
              <!-- Timer Gauge -->
              <div>
                <%= render 'buyer/shared/timer_gauge', deal: deal, size: 'large' %>
              </div>
              
              <!-- Deal Info -->
              <div class="flex-1">
                <div class="flex items-start justify-between mb-3">
                  <div>
                    <h3 class="text-lg font-bold text-gray-900 mb-1">
                      <%= link_to deal.listing.title, buyer_listing_path(deal.listing), class: "hover:text-buyer-600" %>
                    </h3>
                    <div class="flex items-center gap-3 text-sm text-gray-600">
                      <span><%= deal.listing.industry_sector&.humanize %></span>
                      <span>‚Ä¢</span>
                      <span><%= deal.listing.location_department %></span>
                      <% if deal.listing.annual_revenue %>
                        <span>‚Ä¢</span>
                        <span>CA: <%= number_to_currency(deal.listing.annual_revenue, unit: "‚Ç¨", precision: 0, format: "%n %u") %></span>
                      <% end %>
                    </div>
                  </div>
                  
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= deal_status_badge_class(deal.status) %>">
                    <%= deal_stage_name(deal.status) %>
                  </span>
                </div>
                
                <!-- Progress Info -->
                <div class="grid grid-cols-3 gap-4 mb-4">
                  <div class="bg-gray-50 rounded-lg p-3">
                    <div class="text-xs text-gray-600 mb-1">R√©serv√© depuis</div>
                    <div class="text-sm font-semibold text-gray-900">
                      <%= (Time.current - deal.reserved_at).to_i / 1.day %> jours
                    </div>
                  </div>
                  <% if deal.reserved_until %>
                    <div class="bg-gray-50 rounded-lg p-3">
                      <div class="text-xs text-gray-600 mb-1">Temps restant</div>
                      <div class="text-sm font-semibold">
                        <%= days_remaining_text(deal) %>
                      </div>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-3">
                      <div class="text-xs text-gray-600 mb-1">Progression</div>
                      <div class="text-sm font-semibold text-gray-900">
                        <%= deal.timer_percentage %>%
                      </div>
                    </div>
                  <% end %>
                </div>
                
                <!-- Actions -->
                <div class="flex items-center gap-2">
                  <%= link_to buyer_listing_path(deal.listing), class: "inline-flex items-center gap-2 px-4 py-2 bg-buyer-600 text-white rounded-lg hover:bg-buyer-700 transition text-sm font-medium" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Voir l'annonce
                  <% end %>
                  
                  <%= link_to release_confirm_buyer_listing_path(deal.listing), class: "inline-flex items-center gap-2 px-4 py-2 border-2 border-orange-500 text-orange-700 rounded-lg hover:bg-orange-50 transition text-sm font-medium" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                    </svg>
                    Lib√©rer
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Favorited Deals (In CRM but not reserved) -->
  <% if @favorited_deals.any? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="bg-gradient-to-r from-pink-500 to-red-500 px-6 py-4">
        <h2 class="text-xl font-bold text-white flex items-center gap-2">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
          </svg>
          Favoris (<%= @favorited_deals.count %>)
        </h2>
      </div>
      
      <div class="divide-y divide-gray-200">
        <% @favorited_deals.each do |deal| %>
          <div class="p-6 hover:bg-gray-50 transition">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-900 mb-2">
                  <%= link_to deal.listing.title, buyer_listing_path(deal.listing), class: "hover:text-buyer-600" %>
                </h3>
                <div class="flex items-center gap-3 text-sm text-gray-600 mb-4">
                  <span><%= deal.listing.industry_sector&.humanize %></span>
                  <span>‚Ä¢</span>
                  <span><%= deal.listing.location_department %></span>
                  <% if deal.listing.annual_revenue %>
                    <span>‚Ä¢</span>
                    <span>CA: <%= number_to_currency(deal.listing.annual_revenue, unit: "‚Ç¨", precision: 0, format: "%n %u") %></span>
                  <% end %>
                </div>
                
                <div class="flex items-center gap-2">
                  <%= link_to buyer_listing_path(deal.listing), class: "inline-flex items-center gap-2 px-4 py-2 bg-buyer-600 text-white rounded-lg hover:bg-buyer-700 transition text-sm font-medium" do %>
                    Voir l'annonce
                  <% end %>
                  
                  <% unless deal.listing.status == 'reserved' %>
                    <%= button_to reserve_buyer_listing_path(deal.listing), method: :post, class: "inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-sm font-medium" do %>
                      üîí R√©server maintenant
                    <% end %>
                  <% end %>
                </div>
              </div>
              
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-pink-100 text-pink-800">
                ‚ù§Ô∏è Favoris
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Empty State -->
  <% if @deals.empty? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
      <svg class="w-24 h-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">Aucun dossier pour le moment</h3>
      <p class="text-gray-600 mb-6 max-w-md mx-auto">
        Commencez par parcourir les annonces et ajoutez vos favoris pour les suivre dans votre CRM.
      </p>
      <%= link_to buyer_listings_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-buyer-600 text-white rounded-lg hover:bg-buyer-700 transition font-medium" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Parcourir les annonces
      <% end %>
    </div>
  <% end %>
</div>
