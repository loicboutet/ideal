<%
  # Local variables: listing (required), exclusive (optional, default false)
  exclusive ||= false
  is_favorited = current_user.buyer_profile&.favorites&.exists?(listing_id: listing.id) || false
  active_deal = current_user.buyer_profile&.deals&.find_by(listing_id: listing.id, released_at: nil)
  completeness = listing.calculate_completeness
%>

<div class="bg-white rounded-xl shadow-sm hover:shadow-md transition overflow-hidden">
  <div class="relative">
    <!-- Image placeholder with initials -->
    <div class="h-48 bg-gradient-to-br from-buyer-400 to-purple-500 flex items-center justify-center text-white font-bold text-2xl">
      <%= listing.title.split(' ').map(&:first).join[0..1].upcase %>
    </div>
    
    <!-- Favorite button -->
    <% if is_favorited %>
      <%= button_to unfavorite_buyer_listing_path(listing), method: :post, class: "absolute top-3 right-3 w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-md hover:bg-gray-50 transition" do %>
        <svg class="w-6 h-6 text-red-500" fill="currentColor" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      <% end %>
    <% else %>
      <%= button_to favorite_buyer_listing_path(listing), method: :post, class: "absolute top-3 right-3 w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-md hover:bg-gray-50 transition" do %>
        <svg class="w-6 h-6 text-gray-600 hover:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      <% end %>
    <% end %>
    
    <!-- Deal type badge -->
    <div class="absolute top-3 left-3">
      <% case listing.deal_type %>
      <% when 'direct' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-buyer-500 text-white">
          ‚ö° Deal Direct
        </span>
      <% when 'ideal_mandate' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-400 text-gray-900">
          üèÜ Mandat Id√©al
        </span>
      <% when 'partner_mandate' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-partner-500 text-white">
          ü§ù Mandat Partenaire
        </span>
      <% end %>
    </div>
    
    <!-- Exclusive badge -->
    <% if exclusive %>
      <div class="absolute bottom-3 left-3 right-3">
        <span class="block text-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-400 text-gray-900">
          ‚≠ê Exclusif pour vous
        </span>
      </div>
    <% end %>
    
    <!-- Reserved status -->
    <% if listing.reserved? %>
      <div class="absolute bottom-3 left-3 right-3">
        <span class="block text-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
          R√©serv√©
        </span>
      </div>
    <% end %>
  </div>

  <div class="p-4">
    <h3 class="font-bold text-gray-900 mb-2 truncate"><%= listing.title %></h3>
    <p class="text-sm text-gray-600 mb-3">
      <%= listing.location_city || listing.location_department || 'Non sp√©cifi√©' %> ‚Ä¢ 
      <%= listing.industry_sector&.humanize || 'Non sp√©cifi√©' %>
    </p>

    <div class="grid grid-cols-2 gap-2 mb-3 text-sm">
      <div>
        <span class="text-gray-600">CA:</span>
        <span class="font-semibold text-gray-900 ml-1">
          <% if listing.annual_revenue %>
            <%= number_to_currency(listing.annual_revenue, unit: "‚Ç¨", separator: " ", delimiter: " ", format: "%n%u") %>
          <% else %>
            N/A
          <% end %>
        </span>
      </div>
      <div>
        <span class="text-gray-600">Effectif:</span>
        <span class="font-semibold text-gray-900 ml-1">
          <%= listing.employee_count || 'N/A' %>
        </span>
      </div>
    </div>

    <!-- Star rating (based on completeness for now) -->
    <div class="flex items-center gap-1 mb-3">
      <% star_rating = (completeness / 20.0).round %>
      <% star_rating.times do %>
        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      <% end %>
      <% (5 - star_rating).times do %>
        <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      <% end %>
    </div>

    <!-- Completeness bar -->
    <div class="mb-3">
      <div class="flex justify-between text-xs text-gray-600 mb-1">
        <span>Compl√©tude</span>
        <span><%= completeness %>%</span>
      </div>
      <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
        <% if completeness >= 85 %>
          <div class="h-full bg-green-500" style="width: <%= completeness %>%"></div>
        <% else %>
          <div class="h-full bg-orange-500" style="width: <%= completeness %>%"></div>
        <% end %>
      </div>
    </div>

    <!-- Price -->
    <div class="mb-4">
      <p class="text-sm text-gray-600">Prix estim√©</p>
      <p class="text-lg font-bold text-buyer-600">
        <% if listing.asking_price %>
          <%= number_to_currency(listing.asking_price, unit: "‚Ç¨", separator: " ", delimiter: " ", format: "%n%u") %>
        <% else %>
          Sur demande
        <% end %>
      </p>
    </div>

    <%= link_to buyer_listing_path(listing), class: "block w-full px-4 py-2 bg-buyer-600 text-white rounded-full hover:bg-buyer-700 transition font-medium text-center text-sm" do %>
      Voir l'annonce
    <% end %>
  </div>
</div>
