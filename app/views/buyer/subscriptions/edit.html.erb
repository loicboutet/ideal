<% content_for :page_title, "Change Your Plan" %>

<div class="max-w-7xl mx-auto">
  <!-- Current Plan Info -->
  <% if @current_subscription %>
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Change Your Plan</h1>
      <p class="text-gray-600">Currently on <span class="font-semibold text-buyer-600"><%= @current_subscription.plan_type.humanize %></span></p>
    </div>

    <!-- Plan Comparison -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @all_plans.each do |plan_key, plan| %>
        <% next if plan_key == :free %>
        <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
        
        <div class="relative bg-white rounded-xl shadow-lg border-2 <%= is_current ? 'border-green-500' : 'border-gray-200' %> p-6">
          <% if is_current %>
            <div class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 text-xs font-bold uppercase rounded-full">
              Current
            </div>
          <% end %>

          <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= plan[:name] %></h3>
          <div class="text-3xl font-bold text-buyer-600 mb-1"><%= plan[:price_display] %></div>
          <div class="text-sm text-gray-500 mb-6">per <%= plan[:interval] %></div>

          <ul class="space-y-2 mb-6">
            <% plan[:features].take(5).each do |feature| %>
              <li class="flex items-start gap-2 text-sm">
                <svg class="w-4 h-4 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700"><%= feature %></span>
              </li>
            <% end %>
          </ul>

          <% if is_current %>
            <div class="text-center px-4 py-2 bg-gray-100 text-gray-600 rounded-lg font-medium">
              Current Plan
            </div>
          <% else %>
            <%= button_to buyer_subscription_path, method: :patch, params: { plan_type: "buyer_#{plan_key}" }, class: "w-full px-4 py-2 bg-buyer-600 text-white rounded-lg font-medium hover:bg-buyer-700 transition", data: { turbo_confirm: "Switch to #{plan[:name]} plan?" } do %>
              Switch to <%= plan[:name] %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-8 text-center">
      <%= link_to buyer_subscription_path, class: "inline-flex items-center gap-2 text-buyer-600 hover:text-buyer-700 font-medium" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Subscription
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 mb-4">No active subscription to change</p>
      <%= link_to "View Subscription Plans", new_buyer_subscription_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-buyer-600 text-white rounded-lg font-medium hover:bg-buyer-700 transition" %>
    </div>
  <% end %>
</div>
