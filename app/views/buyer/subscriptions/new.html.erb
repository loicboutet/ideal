<% content_for :page_title, "Choose Your Subscription Plan" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Choose the Perfect Plan for Your Journey</h1>
    <p class="text-xl text-gray-600">Find the right business with the right tools and support</p>
  </div>

  <% if @current_subscription %>
    <div class="mb-8 bg-blue-50 border-2 border-blue-200 rounded-xl p-6">
      <div class="flex items-center gap-3">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <p class="font-semibold text-blue-900">Current Plan: <%= @current_subscription.plan_type.humanize %></p>
          <p class="text-sm text-blue-700">Select a plan below to upgrade or change your subscription</p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Pricing Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
    <% @all_plans.each do |plan_key, plan| %>
      <% next if plan_key == :free %>
      <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
      <% is_popular = plan_key == :standard %>
      
      <div class="relative bg-white rounded-xl shadow-lg border-2 <%= is_current ? 'border-buyer-500' : is_popular ? 'border-buyer-400' : 'border-gray-200' %> overflow-hidden hover:shadow-xl transition">
        <% if is_popular %>
          <div class="absolute top-0 right-0 bg-buyer-500 text-white px-4 py-1 text-xs font-bold uppercase rounded-bl-lg">
            Popular
          </div>
        <% end %>
        
        <% if is_current %>
          <div class="absolute top-0 left-0 bg-green-500 text-white px-4 py-1 text-xs font-bold uppercase rounded-br-lg">
            Current Plan
          </div>
        <% end %>

        <div class="p-6">
          <!-- Plan Header -->
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= plan[:name] %></h3>
            <div class="text-4xl font-bold text-buyer-600 mb-1">
              <%= plan[:price_display] %>
            </div>
            <div class="text-sm text-gray-500">per <%= plan[:interval] %></div>
          </div>

          <!-- Features List -->
          <ul class="space-y-3 mb-8">
            <% plan[:features].each do |feature| %>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-gray-700"><%= feature %></span>
              </li>
            <% end %>
          </ul>

          <!-- CTA Button -->
          <% if is_current %>
            <%= link_to buyer_subscription_path, class: "block w-full text-center px-6 py-3 bg-gray-100 text-gray-600 rounded-lg font-medium cursor-not-allowed" do %>
              Current Plan
            <% end %>
          <% else %>
            <%= button_to buyer_subscription_path, method: :post, params: { plan_type: "buyer_#{plan_key}" }, class: "w-full px-6 py-3 bg-buyer-600 text-white rounded-lg font-medium hover:bg-buyer-700 transition shadow-md" do %>
              <%= @current_subscription ? 'Switch to ' : 'Choose ' %><%= plan[:name] %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Additional Info -->
  <div class="bg-gray-50 rounded-xl p-8 text-center">
    <h3 class="text-xl font-semibold text-gray-900 mb-4">Need help choosing?</h3>
    <p class="text-gray-600 mb-6">Our team is here to help you find the perfect plan for your needs.</p>
    <div class="flex flex-wrap gap-4 justify-center">
      <%= link_to "#", class: "inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-gray-300 text-gray-700 rounded-lg font-medium hover:border-buyer-500 transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Contact Sales
      <% end %>
      
      <%= link_to buyer_root_path, class: "inline-flex items-center gap-2 px-6 py-3 text-buyer-600 hover:text-buyer-700 font-medium transition" do %>
        Return to Dashboard
      <% end %>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="mt-12">
    <h3 class="text-2xl font-bold text-gray-900 text-center mb-8">Frequently Asked Questions</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg p-6 shadow">
        <h4 class="font-semibold text-gray-900 mb-2">Can I change plans later?</h4>
        <p class="text-gray-600 text-sm">Yes, you can upgrade or downgrade your plan at any time. Changes will be prorated.</p>
      </div>
      <div class="bg-white rounded-lg p-6 shadow">
        <h4 class="font-semibold text-gray-900 mb-2">What payment methods do you accept?</h4>
        <p class="text-gray-600 text-sm">We accept all major credit cards through our secure payment processor Stripe.</p>
      </div>
      <div class="bg-white rounded-lg p-6 shadow">
        <h4 class="font-semibold text-gray-900 mb-2">Can I cancel anytime?</h4>
        <p class="text-gray-600 text-sm">Yes, you can cancel your subscription at any time. You'll retain access until the end of your billing period.</p>
      </div>
      <div class="bg-white rounded-lg p-6 shadow">
        <h4 class="font-semibold text-gray-900 mb-2">Is there a free trial?</h4>
        <p class="text-gray-600 text-sm">You can start with our Free plan to explore the platform before upgrading to a paid plan.</p>
      </div>
    </div>
  </div>
</div>
