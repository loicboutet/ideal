<% content_for :title, "Mon abonnement - Idéal Reprise" %>
<% content_for :page_title, "Mon abonnement" %>

<div class="max-w-6xl mx-auto space-y-6">
  <% if @subscription %>
    <!-- Current Subscription -->
    <div class="bg-gradient-to-r from-green-500 to-teal-600 rounded-xl shadow-lg p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-100 mb-2">Votre abonnement</p>
          <div class="text-3xl font-bold mb-2"><%= @summary[:plan_name] %> - <%= @summary[:price_display] %>/<%= @summary[:interval] %></div>
          <p class="text-green-100">
            <% if @subscription.active? %>
              Actif jusqu'au <%= @subscription.current_period_end&.strftime('%d %B %Y') %>
            <% elsif @subscription.cancelled? %>
              Se termine le <%= @subscription.current_period_end&.strftime('%d %B %Y') %>
            <% else %>
              <%= @subscription.status.capitalize %>
            <% end %>
          </p>
        </div>
        <div class="text-right">
          <div class="text-4xl font-bold">
            <% if @subscription.active? %>
              ✓
            <% elsif @subscription.cancelled? %>
              ⚠
            <% else %>
              •
            <% end %>
          </div>
          <p class="text-sm text-green-100 mt-2">
            <% if @subscription.active? %>
              Abonnement actif
            <% elsif @subscription.cancelled? %>
              Annulé
            <% else %>
              <%= @subscription.status.capitalize %>
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <% if @subscription.cancel_at_period_end %>
      <div class="bg-orange-50 border-2 border-orange-200 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-orange-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div class="flex-1">
            <p class="font-semibold text-orange-900">L'abonnement se termine le <%= @subscription.current_period_end&.strftime('%d %B %Y') %></p>
            <p class="text-sm text-orange-700 mt-1">Votre abonnement est programmé pour être annulé. Vous conserverez l'accès jusqu'à la fin de votre période de facturation actuelle.</p>
            <%= button_to 'Réactiver l\'abonnement', reactivate_buyer_subscription_path, method: :post, class: "mt-3 inline-flex items-center px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition font-medium" %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Comparison Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-900">Comparer les forfaits</h2>
        <p class="text-gray-600 mt-1">Choisissez le forfait qui correspond à vos besoins</p>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="p-4 text-left text-sm font-semibold text-gray-900">Fonctionnalités</th>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <th class="p-4 text-center <%= is_current ? 'bg-buyer-50' : plan_key == :free ? 'bg-gray-50' : '' %>">
                  <div class="font-bold text-gray-900"><%= plan[:name] %></div>
                  <div class="text-sm text-gray-600 mt-1"><%= plan[:price_display] %></div>
                  <% if is_current %>
                    <div class="inline-block mt-1 px-2 py-0.5 bg-buyer-600 text-white text-xs rounded-full">Actuel</div>
                  <% end %>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <!-- Access to listings -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Accès aux annonces</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% if plan_key == :free %>
                    <span class="text-gray-500">Limité</span>
                  <% else %>
                    ✓
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Simultaneous reservations -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Réservations simultanées</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% case plan_key %>
                  <% when :free %>
                    <span class="text-gray-500">0</span>
                  <% when :starter %>
                    3
                  <% else %>
                    <span class="font-medium">Illimité</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Timer duration -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Durée du minuteur</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% case plan_key %>
                  <% when :free %>
                    <span class="text-gray-500">-</span>
                  <% when :starter %>
                    10 jours
                  <% else %>
                    2 mois
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Pipeline CRM -->
            <tr>
              <td class="p-4 text-sm text-gray-700">CRM Pipeline</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% if plan_key == :free %>
                    <span class="text-gray-500">-</span>
                  <% else %>
                    ✓
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Listing enrichment -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Enrichissement des annonces</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% if plan_key == :free %>
                    <span class="text-gray-500">-</span>
                  <% else %>
                    ✓
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Credits included -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Crédits inclus/mois</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% case plan_key %>
                  <% when :free %>
                    <span class="text-gray-500">0</span>
                  <% when :starter %>
                    5
                  <% when :premium %>
                    <span class="font-medium">15</span>
                  <% when :club %>
                    <span class="font-medium">30</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Verified buyer -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Badge acheteur vérifié</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% if [:premium, :club].include?(plan_key) %>
                    ✓
                  <% else %>
                    <span class="text-gray-500">-</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Partner directory -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Annuaire des partenaires</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% case plan_key %>
                  <% when :free %>
                    <span class="text-gray-500">-</span>
                  <% when :starter %>
                    Payant
                  <% else %>
                    <span class="font-medium">Gratuit</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Priority support -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Support prioritaire</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% if [:premium, :club].include?(plan_key) %>
                    ✓
                  <% else %>
                    <span class="text-gray-500">-</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
            
            <!-- Coaching included -->
            <tr>
              <td class="p-4 text-sm text-gray-700">Coaching inclus</td>
              <% @all_plans.each do |plan_key, plan| %>
                <% is_current = @current_plan_type == "buyer_#{plan_key}" %>
                <td class="p-4 text-center <%= is_current ? 'bg-buyer-50' : '' %>">
                  <% if plan_key == :club %>
                    <span class="font-medium">1h/mois</span>
                  <% else %>
                    <span class="text-gray-500">-</span>
                  <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
      
      <div class="p-6 bg-gray-50 border-t border-gray-200 text-center">
        <%= link_to edit_buyer_subscription_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-buyer-600 text-white rounded-lg hover:bg-buyer-700 transition font-medium" do %>
          Changer de forfait
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Payment History -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Historique des paiements</h3>
      <p class="text-gray-500 text-center py-8">L'historique des paiements apparaîtra ici</p>
    </div>

    <!-- Actions -->
    <div class="flex gap-3">
      <% unless @subscription.cancel_at_period_end %>
        <%= link_to cancel_confirm_buyer_subscription_path, class: "px-6 py-3 border-2 border-red-600 text-red-600 rounded-lg hover:bg-red-50 transition font-medium" do %>
          Annuler l'abonnement
        <% end %>
      <% end %>
    </div>

  <% else %>
    <!-- No Active Subscription -->
    <div class="bg-white rounded-xl shadow-lg p-12 text-center">
      <div class="max-w-md mx-auto">
        <svg class="w-20 h-20 text-gray-300 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h2 class="text-2xl font-bold text-gray-900 mb-3">Aucun abonnement actif</h2>
        <p class="text-gray-600 mb-8">Vous êtes actuellement sur le forfait gratuit. Passez à un forfait payant pour débloquer des fonctionnalités premium et développer votre entreprise plus rapidement.</p>
        
        <%= link_to new_buyer_subscription_path, class: "inline-flex items-center gap-2 px-8 py-4 bg-buyer-600 text-white rounded-lg font-medium hover:bg-buyer-700 transition shadow-lg" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          Voir les forfaits d'abonnement
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Return to Dashboard -->
  <div class="text-center">
    <%= link_to buyer_root_path, class: "inline-flex items-center gap-2 text-buyer-600 hover:text-buyer-700 font-medium transition" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Retour au tableau de bord
    <% end %>
  </div>
</div>
