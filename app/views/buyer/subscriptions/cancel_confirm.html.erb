<% content_for :page_title, "Cancel Subscription" %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg p-8">
    <!-- Warning Icon -->
    <div class="text-center mb-6">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-red-100 rounded-full mb-4">
        <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Cancel Subscription?</h2>
      <p class="text-gray-600">We're sorry to see you go</p>
    </div>

    <!-- Current Plan Info -->
    <% if @subscription %>
      <div class="bg-gray-50 rounded-lg p-6 mb-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="font-semibold text-gray-900">Current Plan</h3>
            <p class="text-2xl font-bold text-buyer-600"><%= @subscription.plan_type.humanize %></p>
          </div>
          <div class="text-right">
            <p class="text-sm text-gray-500">Next billing date</p>
            <p class="font-semibold text-gray-900"><%= @subscription.current_period_end&.strftime('%B %d, %Y') %></p>
          </div>
        </div>
      </div>

      <!-- What You'll Lose -->
      <div class="mb-6">
        <h3 class="font-semibold text-gray-900 mb-3">What you'll lose access to:</h3>
        <ul class="space-y-2">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-gray-700">Advanced search and filtering capabilities</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-gray-700">Ability to reserve and manage listings</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-gray-700">Full CRM pipeline access</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-gray-700">Partner directory access</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-gray-700">Priority support</span>
          </li>
        </ul>
      </div>

      <!-- Important Notice -->
      <div class="bg-blue-50 border-2 border-blue-200 rounded-lg p-4 mb-6">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <p class="font-semibold text-blue-900">Your subscription will remain active until <%= @subscription.current_period_end&.strftime('%B %d, %Y') %></p>
            <p class="text-sm text-blue-700 mt-1">You can continue using all features until the end of your current billing period. No refunds will be issued for the current period.</p>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="space-y-3">
        <%= button_to buyer_subscription_path, method: :delete, class: "w-full px-6 py-3 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 transition shadow-md", data: { confirm: "Are you sure you want to cancel your subscription?" } do %>
          Yes, Cancel My Subscription
        <% end %>

        <%= link_to buyer_subscription_path, class: "block w-full text-center px-6 py-3 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition" do %>
          No, Keep My Subscription
        <% end %>
      </div>

      <!-- Alternative Option -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <h3 class="font-semibold text-gray-900 mb-2 text-center">Need to save money?</h3>
        <p class="text-gray-600 text-center mb-4">Consider downgrading to a lower-tier plan instead of cancelling</p>
        <%= link_to edit_buyer_subscription_path, class: "block text-center px-6 py-3 bg-buyer-600 text-white rounded-lg font-medium hover:bg-buyer-700 transition" do %>
          View Other Plans
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">No active subscription found</p>
        <%= link_to buyer_subscription_path, class: "inline-flex items-center gap-2 text-buyer-600 hover:text-buyer-700 font-medium" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Return to Subscription
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Help Section -->
  <div class="mt-6 text-center">
    <p class="text-gray-600">Need help? <%= link_to "Contact our support team", "#", class: "text-buyer-600 hover:text-buyer-700 font-medium" %></p>
  </div>
