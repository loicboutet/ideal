<% content_for :title, "Mes favoris - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Mes favoris" %>

<div class="max-w-7xl mx-auto space-y-6">
  <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Mes favoris</h2>
      <p class="text-gray-600 mt-1">
        <%= @favorited_listings.total_count %> annonce<%= @favorited_listings.total_count > 1 ? 's' : '' %> dans vos favoris
      </p>
    </div>
    
    <%= link_to buyer_listings_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-buyer-600 text-white rounded-lg hover:bg-buyer-700 transition font-medium" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      Parcourir les annonces
    <% end %>
  </div>

  <!-- Info Box -->
  <div class="bg-buyer-50 border border-buyer-200 rounded-lg p-4">
    <div class="flex items-start gap-3">
      <svg class="w-6 h-6 text-buyer-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-semibold text-buyer-900">À propos des favoris</h3>
        <p class="text-sm text-buyer-800 mt-1">
          Lorsque vous ajoutez une annonce aux favoris, elle entre automatiquement dans votre CRM avec le statut "Favoris". 
          Vous pouvez mettre en favoris même les annonces réservées par d'autres repreneurs - vous serez notifié si elles se libèrent.
        </p>
      </div>
    </div>
  </div>

  <!-- Listings Grid -->
  <% if @listings.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @listings.each do |listing| %>
        <div class="relative">
          <%= render 'buyer/listings/listing_card', listing: listing %>
          
          <!-- Remove from Favorites Button -->
          <div class="absolute top-2 right-2 z-10">
            <%= button_to buyer_favorite_path(@favorited_listings.find { |f| f.listing_id == listing.id }), 
                method: :delete, 
                class: "w-10 h-10 bg-red-500 rounded-full flex items-center justify-center shadow-lg hover:bg-red-600 transition",
                data: { confirm: "Retirer cette annonce de vos favoris ?" } do %>
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @favorited_listings.total_pages > 1 %>
      <div class="bg-white rounded-xl shadow-sm px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
        <div class="flex-1 flex justify-between sm:hidden">
          <%= link_to buyer_favorites_path(page: @favorited_listings.prev_page), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 #{'pointer-events-none opacity-50' unless @favorited_listings.prev_page}" do %>
            Précédent
          <% end %>
          <%= link_to buyer_favorites_path(page: @favorited_listings.next_page), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 #{'pointer-events-none opacity-50' unless @favorited_listings.next_page}" do %>
            Suivant
          <% end %>
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              Affichage de <span class="font-medium"><%= @favorited_listings.offset_value + 1 %></span> à <span class="font-medium"><%= [@favorited_listings.offset_value + @favorited_listings.limit_value, @favorited_listings.total_count].min %></span> sur <span class="font-medium"><%= @favorited_listings.total_count %></span> résultats
            </p>
          </div>
          <div>
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
              <%= link_to buyer_favorites_path(page: @favorited_listings.prev_page), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 #{'pointer-events-none opacity-50' unless @favorited_listings.prev_page}" do %>
                <span class="sr-only">Précédent</span>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              <% end %>
              
              <% @favorited_listings.total_pages.times do |i| %>
                <% page_number = i + 1 %>
                <% if page_number == 1 || page_number == @favorited_listings.total_pages || (page_number - @favorited_listings.current_page).abs <= 1 %>
                  <%= link_to buyer_favorites_path(page: page_number), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium #{page_number == @favorited_listings.current_page ? 'bg-buyer-50 text-buyer-600 z-10' : 'bg-white text-gray-700 hover:bg-gray-50'}" do %>
                    <%= page_number %>
                  <% end %>
                <% elsif (page_number - @favorited_listings.current_page).abs == 2 %>
                  <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">...</span>
                <% end %>
              <% end %>
              
              <%= link_to buyer_favorites_path(page: @favorited_listings.next_page), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 #{'pointer-events-none opacity-50' unless @favorited_listings.next_page}" do %>
                <span class="sr-only">Suivant</span>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            </nav>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-xl shadow-sm p-12 text-center">
      <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Aucun favori pour le moment</h3>
      <p class="text-gray-600 mb-6">Parcourez les annonces et ajoutez-les à vos favoris pour les retrouver facilement.</p>
      <%= link_to buyer_listings_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-buyer-600 text-white rounded-lg hover:bg-buyer-700 transition font-medium" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Découvrir les annonces
      <% end %>
    </div>
  <% end %>
</div>
