<% content_for :page_title, "Nouvelle conversation" %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Démarrer une nouvelle conversation</h1>
    
    <%= form_with url: buyer_conversations_path, method: :post, class: "space-y-6" do |f| %>
      <!-- Select Listing -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Sélectionnez une annonce
        </label>
        <select name="listing_id" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
          <option value="">-- Choisir une annonce --</option>
          <% @listings.each do |listing| %>
            <option value="<%= listing.id %>">
              <%= listing.title %> - <%= listing.seller_profile.user.full_name %>
            </option>
          <% end %>
        </select>
        <p class="mt-2 text-sm text-gray-500">
          Sélectionnez l'annonce que vous souhaitez discuter avec le vendeur.
        </p>
      </div>

      <!-- Actions -->
      <div class="flex items-center gap-4 pt-4">
        <%= f.submit "Démarrer la conversation", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium" %>
        <%= link_to "Annuler", buyer_conversations_path, class: "px-6 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition" %>
      </div>
    <% end %>
  </div>
</div>
