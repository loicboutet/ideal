<% content_for :title, "Paramètres - Repreneur - Idéal Reprise" %>
<% content_for :page_title, "Paramètres" %>

<div class="max-w-4xl mx-auto space-y-6">
  <h2 class="text-2xl font-bold text-gray-900">Paramètres du compte</h2>

  <%= form_with(model: @user, url: buyer_settings_path, method: :patch, local: true, class: "space-y-6") do |f| %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Informations personnelles</h3>
      <div class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, "Prénom", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :first_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= f.label :last_name, "Nom", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :last_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div>
          <%= f.label :phone, "Téléphone", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.telephone_field :phone, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "06 12 34 56 78" %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Notifications</h3>
      <div class="space-y-3">
        <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
          <%= f.check_box :notify_new_listings, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5" %>
          <div>
            <div class="text-sm font-medium text-gray-900">Nouvelles annonces</div>
            <div class="text-xs text-gray-600">Annonces correspondant à mes critères</div>
          </div>
        </label>
        <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
          <%= f.check_box :notify_messages, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5" %>
          <div>
            <div class="text-sm font-medium text-gray-900">Messages</div>
            <div class="text-xs text-gray-600">Nouveaux messages des cédants</div>
          </div>
        </label>
        <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100">
          <%= f.check_box :notify_timer_alerts, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5" %>
          <div>
            <div class="text-sm font-medium text-gray-900">Alertes timer</div>
            <div class="text-xs text-gray-600">Rappels avant expiration réservations</div>
          </div>
        </label>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Sécurité</h3>
      <%= link_to "Changer le mot de passe", edit_user_registration_path, class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium inline-block" %>
    </div>

    <%= f.submit "Enregistrer les modifications", class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium cursor-pointer" %>
  <% end %>
</div>
