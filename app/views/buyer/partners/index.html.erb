<% content_for :title, "Annuaire partenaires - Repreneur - Idéal Reprise" %>

<div class="max-w-7xl mx-auto space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Annuaire des partenaires</h1>
      <p class="text-gray-600 mt-1">Trouvez les professionnels pour vous accompagner</p>
    </div>
    <div class="text-sm text-gray-600">
      <%= @total_partners %> partenaire<%= 's' if @total_partners > 1 %>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <%= form_with url: buyer_partners_path, method: :get, local: true, class: "space-y-4" do |f| %>
      <!-- Search Bar -->
      <div class="flex gap-3">
        <div class="flex-1">
          <%= text_field_tag :search, params[:search], 
            placeholder: "Rechercher un partenaire...", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>
        <%= button_tag type: 'submit', class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        <% end %>
      </div>

      <!-- Filters Grid -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Partner Type Filter -->
        <div>
          <%= label_tag :partner_type, "Type de partenaire", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :partner_type, 
            options_for_select([
              ['Tous les types', 'all'],
              ['Avocat d\'affaires', 'lawyer'],
              ['Comptable', 'accountant'],
              ['Consultant', 'consultant'],
              ['Banquier M&A', 'banker'],
              ['Broker', 'broker'],
              ['Autre', 'other']
            ], params[:partner_type]),
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- Coverage Area Filter -->
        <div>
          <%= label_tag :coverage_area, "Secteur couvert", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :coverage_area,
            options_for_select([
              ['Tous les secteurs', 'all'],
              ['Ville', 'city'],
              ['Département', 'department'],
              ['Région', 'region'],
              ['France entière', 'nationwide'],
              ['International', 'international']
            ], params[:coverage_area]),
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- Intervention Stage Filter -->
        <div>
          <%= label_tag :intervention_stage, "Stade d'intervention", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :intervention_stage,
            options_for_select([
              ['Tous les stades', ''],
              ['Info Exchange', 'Info Exchange'],
              ['Analysis', 'Analysis'],
              ['Project Alignment', 'Project Alignment'],
              ['Negotiation', 'Negotiation'],
              ['LOI', 'LOI'],
              ['Audits', 'Audits'],
              ['Financing', 'Financing'],
              ['Deal Signed', 'Deal Signed']
            ], params[:intervention_stage]),
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- Industry Filter -->
        <div>
          <%= label_tag :industry, "Secteur d'activité", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :industry,
            options_for_select([
              ['Tous les secteurs', ''],
              ['Industrie', 'Industrie'],
              ['Construction (BTP)', 'Construction (BTP)'],
              ['Commerce & Distribution', 'Commerce & Distribution'],
              ['Transport & Logistique', 'Transport & Logistique'],
              ['Hôtellerie / Restauration', 'Hôtellerie / Restauration'],
              ['Services', 'Services'],
              ['Agri-food & Agriculture', 'Agri-food & Agriculture'],
              ['Santé', 'Santé'],
              ['Digital', 'Digital'],
              ['Immobilier', 'Immobilier'],
              ['Autre', 'Autre']
            ], params[:industry]),
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <!-- Filter Actions -->
      <div class="flex gap-3">
        <%= link_to 'Réinitialiser les filtres', buyer_partners_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
      </div>
    <% end %>
  </div>

  <!-- Access Notice for Free Users -->
  <% unless current_user.buyer_profile&.subscription_status == 'active' %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="flex-1 text-sm">
          <div class="font-medium text-blue-900">Accès gratuit pour les abonnés</div>
          <div class="text-blue-700 mt-1">
            L'annuaire des partenaires est gratuit pour les repreneurs avec un abonnement actif.
            <%= link_to 'Voir les offres d\'abonnement', '#', class: 'font-medium underline hover:text-blue-900' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Partners Grid -->
  <% if @partners.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @partners.each do |partner| %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <!-- Header -->
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <h3 class="font-bold text-gray-900 text-lg">
                <%= partner.user.company_name || partner.user.full_name %>
              </h3>
              <span class="inline-block px-3 py-1 mt-2 bg-purple-100 text-purple-700 text-sm rounded-full">
                <%= partner.partner_type.humanize %>
              </span>
            </div>
          </div>

          <!-- Coverage -->
          <div class="mb-4">
            <div class="text-sm text-gray-600 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <%= partner.coverage_area&.humanize || 'Non spécifié' %>
              <% if partner.coverage_details.present? %>
                • <%= truncate(partner.coverage_details, length: 30) %>
              <% end %>
            </div>
          </div>

          <!-- Description -->
          <% if partner.description.present? %>
            <p class="text-sm text-gray-600 mb-4 line-clamp-3">
              <%= truncate(partner.description, length: 150) %>
            </p>
          <% end %>

          <!-- Intervention Stages -->
          <% if partner.intervention_stages.present? && partner.intervention_stages.any? %>
            <div class="mb-4">
              <div class="text-xs font-medium text-gray-700 mb-2">Intervient sur:</div>
              <div class="flex flex-wrap gap-1">
                <% partner.intervention_stages.first(3).each do |stage| %>
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
                    <%= stage %>
                  </span>
                <% end %>
                <% if partner.intervention_stages.count > 3 %>
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                    +<%= partner.intervention_stages.count - 3 %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- View Profile Button -->
          <div class="mt-4 pt-4 border-t border-gray-100">
            <%= link_to buyer_partner_path(partner), class: "block w-full text-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition" do %>
              Voir le profil
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="flex justify-center mt-8">
      <%= paginate @partners, params: request.query_parameters %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
      <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun partenaire trouvé</h3>
      <p class="text-gray-600">Essayez de modifier vos critères de recherche</p>
    </div>
  <% end %>
</div>
