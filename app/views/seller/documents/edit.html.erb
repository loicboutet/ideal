<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to seller_listing_path(@listing), class: "text-seller-600 hover:text-seller-700 flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour à l'annonce
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Modifier le document</h1>

    <%= form_with model: @listing_document, url: seller_listing_document_path(@listing, @listing_document), method: :patch, local: true, multipart: true, class: "space-y-6" do |f| %>
      <% if @listing_document.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
          <p class="font-semibold mb-2"><%= pluralize(@listing_document.errors.count, "erreur") %> :</p>
          <ul class="list-disc list-inside">
            <% @listing_document.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :document_category, "Catégorie de document *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :document_category, ListingDocument.category_options, 
            {}, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500 focus:border-seller-500" %>
      </div>

      <div>
        <%= f.label :title, "Titre du document *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :title, 
            placeholder: "Ex: Bilan comptable 2023", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500 focus:border-seller-500" %>
      </div>

      <div>
        <%= f.label :description, "Description (optionnel)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :description, 
            rows: 3,
            placeholder: "Informations complémentaires sur ce document...", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500 focus:border-seller-500" %>
      </div>

      <% if @listing_document.file.attached? %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
          <p class="text-sm font-medium text-gray-700 mb-2">Fichier actuel :</p>
          <div class="flex items-center gap-3">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <div>
              <p class="text-sm font-medium text-gray-900"><%= @listing_document.file.filename %></p>
              <p class="text-xs text-gray-500"><%= number_to_human_size(@listing_document.file.byte_size) %></p>
            </div>
          </div>
        </div>
      <% end %>

      <div data-controller="file-upload">
        <%= f.label :file, @listing_document.file.attached? ? "Remplacer le fichier (optionnel)" : "Fichier *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-seller-400 transition">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <div class="flex text-sm text-gray-600">
              <label for="listing_document_file" data-file-upload-target="label" class="relative cursor-pointer bg-white rounded-md font-medium text-seller-600 hover:text-seller-500 focus-within:outline-none">
                <span>Télécharger un fichier</span>
                <%= f.file_field :file, class: "sr-only", id: "listing_document_file", data: { file_upload_target: "input", action: "change->file-upload#updateFilename" } %>
              </label>
              <p class="pl-1">ou glisser-déposer</p>
            </div>
            <p class="text-xs text-gray-500">PDF, Excel, Word, Image jusqu'à 10MB</p>
            <p data-file-upload-target="filename" class="text-sm font-medium text-seller-700 mt-2 hidden"></p>
          </div>
        </div>
      </div>

      <div class="flex items-center">
        <%= f.check_box :not_applicable, class: "h-4 w-4 text-seller-600 focus:ring-seller-500 border-gray-300 rounded" %>
        <%= f.label :not_applicable, "Cette catégorie ne s'applique pas (N/A)", class: "ml-2 text-sm text-gray-700" %>
      </div>

      <div class="flex gap-3 pt-4">
        <%= f.submit "Mettre à jour le document", class: "flex-1 bg-seller-600 text-white px-6 py-3 rounded-lg hover:bg-seller-700 transition font-medium" %>
        <%= link_to "Annuler", seller_listing_path(@listing), class: "flex-1 bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition text-center font-medium" %>
      </div>
    <% end %>
  </div>
</div>
