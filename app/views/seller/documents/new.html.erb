<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to seller_listing_path(@listing), class: "text-seller-600 hover:text-seller-700 flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour à l'annonce
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Ajouter un document</h1>

    <%= form_with model: @listing_document, url: seller_listing_documents_path(@listing), local: true, class: "space-y-6" do |f| %>
      <% if @listing_document.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
          <p class="font-semibold mb-2"><%= pluralize(@listing_document.errors.count, "erreur") %> :</p>
          <ul class="list-disc list-inside">
            <% @listing_document.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :document_category, "Catégorie de document *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :document_category, ListingDocument.category_options, 
            { prompt: "Sélectionnez une catégorie" }, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500 focus:border-seller-500" %>
      </div>

      <div>
        <%= f.label :title, "Titre du document *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :title, 
            placeholder: "Ex: Bilan comptable 2023", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500 focus:border-seller-500" %>
      </div>

      <div>
        <%= f.label :description, "Description (optionnel)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :description, 
            rows: 3,
            placeholder: "Informations complémentaires sur ce document...", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500 focus:border-seller-500" %>
      </div>

      <div>
        <%= f.label :file, "Fichier *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-seller-400 transition">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <div class="flex text-sm text-gray-600">
              <label for="listing_document_file" class="relative cursor-pointer bg-white rounded-md font-medium text-seller-600 hover:text-seller-500 focus-within:outline-none">
                <span>Télécharger un fichier</span>
                <%= f.file_field :file, class: "sr-only", id: "listing_document_file" %>
              </label>
              <p class="pl-1">ou glisser-déposer</p>
            </div>
            <p class="text-xs text-gray-500">PDF, Excel, Word, Image jusqu'à 10MB</p>
          </div>
        </div>
      </div>

      <div class="flex items-center">
        <%= f.check_box :not_applicable, class: "h-4 w-4 text-seller-600 focus:ring-seller-500 border-gray-300 rounded" %>
        <%= f.label :not_applicable, "Cette catégorie ne s'applique pas (N/A)", class: "ml-2 text-sm text-gray-700" %>
      </div>

      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Information</h3>
            <div class="mt-2 text-sm text-blue-700">
              <p>Les documents téléchargés contribuent à 40% du score de complétude de votre annonce. Les documents confidentiels ne seront accessibles qu'après signature de l'accord de confidentialité par les acheteurs.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="flex gap-3 pt-4">
        <%= f.submit "Ajouter le document", class: "flex-1 bg-seller-600 text-white px-6 py-3 rounded-lg hover:bg-seller-700 transition font-medium" %>
        <%= link_to "Annuler", seller_listing_path(@listing), class: "flex-1 bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition text-center font-medium" %>
      </div>
    <% end %>
  </div>
</div>
