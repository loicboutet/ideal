<% content_for :title, "Tableau de bord Vendeur - Idéal Reprise" %>

<div class="space-y-6">
  <!-- Welcome Section -->
  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">
      Bienvenue, <%= current_user.full_name %>
    </h1>
    <p class="text-gray-600">
      Tableau de bord vendeur - Gérez vos annonces et trouvez des acheteurs
    </p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- My Listings -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="p-3 bg-blue-100 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-500">Mes annonces</span>
      </div>
      <div class="text-3xl font-bold text-gray-900"><%= current_user.seller_profile&.listings&.count || 0 %></div>
      <p class="text-sm text-gray-500 mt-2">Annonces publiées</p>
    </div>

    <!-- Views -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="p-3 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-500">Vues</span>
      </div>
      <div class="text-3xl font-bold text-gray-900">0</div>
      <p class="text-sm text-gray-500 mt-2">Vues totales</p>
    </div>

    <!-- Interested Buyers -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="p-3 bg-yellow-100 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-500">Intérêts</span>
      </div>
      <div class="text-3xl font-bold text-gray-900">0</div>
      <p class="text-sm text-gray-500 mt-2">Acheteurs intéressés</p>
    </div>

    <!-- Credits -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="p-3 bg-purple-100 rounded-lg">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-500">Crédits</span>
      </div>
      <div class="text-3xl font-bold text-gray-900">0</div>
      <p class="text-sm text-gray-500 mt-2">Crédits disponibles</p>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions rapides</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= link_to new_seller_listing_path, class: "flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-[#4A90E2] hover:bg-blue-50 transition" do %>
        <svg class="w-8 h-8 text-[#4A90E2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <div>
          <div class="font-medium text-gray-900">Nouvelle annonce</div>
          <div class="text-sm text-gray-500">Créer une annonce</div>
        </div>
      <% end %>

      <%= link_to seller_listings_path, class: "flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-[#4A90E2] hover:bg-blue-50 transition" do %>
        <svg class="w-8 h-8 text-[#4A90E2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
        </svg>
        <div>
          <div class="font-medium text-gray-900">Mes annonces</div>
          <div class="text-sm text-gray-500">Voir toutes mes annonces</div>
        </div>
      <% end %>

      <%= link_to seller_buyers_path, class: "flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-[#4A90E2] hover:bg-blue-50 transition" do %>
        <svg class="w-8 h-8 text-[#4A90E2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <div>
          <div class="font-medium text-gray-900">Trouver des acheteurs</div>
          <div class="text-sm text-gray-500">Parcourir les acheteurs</div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Listings -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-gray-900">Mes annonces récentes</h2>
      <%= link_to "Voir tout", seller_listings_path, class: "text-[#4A90E2] hover:text-blue-700 text-sm font-medium" %>
    </div>
    <div class="space-y-4">
      <p class="text-gray-500 text-center py-8">Vous n'avez pas encore créé d'annonce</p>
    </div>
  </div>
</div>
