<% content_for :title, "Mon Abonnement - Idéal Reprise" %>
<% content_for :page_title, "Mon Abonnement" %>

<div class="max-w-4xl mx-auto space-y-6">
  <% if @subscription %>
    <% if @subscription.cancelled? || @subscription.cancel_at_period_end? %>
      <!-- Cancelled Subscription - Active Until Period End -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-orange-500 to-orange-600 px-6 py-8 text-white">
          <h2 class="text-3xl font-bold mb-2">Forfait Courtier Premium</h2>
          <p class="text-orange-100">Annulé - Actif Jusqu'au <%= @subscription.current_period_end&.strftime('%d %B %Y') %></p>
        </div>

        <div class="p-6 space-y-6">
          <div class="bg-orange-50 border-2 border-orange-200 rounded-lg p-4 mb-4">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <div>
                <p class="font-semibold text-orange-900 mb-1">Votre abonnement a été annulé</p>
                <p class="text-sm text-orange-800">Vous continuerez à avoir accès aux fonctionnalités premium jusqu'au <%= @subscription.current_period_end&.strftime('%d %B %Y') %>. Après cela, votre compte reviendra au forfait gratuit.</p>
              </div>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-6">
            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Statut</h3>
              <p class="text-lg font-semibold text-orange-600">● Annulé</p>
            </div>
            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Accès Jusqu'au</h3>
              <p class="text-lg font-semibold text-gray-900">
                <%= @subscription.current_period_end&.strftime('%d %B %Y') %>
              </p>
            </div>
          </div>

          <div class="flex gap-3">
            <%= button_to reactivate_seller_subscription_path, method: :post, class: "px-6 py-3 bg-seller-600 text-white rounded-lg font-medium hover:bg-seller-700 transition shadow-lg" do %>
              Réactiver l'Abonnement
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <!-- Active Subscription -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-seller-500 to-seller-600 px-6 py-8 text-white">
          <h2 class="text-3xl font-bold mb-2">Forfait Courtier Premium</h2>
          <p class="text-seller-100">Abonnement Actif</p>
        </div>

        <div class="p-6 space-y-6">
          <div class="grid grid-cols-2 gap-6">
            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Statut</h3>
              <p class="text-lg font-semibold text-green-600">● Actif</p>
            </div>
            <div>
              <h3 class="text-sm font-medium text-gray-500 mb-1">Prochaine Facturation</h3>
              <p class="text-lg font-semibold text-gray-900">
                <%= @subscription.current_period_end&.strftime('%d %B %Y') %>
              </p>
            </div>
          </div>

          <div class="flex gap-3">
            <%= link_to cancel_confirm_seller_subscription_path, class: "px-6 py-3 bg-white border-2 border-gray-300 text-gray-700 rounded-lg font-medium hover:border-red-500 transition" do %>
              Annuler l'Abonnement
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-xl shadow-lg p-12 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Aucun Abonnement Actif</h2>
      <p class="text-gray-600 mb-8">Passez au Premium pour débloquer des annonces illimitées et des fonctionnalités premium.</p>
      <%= link_to "Passer au Premium", new_seller_subscription_path, class: "inline-flex items-center gap-2 px-8 py-4 bg-seller-600 text-white rounded-lg font-medium hover:bg-seller-700 transition shadow-lg" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to seller_root_path, class: "text-seller-600 hover:text-seller-700 font-medium" do %>
      ← Retour au Tableau de Bord
    <% end %>
  </div>
</div>
