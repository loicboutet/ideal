<% content_for :title, "My Subscription - Idéal Reprise" %>
<% content_for :page_title, "My Subscription" %>

<div class="max-w-4xl mx-auto space-y-6">
  <% if @subscription %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-seller-500 to-seller-600 px-6 py-8 text-white">
        <h2 class="text-3xl font-bold mb-2">Premium Broker Plan</h2>
        <p class="text-seller-100">Active Subscription</p>
      </div>

      <div class="p-6 space-y-6">
        <div class="grid grid-cols-2 gap-6">
          <div>
            <h3 class="text-sm font-medium text-gray-500 mb-1">Status</h3>
            <p class="text-lg font-semibold text-green-600">● Active</p>
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-500 mb-1">Next Billing</h3>
            <p class="text-lg font-semibold text-gray-900">
              <%= @subscription.current_period_end&.strftime('%B %d, %Y') %>
            </p>
          </div>
        </div>

        <div class="flex gap-3">
          <%= link_to cancel_confirm_seller_subscription_path, class: "px-6 py-3 bg-white border-2 border-gray-300 text-gray-700 rounded-lg font-medium hover:border-red-500 transition" do %>
            Cancel Subscription
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-lg p-12 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">No Active Subscription</h2>
      <p class="text-gray-600 mb-8">Upgrade to Premium to unlock unlimited listings and premium features.</p>
      <%= link_to "Go Premium", new_seller_subscription_path, class: "inline-flex items-center gap-2 px-8 py-4 bg-seller-600 text-white rounded-lg font-medium hover:bg-seller-700 transition shadow-lg" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to seller_root_path, class: "text-seller-600 hover:text-seller-700 font-medium" do %>
      ← Back to Dashboard
    <% end %>
  </div>
</div>
