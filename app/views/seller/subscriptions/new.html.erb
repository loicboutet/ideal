<% content_for :title, "Forfait Premium - Idéal Reprise" %>
<% content_for :page_title, "Passer au Premium" %>

<div class="max-w-4xl mx-auto">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Débloquez un Potentiel Illimité</h1>
    <p class="text-xl text-gray-600">Passez au Premium et développez votre activité plus rapidement</p>
  </div>

  <div class="bg-white rounded-2xl shadow-2xl overflow-hidden border-2 border-seller-500">
    <div class="bg-gradient-to-r from-seller-500 to-seller-600 px-8 py-12 text-white text-center">
      <h2 class="text-3xl font-bold mb-3">Forfait Courtier Premium</h2>
      <div class="text-5xl font-bold mb-2">€299</div>
      <div class="text-seller-100">par mois</div>
    </div>

    <div class="p-8">
      <h3 class="text-2xl font-bold text-gray-900 mb-6">Tout ce dont vous avez besoin pour réussir</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-semibold text-gray-900">Annonces Illimitées</h4>
            <p class="text-sm text-gray-600">Créez autant d'annonces que vous le souhaitez</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-semibold text-gray-900">5 Mises en Avant Mensuelles</h4>
            <p class="text-sm text-gray-600">Promouvez vos annonces auprès d'acheteurs ciblés</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-semibold text-gray-900">Accès à l'Annuaire des Partenaires</h4>
            <p class="text-sm text-gray-600">6 premiers mois gratuits, puis 5 crédits/accès</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-semibold text-gray-900">Analyses Premium</h4>
            <p class="text-sm text-gray-600">Informations détaillées et métriques de performance</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-semibold text-gray-900">Placement en Vedette</h4>
            <p class="text-sm text-gray-600">Démarquez-vous dans les résultats de recherche</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-semibold text-gray-900">Support Prioritaire</h4>
            <p class="text-sm text-gray-600">Gestionnaire de compte dédié</p>
          </div>
        </div>
      </div>

      <!-- Stripe Payment Form -->
      <%= form_with url: seller_subscription_path, method: :post, 
                    data: { 
                      controller: "stripe-subscription",
                      stripe_subscription_publishable_key_value: Rails.configuration.stripe[:publishable_key],
                      stripe_subscription_price_id_value: @premium_plan[:stripe_price_id],
                      stripe_subscription_return_url_value: seller_subscription_url,
                      action: "submit->stripe-subscription#submit"
                    },
                    html: { class: "space-y-6" } do %>
        
        <!-- Card Element Container -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Card Details
          </label>
          <div class="border border-gray-300 rounded-lg p-4 bg-white" 
               data-stripe-subscription-target="card">
            <!-- Stripe Elements will mount here -->
          </div>
          <div class="hidden mt-2 text-sm text-red-600" 
               data-stripe-subscription-target="errors">
            <!-- Error messages will appear here -->
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" 
                data-stripe-subscription-target="submit"
                class="w-full px-8 py-4 bg-seller-600 text-white rounded-lg text-lg font-bold hover:bg-seller-700 transition shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
          Subscribe to Premium - €299/month
        </button>

        <p class="text-sm text-gray-500 text-center">
          <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          Secure payment powered by Stripe
        </p>

        <p class="text-sm text-gray-500 text-center">Cancel anytime. No long-term commitment.</p>
      <% end %>
    </div>
  </div>

  <div class="mt-8 text-center">
    <%= link_to seller_root_path, class: "text-gray-600 hover:text-gray-900" do %>
      ← Retour au Tableau de Bord
    <% end %>
  </div>
</div>
