            <p class="text-sm text-gray-600">Gestionnaire de compte dédié</p>
          </div>
        </div>
      </div>

      <%= button_to seller_subscription_path, method: :post, params: { plan_type: 'seller_premium' }, data: { turbo: false }, class: "w-full px-8 py-4 bg-seller-600 text-white rounded-lg text-lg font-bold hover:bg-seller-700 transition shadow-lg" do %>
