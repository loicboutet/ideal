<% content_for :title, "Pousser mon annonce - Cédant - Idéal Reprise" %>

<div class="max-w-5xl mx-auto space-y-6">
  <!-- Header -->
  <div>
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Pousser mon annonce</h1>
    <p class="text-gray-600 mt-1">Envoyez votre annonce aux repreneurs qui correspondent</p>
  </div>

  <!-- Credit Balance -->
  <div class="bg-white rounded-xl shadow-sm p-6 border-2 border-seller-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-seller-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-seller-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-gray-900"><%= @credits %> crédit<%= @credits > 1 ? 's' : '' %></div>
          <div class="text-sm text-gray-600">Solde disponible</div>
        </div>
      </div>
      <%= link_to seller_credits_path, class: "px-4 py-2 border border-seller-600 text-seller-600 rounded-lg hover:bg-seller-50 transition text-sm font-medium" do %>
        Acheter des crédits
      <% end %>
    </div>
  </div>

  <!-- Select Listing -->
  <% if @listings.any? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Sélectionner l'annonce à pousser</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @listings.each do |listing| %>
          <label class="relative cursor-pointer">
            <input type="radio" name="listing_id" value="<%= listing.id %>" class="peer sr-only" form="push-form">
            <div class="p-4 border-2 border-gray-200 rounded-lg peer-checked:border-seller-500 peer-checked:bg-seller-50 hover:border-gray-300 transition">
              <h3 class="font-medium text-gray-900"><%= listing.title %></h3>
              <p class="text-sm text-gray-600 mt-1"><%= listing.location_city || listing.location_department || 'France' %></p>
              <% if listing.asking_price %>
                <p class="text-sm text-seller-600 font-medium mt-2"><%= number_to_currency(listing.asking_price, unit: '€', precision: 0) %></p>
              <% end %>
            </div>
            <div class="absolute top-3 right-3 hidden peer-checked:block">
              <svg class="w-5 h-5 text-seller-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
          </label>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm p-8 text-center border border-gray-200">
      <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Aucune annonce active</h3>
      <p class="text-gray-600 mb-4">Créez une annonce pour pouvoir la pousser aux repreneurs.</p>
      <%= link_to new_seller_listing_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Créer une annonce
      <% end %>
    </div>
  <% end %>

  <!-- Interested Buyers -->
  <% if @interested_buyers.any? %>
    <%= form_tag seller_push_listings_path, method: :post, id: 'push-form' do %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="p-6 border-b border-gray-200 flex items-center justify-between">
          <div>
            <h2 class="text-lg font-bold text-gray-900">Repreneurs ayant mis vos annonces en favoris</h2>
            <p class="text-sm text-gray-600 mt-1">Sélectionnez les repreneurs à qui pousser votre annonce (1 crédit par repreneur)</p>
          </div>
          <div class="text-sm font-medium text-gray-900">
            <span id="selectedCount">0</span> sélectionné(s) = <span id="creditsNeeded">0</span> crédit(s)
          </div>
        </div>

        <div class="divide-y divide-gray-200">
          <% @interested_buyers.each do |interest| %>
            <% buyer = interest[:buyer_profile] %>
            <div class="p-4 hover:bg-gray-50 flex items-center gap-4">
              <input type="checkbox" 
                     name="buyer_ids[]" 
                     value="<%= buyer.id %>" 
                     class="buyer-checkbox rounded border-gray-300 text-seller-600 focus:ring-seller-500"
                     data-action="change->push-listing#updateCount">
              <div class="flex items-center gap-4 flex-1">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center text-white font-bold">
                  <%= buyer.user&.full_name&.first&.upcase || 'R' %>
                </div>
                <div class="flex-1">
                  <div class="font-medium text-gray-900"><%= buyer.user&.full_name || 'Repreneur' %></div>
                  <div class="text-sm text-gray-600">
                    <%= buyer.target_sectors&.first(2)&.join(', ') || 'Non spécifié' %> • 
                    <%= interest[:favorites_count] %> annonce<%= interest[:favorites_count] > 1 ? 's' : '' %> en favori
                  </div>
                </div>
                <div class="text-sm text-gray-500">
                  Profil: <strong><%= buyer.completeness_score || 50 %>%</strong>
                </div>
                <% if buyer.subscription_plan == 'premium' %>
                  <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Premium</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="p-6 border-t border-gray-200 bg-gray-50">
          <div class="flex items-center justify-between">
            <%= link_to seller_buyers_path, class: "text-sm text-seller-600 hover:text-seller-700 font-medium" do %>
              Trouver plus de repreneurs →
            <% end %>
            <div class="flex items-center gap-4">
              <div class="text-sm text-gray-600">
                <span id="creditsNeededBottom">0</span> crédit(s) nécessaire(s)
              </div>
              <button type="submit" 
                      class="px-6 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition disabled:opacity-50 disabled:cursor-not-allowed" 
                      id="pushButton" 
                      disabled>
                Pousser mon annonce
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm p-8 text-center border border-gray-200">
      <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Aucun repreneur intéressé</h3>
      <p class="text-gray-600 mb-4">Publiez des annonces pour attirer des repreneurs ou parcourez l'annuaire.</p>
      <%= link_to seller_buyers_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition" do %>
        Trouver des repreneurs
      <% end %>
    </div>
  <% end %>

  <!-- Credit Purchase -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Acheter des crédits</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="border-2 border-gray-200 rounded-lg p-4 hover:border-seller-500 transition cursor-pointer">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">10 crédits</div>
          <div class="text-3xl font-bold text-seller-600 my-2">50 €</div>
          <%= link_to seller_credits_path(pack: 10), class: "block w-full px-4 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition text-center" do %>
            Acheter
          <% end %>
        </div>
      </div>
      <div class="border-2 border-seller-500 rounded-lg p-4 relative">
        <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
          <span class="px-3 py-1 bg-seller-600 text-white text-xs font-medium rounded-full">Populaire</span>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">25 crédits</div>
          <div class="text-3xl font-bold text-seller-600 my-2">100 €</div>
          <%= link_to seller_credits_path(pack: 25), class: "block w-full px-4 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition text-center" do %>
            Acheter
          <% end %>
        </div>
      </div>
      <div class="border-2 border-gray-200 rounded-lg p-4 hover:border-seller-500 transition cursor-pointer">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">50 crédits</div>
          <div class="text-3xl font-bold text-seller-600 my-2">180 €</div>
          <%= link_to seller_credits_path(pack: 50), class: "block w-full px-4 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition text-center" do %>
            Acheter
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const checkboxes = document.querySelectorAll('.buyer-checkbox');
  const selectedCount = document.getElementById('selectedCount');
  const creditsNeeded = document.getElementById('creditsNeeded');
  const creditsNeededBottom = document.getElementById('creditsNeededBottom');
  const pushButton = document.getElementById('pushButton');
  
  function updateCount() {
    const checked = document.querySelectorAll('.buyer-checkbox:checked');
    const count = checked.length;
    if (selectedCount) selectedCount.textContent = count;
    if (creditsNeeded) creditsNeeded.textContent = count;
    if (creditsNeededBottom) creditsNeededBottom.textContent = count;
    if (pushButton) pushButton.disabled = count === 0;
  }
  
  checkboxes.forEach(function(checkbox) {
    checkbox.addEventListener('change', updateCount);
  });
});
</script>
