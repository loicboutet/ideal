<% content_for :title, "Profil Repreneur - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Profil Repreneur" %>

<div class="max-w-4xl mx-auto space-y-6">
  <!-- Back Link -->
  <%= link_to seller_buyers_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Retour à l'annuaire
  <% end %>

  <% user = @buyer.user %>

  <!-- Header -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-start justify-between mb-6">
      <div class="flex items-center gap-4">
        <div class="w-20 h-20 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center text-white font-bold text-2xl">
          <%= user.first_name.present? ? user.first_name.first(2).upcase : 'R' %>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= user.first_name || 'Repreneur' %></h1>
          <p class="text-gray-600"><%= @buyer.buyer_type&.humanize || 'Repreneur' %></p>
          <div class="flex items-center gap-2 mt-2">
            <% if @buyer.subscription_plan != 'free' %>
              <span class="px-3 py-1 text-sm rounded-full bg-blue-100 text-blue-800 font-medium"><%= @buyer.subscription_plan.humanize %></span>
            <% end %>
            <% if @buyer.verified_buyer %>
              <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800 font-medium">✓ Vérifié</span>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Completeness -->
      <div class="text-right">
        <div class="text-sm text-gray-600 mb-1">Complétude</div>
        <div class="text-2xl font-bold text-green-600"><%= @buyer.completeness_score %>%</div>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-3 gap-4 pt-6 border-t border-gray-200">
      <div class="text-center">
        <div class="text-lg font-bold text-gray-900">
          <%= @buyer.target_sectors.present? && @buyer.target_sectors.any? ? @buyer.target_sectors.first(2).join(', ') : '-' %>
        </div>
        <div class="text-sm text-gray-600">Secteurs ciblés</div>
      </div>
      <div class="text-center">
        <div class="text-lg font-bold text-gray-900">
          <% if @buyer.target_revenue_min && @buyer.target_revenue_max %>
            <%= number_to_human(@buyer.target_revenue_min, units: {thousand: 'k', million: 'M'}, precision: 0) %>-<%= number_to_human(@buyer.target_revenue_max, units: {thousand: 'k', million: 'M'}, precision: 0) %> €
          <% elsif @buyer.target_revenue_min || @buyer.target_revenue_max %>
            <%= number_to_human(@buyer.target_revenue_min || @buyer.target_revenue_max, units: {thousand: 'k', million: 'M'}, precision: 0) %> €
          <% else %>
            -
          <% end %>
        </div>
        <div class="text-sm text-gray-600">CA recherché</div>
      </div>
      <div class="text-center">
        <div class="text-lg font-bold text-gray-900">
          <%= @buyer.target_locations.present? && @buyer.target_locations.any? ? @buyer.target_locations.first(2).join(', ') : '-' %>
        </div>
        <div class="text-sm text-gray-600">Localisation</div>
      </div>
    </div>
  </div>

  <!-- Investment Thesis -->
  <% if @buyer.investment_thesis.present? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Thèse de reprise</h2>
      <p class="text-gray-700 leading-relaxed whitespace-pre-line"><%= @buyer.investment_thesis %></p>
    </div>
  <% end %>

  <!-- Formation -->
  <% if @buyer.formation.present? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Formation</h2>
      <p class="text-gray-700 whitespace-pre-line"><%= @buyer.formation %></p>
    </div>
  <% end %>

  <!-- Experience -->
  <% if @buyer.experience.present? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Expérience</h2>
      <p class="text-gray-700 whitespace-pre-line"><%= @buyer.experience %></p>
    </div>
  <% end %>

  <!-- Skills -->
  <% if @buyer.skills.present? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Compétences</h2>
      <p class="text-gray-700"><%= @buyer.skills %></p>
    </div>
  <% end %>

  <!-- Investment Capacity -->
  <% if @buyer.investment_capacity.present? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Capacité d'investissement</h2>
      <p class="text-gray-700"><%= number_to_currency(@buyer.investment_capacity, unit: '€', separator: ',', delimiter: ' ', format: '%n %u') %></p>
    </div>
  <% end %>

  <!-- Target Criteria -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Critères de recherche</h2>
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% if @buyer.target_sectors.present? && @buyer.target_sectors.any? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Secteurs</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @buyer.target_sectors.join(', ') %></dd>
        </div>
      <% end %>
      
      <% if @buyer.target_locations.present? && @buyer.target_locations.any? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Localisations</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @buyer.target_locations.join(', ') %></dd>
        </div>
      <% end %>
      
      <% if @buyer.target_employees_min || @buyer.target_employees_max %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Effectif</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @buyer.target_employees_min || 0 %> - <%= @buyer.target_employees_max || '∞' %> salariés
          </dd>
        </div>
      <% end %>
      
      <% if @buyer.target_horizon.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Horizon de transmission</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @buyer.target_horizon %></dd>
        </div>
      <% end %>
      
      <% if @buyer.target_transfer_types.present? && @buyer.target_transfer_types.any? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Types de transmission</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @buyer.target_transfer_types.join(', ') %></dd>
        </div>
      <% end %>
      
      <% if @buyer.target_customer_types.present? && @buyer.target_customer_types.any? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Type de clientèle</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @buyer.target_customer_types.join(', ') %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <!-- Push Listing to Buyer -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Proposer une annonce</h2>
    
    <% if current_user.seller_profile.listings.approved_listings.any? %>
      <%= form_with url: "#", method: :post, local: true do |f| %>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Sélectionnez l'annonce à proposer</label>
            <%= f.select :listing_id, 
              options_from_collection_for_select(current_user.seller_profile.listings.approved_listings, :id, :title),
              { prompt: "Choisir une annonce..." },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500" %>
          </div>
          
          <div class="bg-seller-50 border border-seller-200 rounded-lg p-4">
            <p class="text-sm text-seller-800">
              <strong>Note:</strong> Une notification sera envoyée au repreneur pour l'informer que votre annonce pourrait correspondre à ses critères.
            </p>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-600">
              Crédits disponibles: <strong class="text-gray-900"><%= current_user.seller_profile.credits || 0 %></strong>
            </div>
            <%= f.submit "Envoyer (1 crédit)", 
                class: "px-6 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition #{current_user.seller_profile.credits.to_i < 1 ? 'opacity-50 cursor-not-allowed' : ''}" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-6 text-gray-500">
        <p>Vous n'avez pas d'annonces approuvées à proposer.</p>
        <%= link_to "Créer une annonce", new_seller_listing_path, class: "inline-block mt-4 px-4 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition" %>
      </div>
    <% end %>
  </div>
</div>
