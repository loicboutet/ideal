<% content_for :title, "Modifier l'annonce - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Modifier l'annonce" %>

<div class="max-w-4xl mx-auto space-y-6">
  <!-- Back Link -->
  <%= link_to seller_listing_path(@listing), class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-4" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour à l'annonce
  <% end %>

  <!-- Header -->
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Modifier l'annonce</h2>
    <p class="text-gray-600 mt-1"><%= @listing.title %></p>
  </div>

  <!-- Status Alert -->
  <% if @listing.validation_status == 'rejected' %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="text-sm text-red-800">
          <p><strong>Annonce rejetée</strong></p>
          <% if @listing.validation_comment.present? %>
            <p class="mt-1">Raison : <%= @listing.validation_comment %></p>
          <% end %>
          <p class="mt-2">Veuillez apporter les modifications nécessaires et soumettre à nouveau votre annonce.</p>
        </div>
      </div>
    </div>
  <% elsif @listing.validation_status == 'pending' %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="text-sm text-yellow-800">
          <p><strong>Annonce en attente de validation</strong></p>
          <p class="mt-1">Vous pouvez encore modifier votre annonce tant qu'elle n'a pas été validée.</p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Form -->
  <%= render 'form' %>
</div>
