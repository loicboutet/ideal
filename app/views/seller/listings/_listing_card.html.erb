<div class="p-6 hover:bg-gray-50 transition <%= 'border-l-4 border-yellow-500' if listing.pending_validation? %>">
  <div class="flex flex-col lg:flex-row lg:items-start justify-between gap-4">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-2 flex-wrap">
        <h4 class="font-semibold text-gray-900 text-lg"><%= listing.title %></h4>
        
        <!-- Status Badge -->
        <% case listing.validation_status %>
        <% when 'pending' %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            En attente de validation
          </span>
          <% if listing.days_pending && listing.days_pending > 0 %>
            <span class="text-xs text-gray-500">
              Soumis il y a <%= listing.days_pending %> jour<%= 's' if listing.days_pending > 1 %>
            </span>
          <% end %>
        <% when 'approved' %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Approuv√©e
          </span>
        <% when 'rejected' %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Rejet√©e
          </span>
        <% end %>
      </div>
      
      <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600 mb-2">
        <% if listing.industry_sector.present? %>
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <%= listing.industry_sector.humanize %>
          </div>
        <% end %>
        
        <% if listing.location_department.present? %>
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <%= listing.location_department %>
          </div>
        <% end %>
        
        <% if listing.asking_price.present? %>
          <div class="flex items-center gap-1 font-medium text-seller-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= number_to_currency(listing.asking_price, unit: '', precision: 0) %> ‚Ç¨
          </div>
        <% end %>
        
        <% if listing.views_count > 0 %>
          <div class="flex items-center gap-1 text-gray-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            <%= listing.views_count %> vues
          </div>
        <% end %>
      </div>
      
      <!-- Rejection Reason (if rejected) -->
      <% if listing.validation_status == 'rejected' && listing.rejection_reason.present? %>
        <div class="mt-3 p-3 bg-red-50 border border-red-200 rounded-lg">
          <p class="text-sm font-medium text-red-800 mb-1">Raison du rejet :</p>
          <p class="text-sm text-red-700"><%= listing.rejection_reason %></p>
        </div>
      <% end %>
      
      <!-- Completion Score (for pending listings) -->
      <% if listing.pending_validation? %>
        <div class="mt-3">
          <div class="flex items-center justify-between text-xs text-gray-600 mb-1">
            <span>Compl√©tude du profil</span>
            <span class="font-medium"><%= listing.calculate_completeness %>%</span>
          </div>
          <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-seller-400 to-seller-600 transition-all duration-300" style="width: <%= listing.calculate_completeness %>%"></div>
          </div>
          <% if listing.calculate_completeness < 70 %>
            <p class="text-xs text-gray-500 mt-1">
              üí° Augmentez la compl√©tude pour am√©liorer vos chances de validation
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <!-- Actions -->
    <div class="flex items-center gap-2 flex-shrink-0">
      <%= link_to seller_listing_path(listing), class: "inline-flex items-center gap-1 px-4 py-2 text-sm text-seller-600 hover:text-seller-700 font-medium border border-seller-300 rounded-lg hover:bg-seller-50 transition" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        Voir d√©tails
      <% end %>
      
      <% if listing.pending_validation? || listing.validation_status == 'rejected' %>
        <%= link_to edit_seller_listing_path(listing), class: "inline-flex items-center gap-1 px-4 py-2 text-sm bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Modifier
        <% end %>
      <% end %>
    </div>
  </div>
</div>
