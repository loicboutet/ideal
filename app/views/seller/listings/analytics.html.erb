<% content_for :title, "Analytics - #{@listing.title} - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Analytics" %>

<div class="max-w-7xl mx-auto space-y-6">
  <!-- Back Link -->
  <%= link_to seller_listing_path(@listing), class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-4" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour à l'annonce
  <% end %>

  <!-- Header -->
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Performance de l'annonce</h2>
    <p class="text-gray-600 mt-1"><%= @listing.title %></p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <!-- Total Views -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Vues totales</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @listing.views_count || 0 %></p>
        </div>
        <div class="p-3 bg-blue-100 rounded-lg">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Favorites -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Favoris</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @listing.favorites.count %></p>
        </div>
        <div class="p-3 bg-red-100 rounded-lg">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Interested Buyers -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Acheteurs actifs</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @listing.deals.active.count %></p>
        </div>
        <div class="p-3 bg-green-100 rounded-lg">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Completeness -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Complétude</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @listing.calculate_completeness %>%</p>
        </div>
        <div class="p-3 bg-seller-100 rounded-lg">
          <svg class="w-8 h-8 text-seller-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Evolution Graph -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-bold text-gray-900">Évolution des favoris et vues</h3>
      <%= form_with url: analytics_seller_listing_path(@listing), method: :get, local: true, class: "inline-block" do |f| %>
        <%= f.select :period, 
          options_for_select([
            ['7 derniers jours', '7'],
            ['30 derniers jours', '30'],
            ['3 mois', '90'],
            ['6 mois', '180']
          ], @period),
          {},
          class: "px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-seller-500",
          onchange: "this.form.submit()" %>
      <% end %>
    </div>
    
    <!-- Mock Chart Visualization -->
    <div class="mb-4">
      <div class="flex items-center gap-4 text-sm mb-2">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-seller-400 rounded"></div>
          <span class="text-gray-600">Favoris</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-blue-400 rounded"></div>
          <span class="text-gray-600">Vues</span>
        </div>
      </div>
    </div>
    
    <div class="h-64 flex items-end justify-between gap-1">
      <% 30.times do |i| %>
        <% favorites_height = [20, 30, 25, 35, 40, 38, 45, 42, 48, 50, 47, 52, 55, 53, 58, 60, 57, 62, 65, 63, 68, 70, 67, 72, 75, 73, 78, 80, 77, 82][i] %>
        <% views_height = favorites_height - rand(5..15) %>
        <div class="flex-1 flex flex-col-reverse gap-1">
          <div class="bg-seller-400 rounded-t hover:bg-seller-500 transition cursor-pointer" 
               style="height: <%= favorites_height %>%"
               title="<%= i %> favoris"></div>
          <div class="bg-blue-400 rounded-t hover:bg-blue-500 transition cursor-pointer" 
               style="height: <%= views_height %>%"
               title="<%= i %> vues"></div>
        </div>
      <% end %>
    </div>
    <div class="flex justify-between mt-4 text-xs text-gray-500">
      <span>J-<%= @period_days %></span>
      <span>J-<%= @period_days / 2 %></span>
      <span>Aujourd'hui</span>
    </div>
  </div>

  <!-- CRM Stages Distribution -->
  <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <h3 class="text-lg font-bold text-gray-900 mb-6">Repreneurs par étape CRM</h3>
    
    <% if @deals_by_stage.any? %>
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        <% Deal.statuses.each do |status_name, _| %>
          <% next if status_name == 'released' || status_name == 'abandoned' %>
          <% count = @deals_by_stage[status_name] || 0 %>
          <div class="text-center p-4 <%= count > 0 ? 'bg-seller-50 border-seller-200' : 'bg-gray-50 border-gray-200' %> border rounded-lg">
            <div class="text-2xl font-bold <%= count > 0 ? 'text-seller-600' : 'text-gray-400' %>"><%= count %></div>
            <div class="text-xs text-gray-600 mt-1"><%= status_name.humanize %></div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        <svg class="w-12 h-12 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <p>Aucun repreneur actif pour le moment</p>
      </div>
    <% end %>
  </div>

  <!-- Interested Buyers Grid -->
  <% if @interested_buyers.any? %>
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-6">Repreneurs intéressés (<%= @interested_buyers.count %>)</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @interested_buyers.each do |favorite| %>
          <% buyer_profile = favorite.buyer_profile %>
          <% user = buyer_profile.user %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition">
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center text-white font-bold">
                    <%= user.first_name&.first&.upcase || 'R' %>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900"><%= user.first_name || 'Repreneur' %></h3>
                    <p class="text-xs text-gray-500"><%= buyer_profile.buyer_type&.humanize || 'Repreneur' %></p>
                  </div>
                </div>
                <% if buyer_profile.verified_buyer %>
                  <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Vérifié</span>
                <% elsif buyer_profile.subscription_plan != 'free' %>
                  <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">Premium</span>
                <% end %>
              </div>

              <div class="mb-4">
                <div class="flex items-center justify-between mb-1">
                  <span class="text-xs text-gray-600">Profil</span>
                  <span class="text-xs font-semibold text-gray-900"><%= buyer_profile.completeness_score %>%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-1.5">
                  <div class="bg-green-600 h-1.5 rounded-full" style="width: <%= buyer_profile.completeness_score %>%"></div>
                </div>
              </div>

              <div class="space-y-2 mb-4 text-sm">
                <% if buyer_profile.target_sectors.present? %>
                  <div class="flex items-start gap-2">
                    <svg class="w-4 h-4 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <span class="text-gray-600"><%= buyer_profile.target_sectors.is_a?(Array) ? buyer_profile.target_sectors.join(', ').truncate(30) : buyer_profile.target_sectors.to_s.truncate(30) %></span>
                  </div>
                <% end %>
                
                <% if buyer_profile.target_locations.present? %>
                  <div class="flex items-start gap-2">
                    <svg class="w-4 h-4 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    </svg>
                    <span class="text-gray-600"><%= buyer_profile.target_locations.is_a?(Array) ? buyer_profile.target_locations.join(', ').truncate(25) : buyer_profile.target_locations.to_s.truncate(25) %></span>
                  </div>
                <% end %>
                
                <% if buyer_profile.target_revenue_min.present? || buyer_profile.target_revenue_max.present? %>
                  <div class="flex items-start gap-2">
                    <svg class="w-4 h-4 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-gray-600">
                      <% if buyer_profile.target_revenue_min && buyer_profile.target_revenue_max %>
                        <%= number_to_human(buyer_profile.target_revenue_min, units: {thousand: 'k', million: 'M'}) %> - 
                        <%= number_to_human(buyer_profile.target_revenue_max, units: {thousand: 'k', million: 'M'}) %> € CA
                      <% else %>
                        -
                      <% end %>
                    </span>
                  </div>
                <% end %>
              </div>

              <div class="text-xs text-gray-500 mb-3">
                Mis en favori le <%= favorite.created_at.strftime('%d/%m/%Y') %>
              </div>

              <div class="flex gap-2">
                <button class="flex-1 px-3 py-2 text-sm text-center border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                  Voir le profil
                </button>
                <%= link_to push_to_buyer_seller_listing_path(@listing), method: :post, class: "flex-1 px-3 py-2 text-sm text-center bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition" do %>
                  Contacter
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Views -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Vues récentes</h3>
      <% if @recent_views.any? %>
        <div class="space-y-3">
          <% @recent_views.each do |view| %>
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    <%= view.user ? "Utilisateur vérifié" : "Visiteur anonyme" %>
                  </p>
                  <p class="text-xs text-gray-500"><%= time_ago_in_words(view.created_at) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          <svg class="w-12 h-12 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <p>Aucune vue pour le moment</p>
        </div>
      <% end %>
    </div>

    <!-- Recent Favorites -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Favoris récents</h3>
      <% if @interested_buyers.any? %>
        <div class="space-y-3">
          <% @interested_buyers.limit(10).each do |favorite| %>
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-red-100 flex items-center justify-center">
                  <svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    <%= favorite.buyer_profile.user.first_name || 'Repreneur' %> intéressé
                  </p>
                  <p class="text-xs text-gray-500"><%= time_ago_in_words(favorite.created_at) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          <svg class="w-12 h-12 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          <p>Aucun favori pour le moment</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
