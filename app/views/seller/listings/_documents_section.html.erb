<div class="flex items-center justify-between mb-6">
  <h3 class="text-lg font-bold text-gray-900">Documents (40% de la complétude)</h3>
  <%= link_to new_seller_listing_document_path(listing), class: "px-4 py-2 bg-seller-600 text-white rounded-lg hover:bg-seller-700 transition" do %>
    + Ajouter un document
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-3">
  <% ListingDocument.document_categories.each_key do |category| %>
    <% doc = listing.listing_documents.find_by(document_category: category) %>
    <div class="flex items-center justify-between p-3 <%= doc ? 'bg-seller-50 border border-seller-200' : 'bg-gray-50 border border-gray-200' %> rounded-lg">
      <div class="flex items-center gap-3 flex-1">
        <% if doc %>
          <svg class="w-5 h-5 text-seller-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div class="flex-1">
            <div class="text-sm font-medium text-seller-900"><%= doc.category_label %></div>
            <div class="text-xs text-seller-700"><%= doc.file.filename if doc.file.attached? %></div>
          </div>
        <% else %>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          <span class="text-sm text-gray-600"><%= ListingDocument.category_options.find { |label, value| value == category.to_s }&.first %></span>
        <% end %>
      </div>
      <% if doc %>
        <div class="flex gap-2">
          <%= link_to seller_listing_document_path(listing, doc), class: "text-seller-600 hover:text-seller-700 text-sm" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
          <% end %>
          <%= button_to seller_listing_document_path(listing, doc), method: :delete, data: { turbo_confirm: 'Êtes-vous sûr de vouloir supprimer ce document ?' }, class: "text-red-600 hover:text-red-700 text-sm" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="mt-6 p-4 bg-seller-50 border border-seller-200 rounded-lg">
  <% uploaded_count = listing.listing_documents.where(not_applicable: false).select(:document_category).distinct.count %>
  <% total_count = ListingDocument.document_categories.count %>
  <p class="text-sm text-seller-900">
    <strong><%= uploaded_count %> sur <%= total_count %></strong> catégories de documents téléchargées
    <span class="text-seller-700">(<%= (uploaded_count.to_f / total_count * 100).round %>% complété)</span>
  </p>
</div>
