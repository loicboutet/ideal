<% content_for :title, "#{@listing.title} - C√©dant - Id√©al Reprise" %>
<% content_for :page_title, @listing.title %>

<div class="max-w-7xl mx-auto space-y-6">
  <!-- Back Link -->
  <%= link_to seller_listings_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-4" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Retour aux annonces
  <% end %>

  <!-- Header with Actions -->
  <div class="flex items-start justify-between gap-4">
    <div class="flex-1">
      <h2 class="text-2xl font-bold text-gray-900"><%= @listing.title %></h2>
      <div class="flex items-center gap-4 mt-2">
        <!-- Status Badge -->
        <% case @listing.validation_status %>
        <% when 'pending' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            En attente de validation
          </span>
        <% when 'approved' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Approuv√©e
          </span>
        <% when 'rejected' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Rejet√©e
          </span>
        <% end %>

        <span class="text-sm text-gray-500">
          Cr√©√©e le <%= @listing.created_at.strftime('%d/%m/%Y') %>
        </span>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-3">
      <% if @listing.pending_validation? || @listing.validation_status == 'rejected' %>
        <%= link_to edit_seller_listing_path(@listing), class: "inline-flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition font-medium" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Modifier
        <% end %>
      <% end %>
      
      <%= link_to analytics_seller_listing_path(@listing), class: "inline-flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition font-medium" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        Analytics
      <% end %>
    </div>
  </div>

  <!-- Validation Alert -->
  <% if @listing.validation_status == 'rejected' && @listing.validation_comment.present? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="text-sm text-red-800">
          <p><strong>Raison du rejet :</strong></p>
          <p class="mt-1"><%= @listing.validation_comment %></p>
        </div>
      </div>
    </div>
  <% elsif @listing.pending_validation? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="text-sm text-yellow-800">
          <p><strong>En attente de validation</strong></p>
          <p class="mt-1">Votre annonce est en cours de validation par notre √©quipe. Vous serez notifi√© une fois la validation effectu√©e.</p>
          <% if @listing.days_pending.present? %>
            <p class="mt-1">En attente depuis <%= @listing.days_pending %> jour<%= @listing.days_pending > 1 ? 's' : '' %>.</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Column: Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Informations de base</h3>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Secteur d'activit√©</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @listing.industry_sector&.humanize || '-' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Localisation</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= [@listing.location_city, @listing.location_department, @listing.location_region].compact.join(', ').presence || '-' %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Type de clients</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @listing.customer_type&.upcase || '-' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Anciennet√©</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @listing.company_age.present? ? "#{@listing.company_age} ans" : '-' %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Financial Information -->
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Donn√©es financi√®res</h3>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Chiffre d'affaires annuel</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @listing.annual_revenue.present? ? number_to_currency(@listing.annual_revenue, unit: '‚Ç¨', separator: ',', delimiter: ' ', format: '%n %u') : '-' %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">R√©sultat net</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @listing.net_profit.present? ? number_to_currency(@listing.net_profit, unit: '‚Ç¨', separator: ',', delimiter: ' ', format: '%n %u') : '-' %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Effectif</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @listing.employee_count.present? ? "#{@listing.employee_count} salari√©#{ @listing.employee_count > 1 ? 's' : '' }" : '-' %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Pricing -->
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Prix et conditions</h3>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Prix demand√©</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @listing.asking_price.present? ? number_to_currency(@listing.asking_price, unit: '‚Ç¨', separator: ',', delimiter: ' ', format: '%n %u') : '-' %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Fourchette de prix</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @listing.price_min.present? && @listing.price_max.present? %>
                <%= number_to_currency(@listing.price_min, unit: '‚Ç¨', separator: ',', delimiter: ' ', format: '%n %u') %> - 
                <%= number_to_currency(@listing.price_max, unit: '‚Ç¨', separator: ',', delimiter: ' ', format: '%n %u') %>
              <% else %>
                -
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Horizon de transmission</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @listing.transfer_horizon || '-' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Type de transmission</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @listing.transfer_type&.humanize || '-' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Forme juridique</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @listing.legal_form || '-' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Type de mandat</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @listing.deal_type&.humanize || '-' %></dd>
          </div>
        </dl>
      </div>

      <!-- Descriptions -->
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Description publique</h3>
        <p class="text-gray-700 whitespace-pre-line"><%= @listing.description_public || 'Aucune description publique' %></p>
      </div>

      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Description confidentielle</h3>
        <p class="text-gray-700 whitespace-pre-line"><%= @listing.description_confidential || 'Aucune description confidentielle' %></p>
      </div>
    </div>

    <!-- Right Column: Stats & Actions -->
    <div class="space-y-6">
      <!-- Stats Card -->
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Statistiques</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Vues</span>
            <span class="text-lg font-semibold text-gray-900"><%= @listing.views_count || 0 %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Favoris</span>
            <span class="text-lg font-semibold text-gray-900"><%= @listing.favorites.count %></span>
          </div>
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm text-gray-600">Compl√©tude</span>
              <span class="text-lg font-semibold text-gray-900"><%= @listing.calculate_completeness %>%</span>
            </div>
            <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
              <div class="h-full bg-gradient-to-r from-seller-400 to-seller-600 transition-all duration-300" style="width: <%= @listing.calculate_completeness %>%"></div>
            </div>
            <% if @listing.calculate_completeness < 70 %>
              <p class="text-xs text-gray-500 mt-2">
                üí° Augmentez la compl√©tude pour am√©liorer vos chances de validation
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Actions rapides</h3>
        <div class="space-y-3">
          <%= link_to analytics_seller_listing_path(@listing), class: "flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition" do %>
            <svg class="w-5 h-5 text-seller-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">Voir les analytics</p>
              <p class="text-xs text-gray-500">Vues, favoris, etc.</p>
            </div>
          <% end %>

          <%= link_to seller_buyers_path(listing_id: @listing.id), class: "flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition" do %>
            <svg class="w-5 h-5 text-seller-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">Pousser √† un acheteur</p>
              <p class="text-xs text-gray-500">Co√ªte des cr√©dits</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Additional Info -->
      <% if @listing.website.present? %>
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Informations compl√©mentaires</h3>
          <div class="space-y-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Site web</dt>
              <dd class="mt-1">
                <%= link_to @listing.website, @listing.website, target: '_blank', rel: 'noopener', class: "text-sm text-seller-600 hover:text-seller-700 underline" %>
              </dd>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Documents Section -->
  <div class="lg:col-span-3 bg-white rounded-xl shadow-sm p-6 border border-gray-200">
    <%= render 'seller/listings/documents_section', listing: @listing %>
  </div>
</div>
