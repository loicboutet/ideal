<% content_for :title, "Mes annonces - Cédant - Idéal Reprise" %>
<% content_for :page_title, "Mes annonces" %>

<div class="max-w-7xl mx-auto space-y-6">
  <!-- Header with Create Button -->
  <div class="flex items-center justify-between">
    <div class="flex-1">
      <h2 class="text-2xl font-bold text-gray-900">Mes annonces</h2>
      <p class="text-gray-600 mt-1">Gérez vos annonces et suivez leur statut de validation</p>
    </div>
    <%= link_to new_seller_listing_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-seller-600 text-white rounded-full font-medium hover:bg-seller-700 transition shadow-lg" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Créer une annonce
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-4 gap-4">
    <div class="bg-white rounded-xl shadow-sm p-4 border-l-4 border-gray-400">
      <div class="text-sm text-gray-600">Total</div>
      <div class="text-2xl font-bold text-gray-900"><%= @stats[:total] %></div>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm p-4 border-l-4 border-yellow-400">
      <div class="text-sm text-gray-600">En attente</div>
      <div class="text-2xl font-bold text-yellow-600"><%= @stats[:pending] %></div>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm p-4 border-l-4 border-green-400">
      <div class="text-sm text-gray-600">Approuvées</div>
      <div class="text-2xl font-bold text-green-600"><%= @stats[:approved] %></div>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm p-4 border-l-4 border-red-400">
      <div class="text-sm text-gray-600">Rejetées</div>
      <div class="text-2xl font-bold text-red-600"><%= @stats[:rejected] %></div>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="bg-white rounded-xl shadow-sm">
    <div class="border-b border-gray-200">
      <nav class="flex space-x-8 px-6" aria-label="Tabs">
        <%= link_to seller_listings_path(filter: 'all'), 
            class: "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap #{@filter == 'all' ? 'border-seller-500 text-seller-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
          Toutes (<%= @stats[:total] %>)
        <% end %>
        
        <%= link_to seller_listings_path(filter: 'pending'), 
            class: "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap #{@filter == 'pending' ? 'border-seller-500 text-seller-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
          En attente (<%= @stats[:pending] %>)
        <% end %>
        
        <%= link_to seller_listings_path(filter: 'approved'), 
            class: "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap #{@filter == 'approved' ? 'border-seller-500 text-seller-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
          Approuvées (<%= @stats[:approved] %>)
        <% end %>
        
        <%= link_to seller_listings_path(filter: 'rejected'), 
            class: "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap #{@filter == 'rejected' ? 'border-seller-500 text-seller-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
          Rejetées (<%= @stats[:rejected] %>)
        <% end %>
      </nav>
    </div>

    <!-- Listings List -->
    <div class="divide-y divide-gray-200">
      <% if @listings.any? %>
        <% @listings.each do |listing| %>
          <%= render 'listing_card', listing: listing %>
        <% end %>
      <% else %>
        <div class="p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune annonce</h3>
          <p class="mt-1 text-sm text-gray-500">
            <% if @filter == 'pending' %>
              Vous n'avez aucune annonce en attente de validation.
            <% elsif @filter == 'approved' %>
              Vous n'avez aucune annonce approuvée.
            <% elsif @filter == 'rejected' %>
              Vous n'avez aucune annonce rejetée.
            <% else %>
              Commencez par créer votre première annonce.
            <% end %>
          </p>
          <%= link_to new_seller_listing_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-seller-600 hover:bg-seller-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Créer une annonce
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
