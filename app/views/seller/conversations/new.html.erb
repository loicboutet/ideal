<% content_for :page_title, "Nouvelle conversation" %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Démarrer une nouvelle conversation</h1>
    
    <%= form_with url: seller_conversations_path, method: :post, class: "space-y-6" do |f| %>
      <!-- Select Buyer and Listing -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Sélectionnez un repreneur
        </label>
        <select name="buyer_id" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500">
          <option value="">-- Choisir un repreneur --</option>
          <% @buyers.each do |buyer| %>
            <option value="<%= buyer.id %>">
              <%= buyer.full_name %> - <%= buyer.email %>
            </option>
          <% end %>
        </select>
        <p class="mt-2 text-sm text-gray-500">
          Sélectionnez le repreneur avec qui vous souhaitez échanger.
        </p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          À propos de (optionnel)
        </label>
        <select name="listing_id" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500">
          <option value="">-- Aucune annonce spécifique --</option>
          <% @my_listings.each do |listing| %>
            <option value="<%= listing.id %>">
              <%= listing.title %>
            </option>
          <% end %>
        </select>
        <p class="mt-2 text-sm text-gray-500">
          Vous pouvez lier cette conversation à une de vos annonces (optionnel).
        </p>
      </div>

      <!-- Actions -->
      <div class="flex items-center gap-4 pt-4">
        <%= f.submit "Démarrer la conversation", class: "px-6 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition font-medium" %>
        <%= link_to "Annuler", seller_conversations_path, class: "px-6 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition" %>
      </div>
    <% end %>
  </div>
</div>
