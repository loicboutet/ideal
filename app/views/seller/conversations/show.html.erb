<% content_for :page_title, "Messages" %>

<div class="flex h-[calc(100vh-8rem)] bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden" 
     data-controller="conversation"
     data-conversation-conversation-id-value="<%= @conversation.id %>"
     data-conversation-current-user-id-value="<%= current_user.id %>">
  <!-- Conversations List -->
  <div class="w-80 border-r border-gray-200 flex flex-col">
    <!-- Header -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-bold text-gray-900">Messages</h2>
      </div>
    </div>

    <!-- Current conversation highlight -->
    <div class="flex-1 overflow-y-auto">
      <%= link_to seller_conversation_path(@conversation), class: "block p-4 bg-orange-50 border-b border-gray-100" do %>
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-red-600 rounded-full flex items-center justify-center text-white font-semibold text-sm flex-shrink-0">
            <%= @conversation.other_participant(current_user)&.first_name&.first&.upcase || 'U' %>
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-medium text-gray-900 truncate">
              <%= @conversation.other_participant(current_user)&.full_name || 'Utilisateur' %>
            </h3>
            <% if @conversation.listing %>
              <p class="text-sm text-gray-600 truncate">Re: <%= @conversation.listing.title %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Messages Area -->
  <div class="flex-1 flex flex-col">
    <!-- Chat Header -->
    <div class="p-4 border-b border-gray-200 bg-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-red-600 rounded-full flex items-center justify-center text-white font-semibold">
            <%= @conversation.other_participant(current_user)&.first_name&.first&.upcase || 'U' %>
          </div>
          <div>
            <h2 class="font-semibold text-gray-900"><%= @conversation.other_participant(current_user)&.full_name || 'Utilisateur' %></h2>
            <% if @conversation.listing %>
              <p class="text-sm text-gray-600">Re: <%= @conversation.listing.title %></p>
            <% end %>
          </div>
        </div>
        <%= link_to seller_conversations_path, class: "text-sm text-orange-600 hover:text-orange-700" do %>
          ← Retour aux conversations
        <% end %>
      </div>
    </div>

    <!-- Messages -->
    <div class="flex-1 overflow-y-auto p-4 bg-gray-50 space-y-4" data-conversation-target="messages">
      <% @messages.each do |message| %>
        <%= render 'messages/message', message: message, current_user: current_user %>
      <% end %>
    </div>

    <!-- Message Input -->
    <div class="p-4 border-t border-gray-200 bg-white">
      <%= form_with model: [@conversation, @message], 
                    url: seller_conversation_messages_path(@conversation), 
                    class: "flex gap-2",
                    data: { 
                      conversation_target: "form",
                      action: "submit->conversation#submitMessage",
                      turbo: false
                    } do |f| %>
        <%= f.text_area :body, 
                        rows: 2, 
                        class: "flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent resize-none", 
                        placeholder: "Écrivez votre message...",
                        data: { conversation_target: "input" } %>
        <%= f.submit "Envoyer", class: "px-6 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition font-medium" %>
      <% end %>
    </div>
  </div>
</div>
