<% content_for :title, "Notifications - IDEAL" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-900">Notifications</h1>
        <% if @unread_count > 0 %>
          <%= button_to mark_all_as_read_notifications_path, method: :post, class: "text-sm text-blue-600 hover:text-blue-700 font-medium" do %>
            Tout marquer comme lu
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Filters Sidebar -->
      <aside class="lg:w-64 flex-shrink-0">
        <div class="bg-white rounded-lg shadow-sm p-6 sticky top-8">
          <h2 class="font-bold text-gray-900 mb-4">Filtres</h2>
          
          <!-- Status Filter -->
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Statut</h3>
            <div class="space-y-2">
              <label class="flex items-center cursor-pointer">
                <input type="radio" name="status" value="all" checked class="w-4 h-4 text-blue-600 focus:ring-blue-500">
                <span class="ml-3 text-sm text-gray-900 font-medium">Toutes (<%= @total_count %>)</span>
              </label>
              <label class="flex items-center cursor-pointer">
                <input type="radio" name="status" value="unread" class="w-4 h-4 text-blue-600 focus:ring-blue-500">
                <span class="ml-3 text-sm text-gray-700">Non lues (<%= @unread_count %>)</span>
              </label>
              <label class="flex items-center cursor-pointer">
                <input type="radio" name="status" value="read" class="w-4 h-4 text-blue-600 focus:ring-blue-500">
                <span class="ml-3 text-sm text-gray-700">Lues (<%= @total_count - @unread_count %>)</span>
              </label>
            </div>
          </div>
        </div>
      </aside>

      <!-- Notifications List -->
      <main class="flex-1">
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <% if @notifications.any? %>
            <% @notifications.each do |recipient| %>
              <% message = recipient.admin_message %>
              <%= link_to notification_path(recipient), class: "block hover:bg-gray-50 transition-colors border-b border-gray-200 #{recipient.read? ? 'bg-gray-50 opacity-75' : ''}" do %>
                <div class="p-6 flex gap-4">
                  <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <% if message.survey? || message.questionnaire? %>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                      <% else %>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                      <% end %>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between gap-4 mb-2">
                      <h3 class="font-semibold text-gray-900"><%= message.subject %></h3>
                      <div class="flex items-center gap-3 flex-shrink-0">
                        <% unless recipient.read? %>
                          <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                        <% end %>
                        <span class="text-sm text-gray-500"><%= time_ago_in_words(recipient.created_at) %> ago</span>
                      </div>
                    </div>
                    <p class="text-gray-600 text-sm mb-3">
                      <%= truncate(message.body, length: 150) %>
                    </p>
                    <div class="flex items-center gap-2">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= message.broadcast? ? 'bg-blue-100 text-blue-700' : message.survey? || message.questionnaire? ? 'bg-purple-100 text-purple-700' : 'bg-gray-100 text-gray-700' %>">
                        <%= message.message_type.humanize %>
                      </span>
                      <% if message.show_in_dashboard %>
                        <span class="text-xs text-gray-500">Dashboard</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>

            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-gray-200">
              <%= paginate @notifications %>
            </div>
          <% else %>
            <div class="p-12 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune notification</h3>
              <p class="mt-1 text-sm text-gray-500">Vous n'avez re√ßu aucune notification pour le moment.</p>
            </div>
          <% end %>
        </div>
      </main>
    </div>
  </div>
</div>
