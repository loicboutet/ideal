<% content_for :title, "#{@listing.title} - #{@listing.location_city.presence || @listing.location_department.presence || 'France'} - Idéal Reprise" %>

<%
  # Sector labels
  sector_labels = {
    'commerce' => 'Commerce',
    'hospitality' => 'Hôtellerie/Restauration',
    'services' => 'Services',
    'industry' => 'Industrie',
    'digital' => 'Digital',
    'construction' => 'BTP',
    'healthcare' => 'Santé',
    'transport_logistics' => 'Transport',
    'agrifood' => 'Agroalimentaire',
    'real_estate' => 'Immobilier',
    'other' => 'Autre'
  }
  
  sector_colors = {
    'commerce' => 'from-blue-500 to-blue-600 text-blue-600',
    'hospitality' => 'from-green-500 to-green-600 text-green-600',
    'services' => 'from-purple-500 to-purple-600 text-purple-600',
    'industry' => 'from-orange-500 to-orange-600 text-orange-600',
    'digital' => 'from-indigo-500 to-indigo-600 text-indigo-600',
    'construction' => 'from-amber-500 to-amber-600 text-amber-600',
    'healthcare' => 'from-red-500 to-red-600 text-red-600',
    'transport_logistics' => 'from-cyan-500 to-cyan-600 text-cyan-600',
    'agrifood' => 'from-lime-500 to-lime-600 text-lime-600',
    'real_estate' => 'from-teal-500 to-teal-600 text-teal-600',
    'other' => 'from-gray-500 to-gray-600 text-gray-600'
  }
  
  colors = sector_colors[@listing.industry_sector] || sector_colors['other']
  gradient = colors.split(' ')[0..1].join(' ')
  text_color = colors.split(' ').last
  sector_label = sector_labels[@listing.industry_sector] || 'Autre'
  
  # Format helpers
  def format_price(price)
    return 'N/C' unless price
    if price >= 1_000_000
      "#{(price / 1_000_000.0).round(1)}M €"
    elsif price >= 1_000
      "#{(price / 1_000.0).round(0)}k €"
    else
      "#{price} €"
    end
  end
  
  # Time since publication
  published_time = @listing.published_at || @listing.created_at
  days_ago = ((Time.current - published_time) / 1.day).to_i
  time_label = if days_ago == 0
    "Publié aujourd'hui"
  elsif days_ago == 1
    "Publié hier"
  elsif days_ago < 7
    "Publié il y a #{days_ago} jours"
  elsif days_ago < 30
    "Publié il y a #{(days_ago / 7).to_i} semaine#{'s' if days_ago >= 14}"
  else
    "Publié il y a #{(days_ago / 30).to_i} mois"
  end
%>

